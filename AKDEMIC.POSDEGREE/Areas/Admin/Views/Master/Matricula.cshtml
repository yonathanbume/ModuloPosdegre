
@using AKDEMIC.POSDEGREE.ViewModels;
@{
    ViewData["Title"] = "Matricula";
    Layout = "~/Views/Shared/Templates/Default/_Layout.cshtml";
    ViewData["Breadcrumbs"] = new[] {
new BreadcrumbViewData { Name = (string)ViewData["Title"]}

};  
}
<div class="m-content">

    <div class="m-portlet">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <h3 class="m-portlet__head-text">Datos del Alumno</h3>
                </div>
            </div>
        </div>
        <div class="m-portlet__body">
            
            <form>
                <div class="form-group row">
                    <label for="inputMatricula" class="col-sm-2 col-form-label">Tipo de Matricula</label>
                    <div class="col-sm-10">
                         <select class="form-control"><option>Regular</option> </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputSemestre" class="col-sm-2 col-form-label">Semestre</label>
                    <div class="col-sm-10">
                        <select class="form-control"><option>2023-I</option> </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputPassword" class="col-sm-2 col-form-label">Sede</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="idSede">
                    </div>
                </div>
                 <div class="form-group row">
                    <label for="inputPassword" class="col-sm-2 col-form-label">Programa de estudios</label>
                        <div class="col-sm-10">
                        <input type="text" class="form-control" id="inputPassword">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputPassword" class="col-sm-2 col-form-label">Malla curricular</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="inputPassword">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputPassword" class="col-sm-2 col-form-label">Apellido y Nombre</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" id="inputPassword">
                    </div>
                     <label for="inputPassword" class="col-sm-2 col-form-label">codigo</label>
                     <div class="col-sm-4">
                        <input type="text" class="form-control" id="inputPassword">
                     </div>
                </div>
                <div class="form-group row">
                    <label for="inputPassword" class="col-sm-2 col-form-label">Modalidad</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="inputPassword">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputPassword" class="col-sm-2 col-form-label">Pago Matricula</label>
                    <div class="col-sm-5">
                       <button class="btn-success">si</button>
                    </div>
                    <div class="col-sm-3">
                      <input type="text" class="form-control m-input m-input--pill m-input--solid" placeholder="Buscar..." id="search">
                         <span class="m-input-icon__icon m-input-icon__icon--left">
                         <span><i class="la la-search"></i></span></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputPassword" class="col-sm-2 col-form-label">Prom. Ponderado</label>
                        <div class="col-sm-10">
                        <input type="text" class="form-control" id="inputPassword">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputPassword" class="col-sm-2 col-form-label">Ciclo</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="inputPassword">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputPassword" class="col-sm-2 col-form-label">Minimo Creditos</label>
                    <div class="col-sm-10">
                        <input type="number" class="form-control" id="inputPassword">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputPassword" class="col-sm-2 col-form-label">Maximo Credito</label>
                    <div class="col-sm-10">
                        <input type="number" class="form-control" id="inputPassword">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputPassword" class="col-sm-2 col-form-label">Turno</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="inputPassword">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputPassword" class="col-sm-2 col-form-label">Tipo de programa</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="inputPassword">
                    </div>
                </div>
            </form>
          
            <table class="table table-striped table-bordered" id="datatable_data"></table>
        </div>
    </div>

</div>
@section Scripts{
    <script src="~/js/modules/form.js"></script>
    <script src="~/js/areas/admin/masters/Index.js" asp-append-version="true"></script>

}
