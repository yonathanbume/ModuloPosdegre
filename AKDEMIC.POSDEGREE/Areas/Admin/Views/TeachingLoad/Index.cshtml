@using AKDEMIC.POSDEGREE.ViewModels;

@{
    ViewData["Title"] = "Registro de  Carga Academica";
    Layout = "~/Views/Shared/Templates/Default/_Layout.cshtml";
    ViewData["Breadcrumbs"] = new[] {
new BreadcrumbViewData { Name = (string)ViewData["Title"]}

};

}
<div class="m-content">

    <div class="m-portlet">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <h3 class="m-portlet__head-text">Registro de Carga Academica</h3>
                </div>
            </div>
        </div>
        <form id="add-teacher" method="post">
            <div class="modal-body">
                <div class="form-group row">
                    <div class="form-group m-form__group col- col-lg-12">
                        <input type="hidden" name="Id" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="form-group m-form__group col- col-lg-12">
                        <label id="Nombre">Maestria:</label>
                        <select id="frutas" name="frutas">
                            <option value="manzana">Manzana</option>
                            <option value="naranja">Naranja</option>
                            <option value="banana">Banana</option>
                            <option value="uva">Uva</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="form-group m-form__group col- col-lg-12">
                        <label id="APaterno">Semestre:</label>
                         <select id="frutas" name="frutas">
                            <option value="manzana">Manzana</option>
                            <option value="naranja">Naranja</option>
                            <option value="banana">Banana</option>
                            <option value="uva">Uva</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="form-group m-form__group col- col-lg-12">
                        <label id="AMaterno">Asignatura:</label>
                         <select id="frutas" name="frutas">
                            <option value="manzana">Manzana</option>
                            <option value="naranja">Naranja</option>
                            <option value="banana">Banana</option>
                            <option value="uva">Uva</option>
                        </select>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="form-group m-form__group col- col-lg-12">
                        <label id="Email">Docente:</label>
                         <select id="frutas" name="frutas">
                            <option value="manzana">Manzana</option>
                            <option value="naranja">Naranja</option>
                            <option value="banana">Banana</option>
                            <option value="uva">Uva</option>
                        </select>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <div style="text-align:right;">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">
                        Cerrar
                    </button>
                    <button type="submit" class="btn btn-primary btn-action ladda-button" data-style="slide-down">
                        <span class="ladda-label">Guardar</span>
                    </button>
                </div>
            </div>
        </form>
        <div class="m-portlet__body">
            <table class="table table-striped table-bordered" id="datatable_data"></table>
        </div>
    </div>

</div>



@section Scripts{
    <script src="~/js/modules/form.js"></script>
    <script src="" asp-append-version="true"></script>

}
