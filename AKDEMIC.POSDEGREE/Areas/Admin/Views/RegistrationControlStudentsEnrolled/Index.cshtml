@using AKDEMIC.POSDEGREE.ViewModels;

@{
    ViewData["Title"] = "listado de Estudiantes";
     Layout = "~/Views/Shared/Templates/Default/_Layout.cshtml";
    ViewData["Breadcrumbs"] = new[] {
new BreadcrumbViewData { Name = (string)ViewData["Title"]}

};

}
<div class="m-content">
    <div class="m-portlet">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <h3 class="m-portlet__head-text">Lista de Estudinates</h3>
                </div>
            </div>
            <div class="m-portlet_header-tools">
                <a class="btn btn-primary btn-action btn-sm mt-3" href="Student/registrar"
                   data-toggle="modal" data-target="#AddStudent" id="add_projectDirector">
                    <span>
                        <i class="fa fa-plus"></i>
                        Agregar
                    </span>
                </a>
            </div>
        </div>
        <div class="m-portlet__body">
            <div class="m-form--label-align-right m--margin-top-20 m--margin-bottom-30">
                <div class="row align-items-center">
                    <div class="col-xl-12 order-2 order-xl-1">
                        <div class="row">
                            <div class="form-group m-form__group col-xl-3">
                                <label>&emsp;</label>
                                <div class="m-input m-input-icon m-input-icon--left">
                                    
                                </div>
                            </div>
                            <div class="form-group m-form__group col-xl-3  m--margin-top-25">
                                <label>DNI</label>
                                <div class="m-input">
                                    <input type="text" class="form-control m-input" id="startDate" placeholder="dni">
                                </div>
                            </div>
                        
                            <div class="form-group m-form__group col-xl-3  m--margin-top-25">
                                <label>&emsp;</label>
                                <div class="m-input">
                                    <button type="button" id="btn-search" class="btn btn-primary" ><i class="la la-search"></i></button>
                                </div>
                               
                            </div>
                          
                        </div>
                        <div class="row">

                            <div class="form-group m-form__group col-xl-4">
                                <label>&emsp;</label>
                                <div class="m-input m-input-icon m-input-icon--left">
                                    <input type="text" class="form-control m-input m-input--pill m-input--solid" placeholder="Buscar..." id="search">
                                    <span class="m-input-icon__icon m-input-icon__icon--left">
                                        <span><i class="la la-search"></i></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
           <table class="table table-striped table-bordered" id="datatable_data"></table>
        </div>
    </div>
</div>
<div id="AddStudent" class="modal fade" role="dialog">
    <div class="modal-dialog " role="document">
        <div class="modal-content ">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">
                    Registrar Alumno de Posgrado
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="add-student" method="post">
                <div class="modal-body">
                    <div class="form-group row">
                        <div class="form-group m-form__group col- col-lg-12">

                            <input type="hidden" name="Id" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="form-group m-form__group col- col-lg-6">
                            <label id="dni">Dni</label>
                            <input type="number"  name="Dni" class="form-control"  id="dnipersonal" maxlength="200" required />
                        </div>
                        <div class="form-group m-form__group col- col-lg-6">
                            <label id="nombre">Nombre</label>
                            <input type="text" name="Nombre" id="namepersonal" class="form-control" maxlength="200" required />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="form-group m-form__group col- col-lg-6">
                            <label id="apellidoP">Apellido Paterno</label>
                            <input type="text" name="ApellidoP" class="form-control" maxlength="200" required placeholder="apellidos paterno" />
                        </div>
                        <div class="form-group m-form__group col- col-lg-6">
                            <label id="apellidoM">Apellido Materno</label>
                            <input type="text" name="ApellidoM" class="form-control" maxlength="200" required placeholder="apellido materno" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="form-group m-form__group col- col-lg-6">
                            <label id="telefono">telefono</label>
                            <input type="number" name="telefono" class="form-control" maxlength="200" />
                        </div>
                        <div class="form-group m-form__group col- col-lg-6">
                            <label id="Codigo">cod posgrado</label>
                            <input type="text" name="Codigo" class="form-control" maxlength="200" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="form-group m-form__group col- col-lg-12">
                            <label id="email">Email</label>
                            <input type="text" name="email" class="form-control" maxlength="200" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="form-group m-form__group col- col-lg-12">
                            <label id="direccion">Direccion</label>
                            <input type="text" name="direccion" class="form-control" maxlength="200" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="archivo">cargar bachiller</label>
                        <input type="file" name="File" class="form-control-file" id="archivo">
                    </div>

                </div>

                <div class="modal-footer">
                    <div style="text-align:right;">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">
                            Cerrar
                        </button>
                        <button type="submit" class="btn btn-primary btn-action ladda-button" data-style="slide-down">
                            <span class="ladda-label">Guardar</span>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/js/modules/form.js"></script>
    <script src="~/js/areas/admin/RegistrationControlStudentsEnrolled/Index.js" asp-append-version="true"></script>
}
