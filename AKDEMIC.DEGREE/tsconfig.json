{
  "compileOnSave": true,
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "ES6",

    "allowJs": true,
    "disableSizeLimit": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "wwwroot/js/**/*.ts",
    "wwwroot/js/*.ts"
  ]
}
