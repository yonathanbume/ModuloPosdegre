@using AKDEMIC.DEGREE.Areas.Admin.Models.HistoricalRegistryPatternViewModels
@model HistoricalRegistryPatternViewModel
@{
    ViewData["Title"] = "Histórico de Padrones";
    ViewData["Breadcrumbs"] = new[] {
new BreadcrumbViewData { Name = "Histórico de Padrones" }
};
}
<div class="m-content">
    <div class="m-portlet">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <h3 class="m-portlet__head-text">
                        Listado de histórico de padrones de registro
                    </h3>
                </div>
            </div>
        </div>
        <div class="m-portlet__body">
            <div class="m-form--label-align-right m--margin-bottom-20">
                <div class="row align-items-center">
                    <div class="col-xl-8 order-2 order-xl-1">
                        <div class="row">
                            <div class="form-group m-form__group col-xl-4">
                                <div class="m-input m-input-icon m-input-icon--left">
                                    <input type="text" class="form-control m-input m-input--pill m-input--solid" placeholder="Buscar..." id="search">
                                    <span class="m-input-icon__icon m-input-icon__icon--left">
                                        <span><i class="la la-search"></i></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-4 order-1 order-xl-2 m--align-right">
                        <button class="btn btn-sm btn-primary m-btn m-btn--icon" data-toggle="modal" data-target="#create-modal" >
                            <span>
                                <i class="la la-plus"></i>
                                <span>Nuevo</span>
                            </span>
                        </button>
                        <div class="m-separator m-separator--dashed d-xl-none"></div>
                    </div>
                </div>
            </div>
            <table class="table table-striped table-bordered" id="data-table"></table>
        </div>
    </div>
</div>

<div id="create-modal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    Nuevo historial de padrones
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="create-form" asp-action="Create" asp-area="Admin" asp-controller="HistoricalRegistryPattern">
                <div class="modal-body">
                    <div class="m-alert m-alert--icon alert alert-danger m--hide" role="alert" id="create-form-alert">
                        <div class="m-alert__icon">
                            <i class="la la-warning"></i>
                        </div>
                        <div class="m-alert__text" id="create-form-alert-txt">
                            Por favor, corrija los errores pertinentes
                        </div>
                        <div class="m-alert__close">
                            <button type="button" class="close" data-close="alert" aria-label="Close"></button>
                        </div>
                    </div>
                    <div class="form-group m-form__group">
                        <label asp-for="OfficeNumber" class="required-form-label"></label>
                        <input asp-for="OfficeNumber" id="cOfficeNumber" type="text" class="form-control m-input" placeholder="Número" required>
                    </div>
                    <div class="form-group m-form__group">
                        <label asp-for="Description" class="required-form-label"></label>
                        <input asp-for="Description" id="cDescription" type="text" class="form-control m-input" placeholder="Descripción" required>
                    </div>
                    <div class="form-group m-form__group">
                        <label class="required-form-label">Archivo</label>
                        <div class="custom-file">
                            <input asp-for="File" type="file" id="cFile" class="custom-file-input directedcourse-file" lang="es" accept="application/vnd.openxmlformats-officedocument.spreadsheetml.sheet, application/vnd.ms-excel" />
                            <label class="custom-file-label" for="cFile">
                                Seleccione un archivo
                            </label>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">
                        Cerrar
                    </button>
                    <button type="submit" class="btn btn-primary btn-save">
                        Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<div id="edit-modal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    Editar historial de padrones
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="edit-form" asp-action="Edit" asp-area="Admin" asp-controller="HistoricalRegistryPattern">
                <div class="modal-body">
                    <div class="m-alert m-alert--icon alert alert-danger m--hide" role="alert" id="edit-modal-alert">
                        <div class="m-alert__icon">
                            <i class="la la-warning"></i>
                        </div>
                        <div class="m-alert__text" id="edit-modal-alert-txt">
                            Por favor, corrija los errores pertinentes
                        </div>
                        <div class="m-alert__close">
                            <button type="button" class="close" data-close="alert" aria-label="Close"></button>
                        </div>
                    </div>
                    <input asp-for="Id" id="eId" hidden />
                    <div class="form-group m-form__group">
                        <label asp-for="OfficeNumber" class="required-form-label"></label>
                        <input asp-for="OfficeNumber" id="eOfficeNumber" type="text" class="form-control m-input" placeholder="Número" required>
                    </div>
                    <div class="form-group m-form__group">
                        <label asp-for="Description" class="required-form-label"></label>
                        <input asp-for="Description" id="eDescription" type="text" class="form-control m-input" placeholder="Descripción" required>
                    </div>
                    <div class="form-group m-form__group">
                        <label class="required-form-label">Archivo</label>
                        <div class="custom-file">
                            <input asp-for="File" type="file" id="eFile" class="custom-file-input directedcourse-file" lang="es" />
                            <label class="custom-file-label" for="eFile">
                                Seleccione un archivo
                            </label>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">
                        Cerrar
                    </button>
                    <button type="submit" class="btn btn-primary">
                        Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/lib/jquery.fileDownload/jquery.fileDownload.min.js"></script>
    <script src="~/js/areas/admin/historicalregistrypattern/index.js" asp-append-version="true"></script>
}