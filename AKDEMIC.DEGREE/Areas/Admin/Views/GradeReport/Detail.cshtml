@model AKDEMIC.DEGREE.Areas.Admin.Models.GradeReportViewModels.GradeReportDetailViewModel
@{
    ViewBag.Title = "Detalle de Informe de Grado";
    ViewBag.SubTitle = "Informes de grado";
    ViewBag.Breadcrumbs = new[] {
new BreadcrumbViewData { Name = "Detalle del informe de grado", Controller = null, Action = null },
};
}

<div class="m-content">
    <div class="m-portlet m-portlet--tabs">
        <div class="m-portlet__head">
            <div class="m-portlet__head-tools">
                <ul class="nav nav-tabs m-tabs-line m-tabs-line--primary m-tabs-line--2x" role="tablist">
                    <li class="nav-item m-tabs__item">
                        <a class="nav-link m-tabs__link active" data-toggle="tab" href="#m_tabs_6_1" role="tab">
                            <i class="la la-user"></i> Datos de Interesado
                        </a>
                    </li>
                    <li class="nav-item m-tabs__item">
                        <a class="nav-link m-tabs__link" data-toggle="tab" href="#m_tabs_6_2" role="tab">
                            <i class="la la-edit"></i> Datos de Informe
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="m-portlet__body">
            <div class="tab-content">
                <div class="tab-pane active" id="m_tabs_6_1" role="tabpanel">
                    <div class="modal-body">
                        <div id="div-rendering">
                            <div class="form-group m-form__group">
                                <label for="Code">C&oacute;digo</label>
                                <input asp-for="UserName" type="text" class="form-control" name="Code" disabled />
                            </div>
                            <div class="form-group m-form__group">
                                <label for="PaternalSurName">Apellido Paterno</label>
                                <input asp-for="PaternalSurname" type="text" class="form-control" name="PaternalSurName" disabled />
                            </div>
                            <div class="form-group m-form__group">
                                <label for="MaternalSurName">Apellido Materno</label>
                                <input asp-for="MaternalSurname" type="text" class="form-control" name="MaternalSurName" disabled />
                            </div>
                            <div class="form-group m-form__group">
                                <label for="Name">Nombres</label>
                                <input asp-for="Name" type="text" class="form-control" name="Name" disabled />
                            </div>
                            <div class="form-group m-form__group">
                                <label for="Faculty">Facultad</label>
                                <input asp-for="FacultyName" type="text" class="form-control" name="Faculty" disabled />
                            </div>
                            <div class="form-group m-form__group">
                                <label for="Career">Escuela Profesional</label>
                                <input asp-for="CareerName" type="text" class="form-control" name="Career" disabled />
                            </div>
                            <div class="form-group m-form__group">
                                <label for="CurricularSystem">Sistema Curricular</label>
                                <input asp-for="CurricularSystem" type="text" class="form-control" name="CurricularSystem" disabled />
                            </div>
                            <div class="form-group m-form__group">
                                <label for="Curriculum">Plan de estudios</label>
                                <input asp-for="Curriculum" type="text" class="form-control" name="Curriculum" disabled />
                            </div>
                            <div class="form-group m-form__group">
                                <label for="AcademicProgram">Especialidad</label>
                                <input asp-for="AcademicProgram" type="text" class="form-control" name="AcademicProgram" disabled />
                            </div>
                        </div>
                    </div>

                </div>
                <div class="tab-pane" id="m_tabs_6_2" role="tabpanel">
                    <form>
                        <div class="modal-body">
                            <div class="form-group m-form__group">
                                @if (Model.IsIntegrated)
                                {
                                    <label for="ProcedureId">Trámite</label>
                                    <select asp-for="ProcedureId" class="form-control m-select2" required disabled></select>
                                }
                                else
                                {
                                    <label for="ConceptId">Concepto</label>
                                    <select asp-for="ConceptId" class="form-control m-select2" required disabled></select>
                                }
                            </div>
                            <div class="form-group m-form__group">
                                <label for="Year">A&ntilde;o</label>
                                <input asp-for="Year" type="number" class="form-control" autocomplete="off" min="1" required disabled />
                            </div>
                            <div class="form-group m-form__group">
                                <label for="Number">N&uacute;mero</label>
                                <input asp-for="Number" type="number" class="form-control" autocomplete="off" min="1" required disabled />
                            </div>
                            <div class="form-group m-form__group">
                                <label for="Date">Fecha</label>
                                <input asp-for="Date" type="text" class="form-control" autocomplete="off" required disabled />
                            </div>
                            <div class="form-group m-form__group">
                                <label for="YearsStudied">Años Estudiados</label>
                                <input asp-for="YearsStudied" type="number" class="form-control" autocomplete="off" required disabled />
                            </div>
                            <div class="form-group m-form__group">
                                <label for="SemesterStudied">Semestres Estudiados</label>
                                <input asp-for="SemesterStudied" type="number" class="form-control" autocomplete="off" required disabled />
                            </div>
                            <div class="form-group m-form__group">
                                <label for="AdmissionTermId">Año de Ingreso</label>
                                <select asp-for="AdmissionTermId" class="form-control" autocomplete="off" required disabled></select>
                            </div>
                            <div class="form-group m-form__group">
                                <label for="GraduationTermId">Año de Egreso</label>
                                <select asp-for="GraduationTermId" class="form-control" autocomplete="off" required disabled></select>
                            </div>
                            <div class="form-group m-form__group">
                                <label for="PromotionGrade">Nota de Promoción</label>
                                <input asp-for="PromotionGrade" type="number" class="form-control" autocomplete="off" min="1" required disabled />
                            </div>
                            <div class="form-group m-form__group">
                                <label for="Observation">Observaciones</label>
                                <textarea asp-for="Observation" style="resize:none;height:150px;" class="form-control" autocomplete="off" disabled>
                                </textarea>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var conceptId = '@(Model.ConceptId.HasValue ? Model.ConceptId.Value.ToString() : null)';
        var procedureId = '@(Model.ProcedureId.HasValue ? Model.ProcedureId.Value.ToString() : null)';
        var isIntegrated = @(Model.IsIntegrated.ToString().ToLower());
    </script>
    <script src="~/js/areas/admin/grade-report/detail.js"></script>
}
