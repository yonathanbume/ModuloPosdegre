                <span class="m-menu__link-text">
                    Informes de grados y títulos
                </span>
            </a>
        </li>
    }
    @if (User.IsInRole(ConstantHelpers.ROLES.REPORT_QUERIES))
    {
        <li class="m-menu__item " aria-haspopup="true" is-active-route asp-controller="Home" asp-action="Index">
            <a asp-controller="Home" asp-action="Index" asp-route-area="" class="m-menu__link ">
                <i class="m-menu__link-icon la la-home"></i>
                <span class="m-menu__link-text">
                    Inicio
                </span>
            </a>
        </li>
