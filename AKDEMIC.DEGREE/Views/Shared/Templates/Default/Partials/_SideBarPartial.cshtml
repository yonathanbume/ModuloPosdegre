            </a>
        </li>

        @if (MethodTypeRegistryPatternCreation)
        {
            <li class="m-menu__item " aria-haspopup="true" is-active-route asp-controller="DegreeRequirement" asp-action="Index">
                <a asp-controller="DegreeRequirement" asp-action="Index" asp-route-area="Admin" class="m-menu__link ">
                    <i class="m-menu__link-icon flaticon-folder-2"></i>
                    <span class="m-menu__link-text">
                        Gestión de Requerimientos
                    </span>
                </a>
            </li>

            <li class="m-menu__item " aria-haspopup="true" is-active-route asp-controller="ValidationDegreeRequirement" asp-action="Index">
                <a asp-controller="ValidationDegreeRequirement" asp-action="Index" asp-route-area="Admin" class="m-menu__link ">
