    {
        <li class="m-menu__item  m-menu__item--submenu" aria-haspopup="true" m-menu-submenu-toggle="hover">
            <a href="#" class="m-menu__link m-menu__toggle">
                <i class="m-menu__link-icon flaticon-list-3"></i>
                <span class="m-menu__link-text">
                    Reportes
                </span>
                <i class="m-menu__ver-arrow la la-angle-right"></i>
            </a>
            <div class="m-menu__submenu ">
                <span class="m-menu__arrow"></span>
                <ul class="m-menu__subnav">
                    <li class="m-menu__item  m-menu__item--parent" aria-haspopup="true">
                        <span class="m-menu__link">
                            <span class="m-menu__link-text">
                                Reportes
                            </span>
                        </span>
                    </li>
                    <li class="m-menu__item " aria-haspopup="true" is-active-route asp-controller="ReportBachelor" asp-action="Index">
                        <a asp-controller="ReportBachelor" asp-action="Index" asp-route-area="Admin" class="m-menu__link ">
                            <i class="m-menu__link-icon flaticon-share"></i>
                            <span class="m-menu__link-text">
                                Reporte de cantidad de estudiantes bachilleres y titulados
                            </span>
                        </a>
                    </li>
                    <li class="m-menu__item " aria-haspopup="true" is-active-route asp-controller="ReportBachelorsWithOutTUPA" asp-action="Index">
                        <a asp-controller="ReportBachelorsWithOutTUPA" asp-action="Index" asp-route-area="Admin" class="m-menu__link ">
                            <i class="m-menu__link-icon flaticon-share"></i>
                            <span class="m-menu__link-text">
                                Reporte de estudiantes egresados que no han solicitado el Bachiller
                            </span>
                        </a>
                    </li>

                    <li class="m-menu__item " aria-haspopup="true" is-active-route asp-controller="ReportTitleByModality" asp-action="Index">
                        <a asp-controller="ReportTitleByModality" asp-action="Index" asp-route-area="Admin" class="m-menu__link ">
                            <i class="m-menu__link-icon flaticon-share"></i>
                            <span class="m-menu__link-text">
                                Reporte de cantidad de estudiantes titulado según modalidad
                            </span>
                        </a>
                    </li>

                    <li class="m-menu__item" aria-haspopup="true" is-active-route asp-controller="AccessSystemReport" asp-action="Index">
                        <a asp-area="Admin" asp-controller="AccessSystemReport" asp-action="Index" asp-route-area="Admin" class="m-menu__link ">
                            <i class="m-menu__link-icon flaticon-share"></i>
                            <span class="m-menu__link-text">
                                Reporte de accesos al sistema
                            </span>
                        </a>
                    </li>
                    @if (User.IsInRole(ConstantHelpers.ROLES.SUPERADMIN) || User.IsInRole(ConstantHelpers.ROLES.DEGREE_ADMIN))
                    {
                        <li class="m-menu__item" aria-haspopup="true" is-active-route asp-controller="GraduatedStudent" asp-area="Report">
                            <a asp-area="Report" asp-controller="GraduatedStudent" asp-action="Index" class="m-menu__link ">
                                <i class="m-menu__link-icon flaticon-share"></i>
                                <span class="m-menu__link-text">
                                    Reporte de estudiantes egresados
                                </span>
                            </a>
                        </li>
                    }

                </ul>
