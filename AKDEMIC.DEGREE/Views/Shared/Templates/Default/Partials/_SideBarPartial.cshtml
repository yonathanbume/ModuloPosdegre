            </a>
        </li>


        @if (ConstantHelpers.GENERAL.Authentication.SSO_ENABLED)
        {
            <li class="m-menu__item " aria-haspopup="true">
                <a href="@GeneralHelpers.GetApplicationRoute(ConstantHelpers.Solution.Intranet, false)admin/estudiantes-egresados" target="_blank" class="m-menu__link ">
                    <i class="m-menu__link-icon flaticon-background"></i>
                    <span class="m-menu__link-text">
                        Reporte de estudiantes a egresar
                    </span>
                </a>
            </li>
        }

    }
    @if (User.IsInRole(ConstantHelpers.ROLES.ACADEMIC_COORDINATOR))
    {
        <li class="m-menu__item " aria-haspopup="true" is-active-route asp-controller="GradeReport" asp-action="Index">
            <a asp-controller="GradeReport" asp-action="Index" asp-route-area="Admin" class="m-menu__link ">
