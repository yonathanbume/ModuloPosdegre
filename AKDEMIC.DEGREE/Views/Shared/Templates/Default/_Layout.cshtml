@{
    var institutionName = GeneralHelpers.GetInstitutionName();
    var projectName = AKDEMIC.DEGREE.Helpers.ConstantHelpers.Project.NAME;
}

<!DOCTYPE html>
<html>
<!-- begin::Head -->
<head>
    <meta charset="utf-8" />
    <title>@institutionName | @projectName</title>
    <meta name="description" content="@institutionName - @projectName">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" href="~/images/themes/@GeneralHelpers.GetTheme()/favicon.ico" />
    <!--begin::Web font -->
    <script src="https://ajax.googleapis.com/ajax/libs/webfont/1.6.16/webfont.js"></script>
    <script>
        WebFont.load({
            google: { "families": ["Poppins:300,400,500,600,700", "Roboto:300,400,500,600,700"] },
            active: function () {
                sessionStorage.fonts = true;
            }
        });
    </script>
    <!--end::Web font -->
    <!--begin::Base Styles -->
    <environment include="Development">
        <link href="~/assets/css/vendors.bundle.css" rel="stylesheet" type="text/css" />
        <link href="~/assets/css/style.bundle.css" rel="stylesheet" type="text/css" />
        <link href="~/assets/plugins/datatables/datatables.bundle.css" rel="stylesheet" type="text/css" />
        <link href="~/css/custom.css" rel="stylesheet" type="text/css" />
        <link href="~/css/themes/@GeneralHelpers.GetTheme()/default.css" rel="stylesheet" type="text/css" />
    </environment>
    <environment exclude="Development">
        <link href="~/css/bundle.min.css" rel="stylesheet" type="text/css" />
        <link href="~/css/themes/@GeneralHelpers.GetTheme()/default.min.css" rel="stylesheet" type="text/css" />
    </environment>
    @RenderSection("Styles", required: false)
    <!--end::Base Styles -->
</head>
<!-- end::Head -->
<!-- end::Body -->
<body class="m-page--fluid m--skin- m-page--loading-enabled m-page--loading m-content--skin-light2 m-header--fixed m-header--fixed-mobile m-aside-left--enabled m-aside-left--skin-dark m-aside-left--offcanvas m-footer--push m-aside--offcanvas-default">
    <!-- begin::Page loader -->
    <div class="m-page-loader m-page-loader--base">
        <div class="m-spinner m-spinner--brand"></div>
    </div>
    <!-- end::Page Loader -->
    <!-- begin:: Page -->
    <div class="m-grid m-grid--hor m-grid--root m-page">
        <!-- BEGIN: Header -->
        <header id="m_header" class="m-grid__item    m-header " m-minimize-offset="200" m-minimize-mobile-offset="200">
            <div class="m-container m-container--fluid m-container--full-height">
                <div class="m-stack m-stack--ver m-stack--desktop">
                    <!-- BEGIN: Brand -->
                    <div class="m-stack__item m-brand  m-brand--skin-dark ">
                        <div class="m-stack m-stack--ver m-stack--general">
                            <div class="m-stack__item m-stack__item--middle m-brand__logo">
                                <a asp-controller="Home" asp-action="Index" asp-area="" class="m-brand__logo-wrapper">
                                    <img class="m-brand__logo--desktop" alt="" src="~/images/themes/@GeneralHelpers.GetTheme()/logo.png" style="height: 45px;" />
                                    <img class="m-brand__logo--mobile" alt="" src="~/images/themes/@GeneralHelpers.GetTheme()/logo-sm.png" style="height: 45px;" />
                                </a>
                            </div>
                            <div class="m-stack__item m-stack__item--middle m-brand__tools">
                                <!-- BEGIN: Left Aside Minimize Toggle -->
                                <a href="javascript:;" id="m_aside_left_minimize_toggle" class="m-brand__icon m-brand__toggler m-brand__toggler--left m--visible-desktop-inline-block">
                                    <span></span>
                                </a>
                                <!-- END -->
                                <!-- BEGIN: Responsive Aside Left Menu Toggler -->
                                <a href="javascript:;" id="m_aside_left_offcanvas_toggle" class="m-brand__icon m-brand__toggler m-brand__toggler--left m--visible-tablet-and-mobile-inline-block">
                                    <span></span>
                                </a>
                                <!-- END -->
                                <!-- BEGIN: Topbar Toggler -->
                                <a id="m_aside_header_topbar_mobile_toggle" href="javascript:;" class="m-brand__icon m--visible-tablet-and-mobile-inline-block">
                                    <i class="flaticon-more"></i>
                                </a>
                                <!-- END -->
                            </div>
                        </div>
                    </div>
                    <!-- END: Brand -->
                    <div class="m-stack__item m-stack__item--fluid m-header-head" id="m_header_nav">
                        <!-- BEGIN: Horizontal Menu -->
                        <div id="m_header_menu" class="m-header-menu m-aside-header-menu-mobile m-aside-header-menu-mobile--offcanvas  m-header-menu--skin-light m-header-menu--submenu-skin-light m-aside-header-menu-mobile--skin-dark m-aside-header-menu-mobile--submenu-skin-dark ">
                            <img class="m-brand__logo--desktop" alt="" src="~/images/themes/@GeneralHelpers.GetTheme()/logo-alt.png" style="margin-top: 10px; height: 45px;" />
                        </div>
                        <!-- END: Horizontal Menu -->
                        <!-- BEGIN: Topbar -->
                        <div id="m_header_topbar" class="m-topbar  m-stack m-stack--ver m-stack--general m-topbar-mobile">
                            <div class="m-stack__item m-topbar__nav-wrapper">
                                @await Html.PartialAsync("Templates/Default/Partials/_TopBarPartial")
                            </div>
                        </div>
                        <!-- END: Topbar -->
                    </div>
                </div>
            </div>
        </header>
        <!-- END: Header -->
        <!-- begin::Body -->
        <div class="m-grid__item m-grid__item--fluid m-grid m-grid--ver-desktop m-grid--desktop m-body">
            <!-- BEGIN: Left Aside -->
            <button class="m-aside-left-close  m-aside-left-close--skin-dark " id="m_aside_left_close_btn">
                <i class="la la-close"></i>
            </button>
            <div id="m_aside_left" class="m-grid__item	m-aside-left  m-aside-left--skin-dark ">
                <!-- BEGIN: Aside Menu -->
                <div id="m_ver_menu" class="m-aside-menu  m-aside-menu--skin-dark m-aside-menu--submenu-skin-dark " m-menu-vertical="true" m-menu-scrollable="false" m-menu-dropdown-timeout="500">
                    @await Html.PartialAsync("Templates/Default/Partials/_SideBarPartial")
                </div>
                <!-- END: Aside Menu -->
            </div>
            <!-- END: Left Aside -->
            <div class="m-grid__item m-grid__item--fluid m-wrapper">

                <!-- BEGIN: Subheader -->
                <div class="m-grid__item m-topbar-desktop">
                    <div class="m-container m-container--fluid m-container--full-height">
                        <div class="m-stack m-stack--ver m-stack--desktop">
                            <div class="m-stack__item m-stack__item--fluid m-header-head" id="m_header_nav">

                                <div class="m-header-menu ">
                                    @if (ViewBag.Breadcrumbs != null)
                                    {
                                        <ul class="m-subheader__breadcrumbs m-nav m-nav--inline">
                                            <li class="m-nav__item m-nav__item--home">
                                                <a asp-controller="Home" asp-action="Index" asp-route-area="" class="m-nav__link m-nav__link--icon">
                                                    <i class="m-nav__link-icon la la-home"></i>
                                                </a>
                                            </li>
                                            @foreach (var item in (IEnumerable<BreadcrumbViewData>)ViewBag.Breadcrumbs)
                                            {
                                                <li class="m-nav__separator">
                                                    >
                                                </li>
                                                <li class="m-nav__item">
                                                    @if (item.Url != null)
                                                    {
                                                        <a href="@item.Url" class="m-nav__link">
                                                            <span class="m-nav__link-text">
                                                                @item.Name
                                                            </span>
                                                        </a>
                                                    }
                                                    else
                                                    {
                                                        if (@item.Controller != null)
                                                        {
                                                            <a asp-area="@item.Area" asp-controller="@item.Controller" asp-action="@item.Action" class="m-nav__link">
                                                                <span class="m-nav__link-text">
                                                                    @item.Name
                                                                </span>
                                                            </a>
                                                        }
                                                        else
                                                        {
                                                            <a class="m-nav__link">
                                                                <span class="m-nav__link-text">
                                                                    @item.Name
                                                                </span>
                                                            </a>
                                                        }
                                                    }
                                                </li>
                                            }
                                        </ul>
                                    }
                                </div>

                                <div id="m_header_topbar" class="m-topbar  m-stack m-stack--ver m-stack--general">
                                    <div class="m-stack__item m-topbar__nav-wrapper">
                                        @await Html.PartialAsync("Templates/Default/Partials/_TopBarPartial")
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- END: Subheader -->

                @RenderBody()
            </div>
        </div>
        <!-- end:: Body -->
        <!-- begin::Footer -->
        <!--<footer class="m-grid__item		m-footer ">
                <div class="m-container m-container--fluid m-container--full-height m-page__container">
                    <div class="m-stack m-stack--flex-tablet-and-mobile m-stack--ver m-stack--desktop">
                        <div class="m-stack__item m-stack__item--left m-stack__item--middle m-stack__item--last">
                            <span class="m-footer__copyright">
                                2018 &copy; Hecho por
                                <a href="#" class="m-link m-link--primary">
                                    Enchúfate
                                </a>
                            </span>
                        </div>
                        <div class="m-stack__item m-stack__item--right m-stack__item--middle m-stack__item--first">

                        </div>
                    </div>
                </div>
            </footer>-->
        <!-- end::Footer -->
    </div>
    <!-- end:: Page -->
    <!-- begin::Scroll Top -->
    <div id="m_scroll_top" class="m-scroll-top">
        <i class="la la-arrow-up"></i>
    </div>
    <!-- end::Scroll Top -->
    <!--begin::Base Scripts -->
    <environment include="Development">
        <script src="~/assets/js/vendors.bundle.js" type="text/javascript"></script>
        <script src="~/assets/js/scripts.bundle.js" type="text/javascript"></script>
        <script src="~/assets/plugins/datatables/datatables.bundle.js" type="text/javascript"></script>
        <script src="~/js/custom.mdatatable.js" type="text/javascript"></script>
        <script src="~/js/custom.mportlet.js" type="text/javascript"></script>
        <script src="~/js/custom.js" type="text/javascript"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/bundle.min.js" type="text/javascript"></script>
    </environment>
    <script>
        _app.constants.url.root = '@Url.Content("~")';
    </script>
    <!--end::Base Scripts -->
    <!-- begin::Page Scripts -->
    @RenderSection("Scripts", required: false)
    <!-- end::Page Scripts -->
    <!-- begin::Page Loader -->
    <script>
        $(window).on('load', function () { $('body').removeClass('m-page--loading'); });
    </script>
    <!-- end::Page Loader -->
    @Html.Raw(TempData["Toastr"])
</body>
<!-- end::Body -->
</html>
