@model AKDEMIC.PDF.Services.CertificateOfStudiesGenerator.Models.CertificateOfStudiesModel
@{
    Layout = null;
    var counter = 1;
    var rowspan = 1;
    var maxTableHigth_1 = 2044;
}

<!DOCTYPE html>
<html>
<head>
    <title>Certificado de Estudios</title>
    <style>
        body {
            /*font-family: Verdana, Geneva, Tahoma, sans-serif;*/
            font-family: sans-serif;
        }

        .document-header {
            /*border-bottom: 1px solid black*/
        }

            .document-header div {
                text-align: center;
            }

        .university-name {
            font-family: Georgia;
            font-size: 20px;
            padding: 10px;
        }

        .company-name {
            font-family: Georgia;
            font-size: 30px;
            padding: 10px;
        }

        .area-name {
            font-size: 16px;
            padding: 5px;
            font-weight: bold;
        }

        .office-name {
            padding: 5px;
            font-size: 14px;
            font-weight: bold;
        }

        .address-text {
            padding: 0 0 10px 0;
            font-size: 12px;
        }

        .header-image.left {
            float: left;
            max-height: 200px;
            max-width: 200px;
        }

        .header-image.right {
            float: right;
            max-height: 200px;
            max-width: 200px;
        }

        table {
            width: 100%;
            text-align: center;
            border-collapse: collapse;
            font-family: Arial, Helvetica, sans-serif;
        }

            .minimalistBlack td, .minimalistBlack th {
                border: 1px solid #000000;
                padding: 1.5px 1.5px !important;
                font-family: Arial, Helvetica, sans-serif;
            }

            .minimalistBlack thead {
            }

                .minimalistBlack thead th {
                    font-size: 15px;
                    font-weight: bold;
                    color: #000000;
                    text-align: center;
                    font-family: Arial, Helvetica, sans-serif;
                }

            .minimalistBlack tfoot td {
                font-size: 14px;
            }

            .minimalistBlack thead {
                display: table-header-group
            }

            .minimalistBlack tfoot {
                display: table-row-group
            }

            .minimalistBlack tr {
                page-break-inside: avoid
            }

        .sign {
            max-width: 95%;
            text-align: center;
            border: 1px solid #000000;
            padding-top: 100px;
        }

            .sign.left {
                margin-right: auto;
            }

            .sign.center {
                margin: auto;
            }

            .sign.right {
                margin-left: auto;
            }

            .sign span {
                border-top: 1px solid #000000;
                color: #000000;
                width: 95%;
                display: block;
                margin: auto;
                padding: 2px 0;
            }

        .FontCreated {
            font-size: 12px;
            font-weight: 700;
        }



        .footer {
            left: 0;
            bottom: 0;
            width: 100%;
            text-align: center;
            page-break-inside: avoid;
        }

        .container-document-detail {
            width: 100%;
        }

        .document-detail {
            margin-top: 10px !important;
            font-size: 20px;
            font-weight: 700;
            width: 75%;
        }

            .document-detail p {
                margin-bottom: 5px !important;
            }

        .rotate {
            text-align: center;
            white-space: nowrap;
            vertical-align: middle;
            width: 1.5em;
        }

            .rotate div {
                -moz-transform: rotate(-90.0deg);
                -o-transform: rotate(-90.0deg);
                -webkit-transform: rotate(-90.0deg);
                filter: progid:DXImageTransform.Microsoft.BasicImage(rotation=0.083);
                -ms-filter: "progid:DXImageTransform.Microsoft.BasicImage(rotation=0.083)";
                margin-left: -15em;
                margin-right: -15em;
            }

        tr {
            page-break-inside: avoid;
        }


        #th_rowspan_content {
            page-break-inside: avoid;
        }

        table tr {
            font-size: 13px;
        }

        #main_table_thead tr {
            padding: 0px !important;
        }

        .bold {
            font-weight: bold;
        }

        html, body {
            height: 100%;
        }

        .footer {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
        }

        .no-signature {
            width: 5%;
            border: 4px solid white;
        }

        .signature {
            /*color: red;*/
            border-top: 1px solid;
            font-size: 13px !important;
            height: 30px !important;
        }

        .center {
            text-align: center;
        }
    </style>

</head>
<body>

    <table>
        <thead>
            <tr>
                <th colspan="6">
                    <div class="document-header">
                        <img class="header-image right" src="@Environment.CurrentDirectory/wwwroot/images/escudo.png" width="100" style="visibility:hidden;" />
                        <img class="header-image left" src="@Environment.CurrentDirectory/wwwroot/images/themes/@AKDEMIC.CORE.Helpers.GeneralHelpers.GetTheme()/logo-report.png" width="100" />

                        <div>
                            <div class="university-name" style="margin:0px; padding:0px;">
                                <b> @AKDEMIC.CORE.Helpers.GeneralHelpers.GetInstitutionName().ToUpper()</b>
                            </div>
                            <div class="company-name center" style="margin:0px; margin-top:8px !important; padding:0px;">
                                <b>CERTIFICADO DE ESTUDIOS</b>
                            </div>
                        </div>
                    </div>


                    <table style="width:100%; font-size:16px !important; margin-top:20px !important; margin-bottom:30px !important; text-align:left !important;">
                        <tr>
                            <td class="bold" width="20%">Facultad de:</td>
                            <td>@Model.Student.Faculty</td>
                        </tr>
                        <tr>
                            <td class="bold">Escuela Profesional de:</td>
                            <td>@Model.Student.Career</td>
                        </tr>
                        <tr>
                            <td class="bold">Apellidos:</td>
                            <td>@Model.Student.Surnames</td>
                        </tr>
                        <tr>
                            <td class="bold">Nombres:</td>
                            <td>@Model.Student.Names</td>
                        </tr>
                        <tr>
                            <td class="bold">Código de Matrícula:</td>
                            <td>@Model.Student.UserName</td>
                        </tr>
                    </table>
                </th>
            </tr>
            <tr class="minimalistBlack">
                <th rowspan="2">ASIGNATURAS</th>
                <th colspan="2">CALIFICACIONES</th>
                <th rowspan="2">MODALIDAD <br /> DE <br />APROBACIÓN</th>
                <th rowspan="2">CRÉDITOS</th>
                <th rowspan="2">SEMESTRE <br />ACADÉMICO</th>
            </tr>
            <tr class="minimalistBlack">
                <th colspan="1">LETRAS</th>
                <th colspan="1">N°</th>
            </tr>
        </thead>
        <tbody class="minimalistBlack">

            @foreach (var ayc in Model.AcademicYearCourses)
            {
                <tr>
                    <td style="font-size:15px; font-family: Arial, Helvetica, sans-serif; font-weight: bold; text-align:left; text-decoration:underline;" colspan="6"> CICLO : @AKDEMIC.CORE.Helpers.ConstantHelpers.ACADEMIC_YEAR.TEXT[ayc.AcademicYear].ToUpper() </td>
                </tr>
                @foreach (var item in ayc.Courses)
                {
                    <tr>
                        <td style="text-align:left">@item.Code - @item.Name@(string.IsNullOrEmpty(item.Observation) ? "" : $"({item.Observation})") </td>
                        <td style="text-align:center; letter-spacing:1.1px;">@item.GradeText.ToUpper()</td>
                        <td><strong>@item.Grade</strong></td>
                        <td>@(AKDEMIC.CORE.Helpers.ConstantHelpers.AcademicHistory.Types.VALUES.ContainsKey(item.Type) ? AKDEMIC.CORE.Helpers.ConstantHelpers.AcademicHistory.Types.VALUES[item.Type] : "-")</td>
                        <td>@item.Credits</td>
                        <td>@item.Term</td>
                    </tr>
                    rowspan++;
                }
                counter++;
                rowspan++;
            }

        </tbody>
    </table>

</body>
</html>










