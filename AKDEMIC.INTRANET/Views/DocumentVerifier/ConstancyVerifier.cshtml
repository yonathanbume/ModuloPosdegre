@model AKDEMIC.INTRANET.ViewModels.DocumentVerifierViewModels.ConstancyViewModel
@{
    ViewData["Title"] = "Detalle de la constancia";
    ViewData["Breadcrumbs"] = new[] {
new BreadcrumbViewData { Name = (string)ViewData["Title"] }};
}
<div class="m-content">
    <div class="m-portlet">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <h3 class="m-portlet__head-text">
                        @ViewData["Title"]
                    </h3>
                </div>
            </div>
        </div>
        <div class="m-portlet__body">
            <div class="form-group row mt-">
                <div class="form-group m-form__group col-lg-12">
                    <span class="mb-4">El documento '<strong>@Model.Type</strong>' es aut&eacute;ntico. Para conformidad mostramos los detalles del documento.</span>
                </div>
            </div>
            <div class="form-group row mt-">
                <div class="form-group m-form__group col-lg-6">
                    <label asp-for="Type"></label>
                    <input asp-for="Type" class="form-control m-input letters" readonly />
                </div>
                <div class="form-group m-form__group col-lg-6">
                    <label asp-for="Student"></label>
                    <input asp-for="Student" class="form-control m-input letters" readonly />
                </div>
            </div>
            <div class="form-group row">
                <div class="form-group m-form__group col-lg-6">
                    <label asp-for="Faculty"></label>
                    <input asp-for="Faculty" class="form-control m-input letters" readonly />
                </div>
                <div class="form-group m-form__group col-lg-6">
                    <label asp-for="Career"></label>
                    <input asp-for="Career" class="form-control m-input letters" readonly />
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.UserProcedureCode))
            {
                <div class="form-group row">
                    <div class="form-group m-form__group col-lg-6">
                        <label asp-for="UserProcedureCode"></label>
                        <input asp-for="UserProcedureCode" class="form-control m-input letters" readonly />
                    </div>
                    <div class="form-group m-form__group col-lg-6">
                        <label asp-for="RequestDate"></label>
                        <input asp-for="RequestDate" class="form-control m-input letters" readonly />
                    </div>
                </div>
            }

        </div>
    </div>
</div>
