@model AKDEMIC.INTRANET.ViewModels.ProcedureViewModels.PendingPaymentPdfViewModel
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <title>Acta de notas</title>
    <style>
        body {
            font-family: 'Times New Roman';
            font-size: 13px;
        }

        h1 {
            margin-bottom: 5px !important;
            font-size: 28px;
        }

        h2 {
            margin: 0px;
            font-size: 18px;
        }

        img {
            top: 0;
            left: 0;
            max-height: 60px;
        }

        header {
            width: 100%;
            text-align: center;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            font-weight: normal;
        }

            table > tbody > tr {
                page-break-inside: avoid !important;
            }

            table td {
                font-size: 13px !important;
                height: 15px !important;
            }

        .bordered {
            border: 1px solid black;
            padding: 3px 3px !important;
        }

        s

        .no-background {
            background-color: transparent !important;
        }

        .unbordered {
            border: 0px !important;
            padding: 3px 3px !important;
        }

        th {
            font-weight: normal;
            text-align: left;
        }

        .red {
            color: red;
        }

        .blue {
            color: blue;
        }

        .bold {
            font-weight: bold;
            background-color: lightgray;
        }

        .center {
            text-align: center;
        }

        .header2 {
            font-size: 10px;
            padding: 3px 0px !important;
        }

        .header > th {
            border: 1px solid black;
            padding: 5px 3px !important;
        }

        .td-header {
            border: none;
            padding: 0px !important;
        }

        .detail-header {
            font-size: 11px;
            text-align: left;
            font-weight: 600;
        }

        .footer {
            font-size: 15px;
            text-align: center;
            font-style: italic;
            bottom: 0;
            left: 0;
            right: 0;
            margin-bottom: -6px;
        }

        .thd {
            border: 1px solid black;
            padding: 4px;
            font-size: 15px !important;
        }

        .negrita {
            font-weight: bold;
        }

        table tbody tr th {
            font-size: 13px !important;
        }

        .center {
            text-align: center;
        }

        .unk-header {
            width: 100%;
            text-align: center;
            margin-bottom: 10px;
        }

        .university-title {
            margin-top: 10px !important;
            font-size: 20px;
        }

        .header-title {
            margin-top: 13px !important;
            font-size: 18px;
        }

        .subheader-title {
            font-size: 16px;
        }

        .title {
            margin-top: 13px !important;
            margin-bottom: 20px !important;
            font-size: 18px;
        }
    </style>
</head>
<body>


    <table>
        <thead class="headerformat">

            <tr class="unbordered">
                <th>
                    <table>
                        <tr>
                            <td width="30%" style="text-align:center; font-weight : bold;">
                                @GeneralHelpers.GetInstitutionName().ToUpper()
                            </td>
                            <td width="40%" style="text-align:center; font-weight:bold; font-size:18px !important;">
                                <img src="@Model.Img" style="max-height:90px !important;" /><br />
                                @Model.Title
                            </td>
                            <td width="30%" style="text-align:center; font-weight : bold;">
                                VICERRECTORADO ACADÉMICO<br />
                                Oficina de Tecnologias de la Información
                            </td>
                        </tr>
                    </table>
                </th>

            </tr>
            <tr>
                <th>
                    &emsp;
                </th>
            </tr>
            <tr>
                <th>
                    <span class="negrita">
                        ESCUELA PROFESIONAL :
                    </span>
                    <span>
                        @Model.Career
                    </span>
                </th>
            </tr>
            <tr>
                <th>
                    &emsp;
                </th>
            </tr>


        </thead>

        <tbody>
            <tr>
                <td>
                    <table>
                        <tr class="bordered">
                            <th class="center bordered" style="padding:10px !important; font-weight:bold;">APELLIDOS Y NOMBRES</th>
                            <th class="center bordered" style="padding:10px !important; font-weight:bold;">CÓDIGO</th>
                            <th class="center bordered" style="padding:10px !important; font-weight:bold;">SEMESTRE</th>
                        </tr>
                        <tr class="bordered" style="border:1px solid black !important;">
                            <td class="thd center" style="border-right:0px !important;">@Model.FullName</td>
                            <td class="thd center" style="border-right:0px !important;">@Model.UserName</td>
                            <td class="thd center" style="border-right:0px !important;">@Model.Term</td>
                        </tr>
                    </table>
                </td>
            </tr>
            <tr>
                <td>&emsp;</td>
            </tr>
            <tr>
                <td>&emsp;</td>
            </tr>
            <tr>
                <td>
                    <table>
                        <tr class="bordered">
                            <th class="center bordered" style="padding:10px !important; font-weight:bold;">CANTIDAD</th>
                            <th class="center bordered" style="padding:10px !important; font-weight:bold;" width="70%">CONCEPTO</th>
                            <th class="center bordered" style="padding:10px !important; font-weight:bold;">MONTO (S/.)</th>
                        </tr>

                        @for (int i = 0; i < Model.Concepts.Count(); i++)
                        {
                            <tr class="bordered" style="border:1px solid black !important;">
                                <td class="thd center">1</td>
                                <td class="thd center">@Model.Concepts[i].ConceptName</td>
                                <td class="thd center">@($"S/. {Model.Concepts[i].Amount:F}")</td>
                            </tr>
                        }

                        <tr class="bordered" style="border:1px solid black !important;">
                            <td class="thd" colspan="2" style="border-right:0px !important; font-weight:bold;">TOTAL A PAGAR</td>
                            <td class="thd center" colspan="2" style="border-right:0px !important; font-weight:bold;">@($"S/. {Model.Concepts.Sum(x=>x.Amount):F}")</td>
                        </tr>
                    </table>
                </td>
            </tr>


        </tbody>
        <tfoot>
            <tr style="padding:0px !important; font-size:10px !important; height:30px !important;">
                @{
                    var datetime = DateTime.UtcNow.ToDefaultTimeZone();
                    var month = ConstantHelpers.MONTHS.VALUES[datetime.Month];
                }
                <td colspan="5" style=" text-align:right !important; padding:0px !important; margin:0px !important;">@ConstantHelpers.Institution.Locations[ConstantHelpers.GENERAL.Institution.Value], @datetime.Day de @month del @datetime.Year, @datetime.ToTimeFormat()</td>
            </tr>

            <tr class="unbordered">
                <td>
                    &emsp;
                </td>
            </tr>

            <tr class="unbordered">
                <td>
                    @Html.Raw(Model.FooterText)
                </td>
            </tr>
        </tfoot>
    </table>
</body>
</html>
