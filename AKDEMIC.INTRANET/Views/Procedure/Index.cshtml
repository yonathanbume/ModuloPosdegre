@{
    ViewData["Title"] = "Listado de Trámites";
    ViewData["Breadcrumbs"] = new[] {
        new BreadcrumbViewData { Name = ViewData["Title"].ToString(), Controller = null, Action = null }
    };
}

<div class="m-content">
    <div class="m-portlet m-portlet--tabs">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <h3 class="m-portlet__head-text">
                        @ViewData["Title"].ToString()
                    </h3>
                </div>
            </div>
            <div class="m-portlet__head-tools">
                <ul class="nav nav-tabs m-tabs m-tabs-line m-tabs-line--right m-tabs-line--primary" role="tablist">
                    <li class="nav-item m-tabs__item">
                        <a class="nav-link m-tabs__link active" data-toggle="tab" href="#m_portlet_tab_1" role="tab">
                            <i class="la la-edit"></i>
                            Trámites Habilitados
                        </a>
                    </li>
                    <li class="nav-item m-tabs__item">
                        <a class="nav-link m-tabs__link" data-toggle="tab" href="#m_portlet_tab_2" role="tab">
                            <i class="la la-refresh"></i>
                            Trámites en Proceso
                        </a>
                    </li>
                    <li class="nav-item m-tabs__item">
                        <a class="nav-link m-tabs__link" data-toggle="tab" href="#m_portlet_tab_3" role="tab">
                            <i class="la la-check-square-o"></i>
                            Trámites Finalizados
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="m-portlet__body">
            <div class="tab-content">
                <div class="tab-pane active" id="m_portlet_tab_1">

                    <div class="m-form--label-align-right m--margin-bottom-20">
                        <div class="row align-items-center">
                            <div class="col-xl-8 order-2 order-xl-1">
                                <div class="row">
                                    <div class="form-group m-form__group col-xl-4">
                                        <div class="m-input m-input-icon m-input-icon--left">
                                            <input type="text" class="form-control m-input m-input--pill m-input--solid" placeholder="Buscar..." id="search_available_procedures">
                                            <span class="m-input-icon__icon m-input-icon__icon--left">
                                                <span><i class="la la-search"></i></span>
                                            </span>
                                        </div>
                                    </div>

                                </div>
                            </div>
                            <div class="col-xl-4 order-1 order-xl-2 m--align-right"></div>
                        </div>
                    </div>

                    <table class="table table-striped table-bordered" id="table_available_procedures"></table>

                </div>
                <div class="tab-pane " id="m_portlet_tab_2">
                    <table class="table table-striped table-bordered" id="table_procedures_in_process"></table>
                </div>
                <div class="tab-pane " id="m_portlet_tab_3">
                    <table class="table table-striped table-bordered" id="table_completed_procedures"></table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script src="~/js/views/procedure/index.js" asp-append-version="true"></script>
}