@{
    ViewData["Title"] = "Cambio de contraseña satisfactorio";
    Layout = "~/Views/Shared/Templates/Login/_Layout.cshtml";
}

<div class="m-login__wrapper">
    <div class="form">
        <a href="#">
            <img class="logo" src="~/images/themes/@GeneralHelpers.GetTheme()/logo.png">
        </a>
        <h1>@AKDEMIC.INTRANET.Helpers.ConstantHelpers.Project.NAME.ToUpper()</h1>
        <h5>@ViewData["Title"]</h5>
        <label>
            Su contraseña ha sido actualizada. Por favor inicie sesión para proceder.
        </label>
        <div class="group">
            <a class="btn button-submit" asp-controller="Account" asp-action="Login">INICIAR SESIÓN</a>
        </div>
    </div>
</div>