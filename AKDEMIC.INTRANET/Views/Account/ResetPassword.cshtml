@model ResetPasswordViewModel
@{
    ViewData["Title"] = "Restablece tu contraseña";
    Layout = "~/Views/Shared/Templates/Login/_Layout.cshtml";
}

<div class="m-login__wrapper">
    <div class="form">
        <a href="#">
            <img class="logo" src="~/images/themes/@GeneralHelpers.GetTheme()/logo.png">
        </a>
        <h1>@ViewData["Title"]</h1>
        <p>
            Por favor rellenar el siguiente formulario para restablecer su contrase&ntilde;a.
        </p>
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input asp-for="Code" type="hidden" />
            <div class="group">
                <input asp-for="UserName" placeholder="USUARIO" autocomplete="off" />
                <img class="ico" src="~/images/login/user.svg" />
                <div class="bar"></div>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="group">
                <input asp-for="Password" type="password" placeholder="CONTRASEÑA" />
                <i class="fa fa-eye"></i>
                <img class="ico" src="~/images/login/pass.svg" />
                <span asp-validation-for="Password" class="text-danger"></span>
                <div class="bar"></div>
            </div>
            <div class="group">
                <input asp-for="ConfirmPassword" type="password" placeholder="CONFIRMAR CONTRASEÑA" />
                <i class="fa fa-eye"></i>
                <img class="ico" src="~/images/login/pass.svg" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                <div class="bar"></div>
            </div>
            <div class="group">
                <button type="submit" class="btn button-submit">
                    Restablecer contrase&ntilde;a
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <environment include="Development">
        <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"
                asp-fallback-src="~/lib/jquery-validation/dist/jquery.validate.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.validator"
                crossorigin="anonymous"
                integrity="sha384-rZfj/ogBloos6wzLGpPkkOr/gpkBNLZ6b6yLy4o+ok+t/SAKlL5mvXLr0OXNi1Hp">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.9/jquery.validate.unobtrusive.min.js"
                asp-fallback-src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.validator && window.jQuery.validator.unobtrusive"
                crossorigin="anonymous"
                integrity="sha384-ifv0TYDWxBHzvAk2Z0n8R434FL1Rlv/Av18DXE43N/1rvHyOG4izKst0f2iSLdds">
        </script>
    </environment>

}
