@using AKDEMIC.INTRANET.ViewModels.InstitutionalAlertViewModels
@model InstitutionalAlertDetailViewModel
@{
    ViewData["Title"] = "Alerta Institucional";
    ViewData["Breadcrumbs"] = new[] {
new BreadcrumbViewData { Name = "Lista de Alertas Institucionales", Controller = "InstitutionalAlert", Action = "Index"},
new BreadcrumbViewData { Name = "Responder", Controller = null, Action = null},
        };
}

<div class="m-content">
    <div class="m-portlet">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <h3 class="m-portlet__head-text">
                        Alerta Institucional
                    </h3>
                </div>
            </div>
        </div>
        <form id="form-institutional-alert" asp-action="ResponseInstitutionalAlert" asp-controller="InstitutionalAlert" method="post"> 
            <input asp-for="Id" hidden/>
            <div class="m-portlet__body">
                    @if (!Model.Status)
                    {
                        <div class="form-group m-form__group row">
                            <div class="col-lg-6">
                                <label class="form-control-label">Asistente</label>
                                <input asp-for="Assistant" class="form-control m-input" disabled="disabled" />
                            </div>
                        </div>
                    }
                    <div class="form-group m-form__group row">
                        <div class="col-lg-6">
                            <label class="form-control-label">Solicitante</label>
                            <div class="m-input-icon m-input-icon--right">
                                <input asp-for="Applicant" class="form-control m-input" disabled="disabled" autocomplete="off">
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <label class="form-control-label">Dependencia</label>
                            <div class="m-input-icon m-input-icon--right">
                                <input asp-for="Dependency" class="form-control m-input" disabled="disabled" autocomplete="off">
                            </div>
                        </div>
                    </div>
                    <div class="form-group m-form__group row">
                        <div class="col-lg-12">
                            <label class="control-label">Tipo de Alerta</label>
                            @if (Model.Status)
                            {
                                <select asp-for="Type" class="form-control select2" required id="alert_type">
                                    @foreach (var item in ConstantHelpers.INSTITUTIONAL_ALERT.ALERT_TYPES.TYPES)
                                    {
                                        <option value="@((int)item.Key)">@(item.Value)</option>
                                    }
                                </select>
                            }
                            else
                            {
                                <select asp-for="Type" class="form-control select2" required id="alert_type" disabled>
                                    @foreach (var item in ConstantHelpers.INSTITUTIONAL_ALERT.ALERT_TYPES.TYPES)
                                    {
                                        <option value="@((int)item.Key)">@(item.Value)</option>
                                    }
                                </select>
                            }
                        </div>
                    </div>
                    <div class="form-group m-form__group row">
                        <div class="col-lg-12">
                            @if (Model.Status)
                            {

                                <label class="control-label">Descripci&oacute;n</label>
                                <textarea class="form-control" required asp-for="Description" rows="3"></textarea>
                            }
                            else
                            {
                                <label class="control-label">Descripci&oacute;n</label>
                                <textarea class="form-control" required asp-for="Description" disabled rows="3"></textarea>
                            }
                        </div>
                    </div>
                    <div class="text-right">
                        @if (Model.Status)
                        {
                            <button class="btn btn-primary btn-save" type="submit"> Guardar </button>
                        }
                        else
                        {
                            <button class="btn btn-primary btn-save" type="submit" disabled="disabled"> Guardar </button>
                        }
                    </div>
                </div>
        </form>

    </div>
</div>

@section Scripts{
    <script src="~/js/views/institutionalalert/response.js" type="text/javascript"></script>
}
 