@using AKDEMIC.INTRANET.ViewModels.ForumViewModels;
@model CategoryViewModel
@{

    var CategoryId = ViewBag.CategoryId;
    var CategoryName = ViewBag.CategoryName;
    ViewData["Title"] = CategoryName;
    ViewData["Breadcrumbs"] = new[] {
new BreadcrumbViewData { Name = "Foros", Url= Url.Action("Index","Forum") },
new BreadcrumbViewData { Name = CategoryName }
};
}
@section Styles {
    <link href="~/css/views/forum/category.css" rel="stylesheet" />
}
<input asp-for="GategoryID" hidden />
<div class="m-content">
    <div class="m-portlet">
        <div class="m-portlet__body">
            <div class="m-form m-form--label-align-right m--margin-bottom-30">
                <div class="row align-items-center">
                    <div class="col-xl-12 order-2 order-xl-1">

                        <div class="form-group m-form__group row align-items-center">
                            <div class="col-md-4">
                                <div class="m-input-icon m-input-icon--left">
                                    <input type="text" class="form-control m-input m-input--solid" placeholder="Buscar..." id="search">
                                    <span class="m-input-icon__icon m-input-icon__icon--left">
                                        <span><i class="la la-search"></i></span>
                                    </span>
                                </div>
                            </div>
                            <div class="col-md-8 col-md-offset-4 col-new-theme">
                                <button class="btn btn-primary m-btn m-btn--icon btn-sm" data-toggle="modal" data-target="#forums-modal-create">
                                    <span>
                                        <i class="la la-plus"></i>
                                        <span>Agregar Tema</span>
                                    </span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="table_pagination">
                <table id="table-topics" style="width:100%">
                    <tbody>
                        @foreach (var topic in Model.Topics)
                        {
                            <tr class="topic-row">
                                <td>
                                    <div class="col-md-12 topic">
                                        <div class="topic-icon">
                                            <img class="topic-image" src="~/images/topic-icon.png" />
                                        </div>
                                        <div class="topic-content">
                                            <div class="topic-title">
                                                <a href="@Url.Action("Topic","Forum",new {categoryId = Model.GategoryID, topicId= topic.Id})" onclick="">@topic.Title</a>
                                            </div>
                                            <div class="topic-details">
                                                <div class="topic-entries">
                                                    <span>
                                                        @((topic.Posts == null) ? 0 : topic.Posts.Where(x=>x.DeletedAt==null).Count()) <i class="fa fa-comments"></i>
                                                    </span>
                                                </div>
                                            </div>
                                            <div class="topic-user">
                                                Creado por :@topic.User.Name @topic.User.PaternalSurname
                                                <span>
                                                    Fecha de creación: @(String.Format("{0:d/M/yyyy}", topic.CreatedAt))
                                                </span>
                                            </div>

                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="modal fade" id="forums-modal-create" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Nuevo tema</h5>
                </div>
                <div class="modal-body">
                    <form id="forums-modal-create-form" enctype="multipart/form-data" asp-controller="Forum" asp-action="CreateTopic">
                        <div class="form-group m-form__group">
                            <label for="Title">Nombre</label>
                            <input name="Title" class="form-control m-input" placeholder="Nombre" required>
                        </div>
                        <div class="form-group m-form__group">
                            <div class="custom-file">
                                <input type="file" name="File" id="File" multiple="" class="custom-file-input" />
                                <label class="custom-file-label">Añadir un archivo</label>
                            </div>
                        </div>
                        <input hidden name="ForumId" value="@CategoryId" />
                        <div class="form-group m-form__group">
                            <label for="Message">Mensaje</label>
                            <textarea name="Message" class="form-control" placeholder="Mensaje" style="height: 80px; resize: none" required></textarea>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary btn-add" data-dismiss="modal"> Cerrar </button>
                            <button type="submit" class="btn btn-primary"> Guardar </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/views/forum/category.js" type="text/javascript"></script>
}