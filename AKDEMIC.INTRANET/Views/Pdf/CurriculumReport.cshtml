<body>
    <br />
    <div style="position:absolute;text-align: center;padding: 20px 20px;">
        <img src="@Model.Logo" />
    </div>
    <header>
        <h1 class="negrita">@GeneralHelpers.GetInstitutionName().ToUpper()</h1>
        <h2 class="negrita">PLAN CURRICULAR @Model.Title - @Model.Code </h2>
    </header>
    <br />
    @foreach (var cycle in Model.Cicles)
    {
        <div style="margin-top:5px; margin-bottom:10px;">
            <b>CICLO @cycle</b>
            <br />
            <table style="border-collapse: collapse; width: 100%;">
                <thead>
                    <tr style="background-color:gray">
                        <th width="8%" align="center"><b>CODIGO</b></th>
                        <th width="25%" align="center"><b>ASIGNATURA</b></th>
                        <th width="20%" align="center"><b>ÁREA</b></th>
                        <th width="5%" align="center"><b>CRED</b></th>
                        <th width="7%" align="center"><b>CRED REQ</b></th>
                        <th width="5%" align="center"><b>TH</b></th>
                        <th width="5%" align="center"><b>HT</b></th>
                        <th width="5%" align="center"><b>HP</b></th>
                        <th width="20%" align="center"><b>PRE-REQ</b></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.CurriculumList.Where(x => x.AcademicYearNumber == cycle).OrderBy(x=>x.Code).ToList())
                    {
                    <tr>
                        <td style="text-align: center">@item.Code</td>
                        <td style="text-align: center">@item.Name</td>
                        <td style="text-align: center">@item.Area</td>
                        <td style="text-align: center">@item.Credit.ToString("0.0")</td>
                        <td style="text-align: center">@item.RequiredCredit.ToString("0.0")</td>
                        <td style="text-align: center">@item.TotalHours</td>
                        <td style="text-align: center">@item.PlannedHours.ToString("0.0")</td>
                        <td style="text-align: center">@item.PracticalHours.ToString("0.0")</td>
                        <td style="text-align: center">@item.Requisites</td>
                    </tr>
                    }
                </tbody>
                @*<tfoot>
                    <tr>
                        <th>*TH: Horas Totales</th>
                    </tr>
                    <tr>
                        <th>*HT: Horas Seminario</th>
                    </tr>
                    <tr>
                        <th>*HP: Horas Prácticas</th>
                    </tr>                 

                </tfoot>*@

            </table>
        </div>

    }
</body>
