@model UserAnnouncement
<!--begin::Modal-->
<input type="hidden" id="UserAnnouncement" value="@((Model != null)?"true" : "false")" />
@if (Model != null)
{
    <div class="modal fade" id="UserAnnouncement_modal" role="dialog" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                @{
                    var typeofmodal = "";
                    var color = "";
                    switch (Model.Type)
                    {
                        case 1:
                            typeofmodal= "";
                            color="#2C2E4A";
                            break;
                        case 2:
                            typeofmodal= "btn-warning";
                            color="white";
                            break;
                        case 3:
                            typeofmodal= "btn-danger";
                            color="white";
                            break;
                        default:
                            typeofmodal="";
                            break;
                    }
                }
                <div class="modal-header @typeofmodal">
                    <h5 class="modal-title text-primary font-weight-bold" id="edit-label" style="color:@color">
                        @Model.Title.ToUpper()
                    </h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>@Model.Description</p>
                </div>
                <div class="modal-footer">
                    @*<button type="submit" class="btn btn-primary">
                Guardar Cambios
            </button>*@
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">
                        Cerrar
                    </button>
                </div>
            </div>
        </div>
    </div>
}
<!--end::Modal-->

