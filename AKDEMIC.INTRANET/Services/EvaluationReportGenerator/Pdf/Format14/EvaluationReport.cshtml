@model AKDEMIC.REPOSITORY.Repositories.Intranet.Templates.EvaluationReport.EvaluationReportInformationTemplate
@using Microsoft.AspNetCore.Hosting;
@using AKDEMIC.CORE.Helpers
@using AKDEMIC.CORE.Extensions;
@inject IWebHostEnvironment _webHostEnvironment
@{
    Layout = null;

    var enrolled = Model.Course.Section.Students.Count();
    var approved = Model.Course.Section.Students.Where(x => x.Status == ConstantHelpers.STUDENT_SECTION_STATES.APPROVED).Count();
    var disapproved = Model.Course.Section.Students.Where(x => (x.Status == ConstantHelpers.STUDENT_SECTION_STATES.DISAPPROVED || x.Status == ConstantHelpers.STUDENT_SECTION_STATES.DPI)).Count();
    var withdrawn = Model.Course.Section.Students.Where(x => x.Status == ConstantHelpers.STUDENT_SECTION_STATES.WITHDRAWN).Count();
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <title>Acta de notas</title>
    <link href="@(System.IO.Path.Combine(_webHostEnvironment.WebRootPath, @"css/views/evaluation_report/evaluation_report_fonts.css"))" rel="stylesheet" type="text/css" />
    
    <style>
        .bold {
            font-weight: bold;
        }

        .red {
            color: red;
        }

        .center {
            text-align: center;
        }

        body {
            font-family: "DejaVu Sans Condensed";
        }

        .main-table {
            width: 100% !important;
            border-collapse: collapse;
            border-spacing: 0;
        }

        table > tbody > tr {
            page-break-inside: avoid !important;
        }

        .header-emblem {
            float: right;
            padding-left: 80px;
        }

            .header-emblem img {
                visibility: hidden;
                max-height: 100px !important;
            }

        .header-univ-logo {
            float: left;
            padding-right: 80px;
        }

            .header-univ-logo img {
                height: 100px !important;
            }

        .header {
            font-weight: 600;
            /*color: #0f128b;*/
            text-align: center;
        }

            .header .txp {
                font-size: 12px !important;
                margin: 0px !important;
                padding: 0px !important;
            }

            .header .university-title {
                padding-top: 15px !important;
                font-size: 23px !important;
                margin: 2px !important;
            }

            .header .header-title {
                font-size: 24px !important;
                padding-top: 8px !important;
                margin: 2px !important;
            }

            .header .subheader-title {
                font-size: 18px !important;
                margin: 2px !important;
            }

        .container-details {
            width: 100% !important;
            font-weight: normal;
            text-align: left;
            font-size: 13px !important;
        }

            .container-details .table-general-detail {
                width: 100%;
            }

                .container-details .table-general-detail td {
                    padding: 0px !important;
                    margin: 0px !important;
                }

        .report-name {
            font-size: 19px !important;
            /*color: red;*/
            font-weight: bold;
            height: 50px !important;
        }

        .act-number {
            font-weight: bold;
            font-size: 14px !important;
        }

        .bordered-header {
            padding: 2px !important;
            font-size: 14px !important;
            border: 1px solid;
        }

        .bordered-detail {
            font-size: 12px !important;
            border: 1px solid black;
            padding: 3px;
        }

        .bordered-detail-empty {
            height: 20px !important;
            border-bottom: 1px solid transparent;
        }

        .location {
            text-align: right;
            /*color: red;*/
            height: 50px !important;
            border: 0px !important;
        }

        .no-signature {
            width: 5%;
            border: 4px solid white;
        }

        .signature {
            /*color: red;*/
            font-size: 12px !important;
            height: 30px !important;
            width: 30%;
            border-top: 1px solid black;
        }

        .td-qr {
            text-align: center;
            height: 70px !important;
        }

            .td-qr img {
                max-height: 40px;
                width: 250px;
            }

        .table-statistics {
            margin-top: 10px !important;
            width: 100% !important;
            border-collapse: collapse;
            border-spacing: 0;
        }

            .table-statistics td {
                font-size: 13px !important;
                border: 1px solid black;
                padding: 3px !important;
            }

        .red {
            color: red !important;
        }

        .blue {
            color: blue !important;
        }
    </style>
</head>
<body>
    <table class="main-table">
        <thead>
            <tr>
                <th colspan="5">
                    <div class="header">
                        <p class="txp">@GeneralHelpers.GetInstitutionName().ToUpper()</p>
                        <p class="txp">FACULTAD DE @Model.Course.Career.Faculty.ToUpper()</p>
                        <p class="header-title">ACTA FINAL</p>
                    </div>
                </th>
            </tr>
            <tr>
                <th colspan="5">
                    <div class="container-details">
                        <table class="table-general-detail">
                            <tbody>
                                <tr>
                                    <td>&emsp;</td>
                                </tr>
                                <tr>
                                    <td class="bold">CAR. PROF.</td>
                                    <td>:</td>
                                    <td colspan="7">@Model.Course.Career.Name</td>
                                </tr>

                                <tr>
                                    <td class="bold">ASIGNATURA</td>
                                    <td>:</td>
                                    <td colspan="7">@Model.Course.Code @Model.Course.Name</td>
                                </tr>

                                <tr>
                                    <td class="bold">PERIODO</td>
                                    <td>:</td>
                                    <td>@Model.Term.Name</td>

                                    <td class="bold">AÑO/SEMEST</td>
                                    <td>:</td>
                                    <td>@(ConstantHelpers.ACADEMIC_YEAR.TEXT.ContainsKey(Model.Course.AcademicYear) ? ConstantHelpers.ACADEMIC_YEAR.TEXT[Model.Course.AcademicYear] : "-")</td>

                                    <td class="bold">CRÉDITO</td>
                                    <td>:</td>
                                    <td>@Model.Course.Credits</td>
                                </tr>

                                <tr>
                                    <td class="bold">DOCENTE</td>
                                    <td>:</td>
                                    <td>@Model.Course.Section.Teacher</td>

                                    <td class="bold">TURNO</td>
                                    <td>:</td>
                                    <td>M</td>

                                    <td class="bold">SECCIÓN</td>
                                    <td>:</td>
                                    <td>@Model.Course.Section.Code</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </th>
            </tr>
            <tr>
                <th colspan="5">&emsp;</th>
            </tr>
            <tr class="bordered-header">
                <th rowspan="2" class="bordered-header">Nº</th>
                <th rowspan="2" class="bordered-header">C&Oacute;DIGO</th>
                <th rowspan="2" class="bordered-header">APELLIDOS Y NOMBRES</th>
                <th colspan="2" class="bordered-header">PROMEDIO FINAL</th>
            </tr>

            <tr class="bordered-header">
                <th class="bordered-header">Nº</th>
                <th class="bordered-header">LETRAS</th>
            </tr>
        </thead>

        <tbody>

            @for (int i = 0; i < Model.Course.Section.Students.Count(); i++)
            {
                <tr class="bordered-detail">
                    <td class="bordered-detail center">@(i + 1)</td>
                    <td class="bordered-detail center">@Model.Course.Section.Students[i].UserName</td>
                    <td class="bordered-detail">@Model.Course.Section.Students[i].FullName</td>

                    @if (Model.Course.Section.Students[i].Status == ConstantHelpers.STUDENT_SECTION_STATES.WITHDRAWN)
                    {
                        <td class="bordered-detail center">RET</td>
                        <td class="bordered-detail center">RET</td>
                    }
                    else
                    {
                        <td class="bordered-detail center">@Model.Course.Section.Students[i].FinalGrade.ToString("00")</td>
                        <td class="bordered-detail center">@Model.Course.Section.Students[i].FinalGradeText</td>
                    }
                </tr>
            }
        </tbody>
    </table>
</body>
</html>