@model AKDEMIC.REPOSITORY.Repositories.Intranet.Templates.EvaluationReport.EvaluationReportInformationTemplate
@using Microsoft.AspNetCore.Hosting;
@using AKDEMIC.CORE.Helpers
@using AKDEMIC.CORE.Extensions;
@inject IWebHostEnvironment _webHostEnvironment
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <title>ACTA OFICIAL DE NOTAS</title>
    <link href="@(System.IO.Path.Combine(_webHostEnvironment.WebRootPath, @"css/views/evaluation_report/evaluation_report_fonts.css"))" rel="stylesheet" type="text/css" />
    
    <style>
        .bold {
            font-weight: bold;
        }

        .red {
            color: red;
        }

        .center {
            text-align: center;
        }

        .right {
            text-align: right;
        }

        .left {
            text-align: left;
        }

        body {
            font-family: "DejaVu Sans Condensed";
        }

        .main-table {
            width: 100% !important;
            border-collapse: collapse;
            border-spacing: 0;
        }

        table > tbody > tr {
            page-break-inside: avoid !important;
        }

        .header-univ-logo {
            float: left;
        }

            .header-univ-logo img {
                height: 100px !important;
            }


        .header {
            font-weight: 600;
        }

            .header .university-title {
                font-size: 11px !important;
            }

            .header .resolution-title {
                font-size: 11px !important;
                font-weight: normal !important;
            }

            .header .office-title {
                font-size: 11px !important;
            }

            .header .date-title {
                font-size: 11px !important;
                font-weight: normal !important;
            }

            .header .header-title {
                padding-left:400px !important;
                font-size: 35px !important;
            }


        .table-general-detail {
            width: 100%;
            padding-top:5px !important;
            text-align: left;
            font-weight: normal;
            font-size: 16px !important;
        }

            .table-general-detail td {
                padding: 2px !important;
                padding-top: 2px !important;
                padding-bottom: 2px !important;
                margin: 0px !important;
            }


        .report-name {
            font-size: 19px !important;
            /*color: red;*/
            font-weight: bold;
            height: 50px !important;
        }

        .act-number {
            font-weight: bold;
            font-size: 14px !important;
        }

        .bordered-header {
            padding: 2px !important;
            font-size: 14px !important;
            font-weight: normal;
            border: 1px solid;
            background-color: lightgray;
        }

        .bordered-detail {
            font-size: 12px !important;
            height: 20px !important;
            border: 1px solid black;
        }

        .bordered-detail-empty {
            height: 20px !important;
            border-top: 2px solid transparent;
            border-bottom: 2px solid transparent;
            background-color: white;
        }

        .borderder-detail-empty-header {
            border-top: 2px solid white;
        }

        .border-none {
            border: 0px !important;
            background-color: white;
        }

        .no-signature {
            width: 5%;
            border: 4px solid white;
        }

        .signature {
            /*color: red;*/
            font-size: 15px !important;
            height: 30px !important;
            border-top: 1px solid black;
        }

        .td-qr {
            text-align: center;
            height: 70px !important;
        }

            .td-qr img {
                max-height: 40px;
                width: 250px;
            }

        .table-statistics {
            margin-top: 10px !important;
            width: 100% !important;
            border-collapse: collapse;
            border-spacing: 0;
        }

            .table-statistics td {
                font-size: 14px !important;
                border: 1px solid black;
                padding: 6px !important;
            }

            .table-statistics .header-stat {
                background-color: lightgray;
            }
    </style>
</head>
<body>
    <table class="main-table">
        <thead>
          
        </thead>

        <tbody>
            <tr>
                <td colspan="7" height="485px"></td>
            </tr>
        </tbody>
        <tfoot>
            <tr>
                <td colspan="7">
                    <table style="width:100% !important;">
                        <tr>
                            <td style="padding-left:175px !important; width:750px !important;">
                                @Model.BasicInformation.CreatedAt.ToLocalDateTimeFormat()
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(Model.Course.Career.Faculty))
                                {
                                    @if (Model.Course.Career.Faculty.ToUpper().Trim().Contains("EDUCACIÓN") || Model.Course.Career.Faculty.ToUpper().Trim().Contains("CIENCIAS ADMINISTRATIVAS"))
                                    {
                                        @Html.Raw("Satipo, ")

                                        @Model.BasicInformation.CreatedAt.ToLocalDateTimeFormat()
                                    }
                                }
                              
                            </td>
                        </tr>
                    </table>

                    <table style="width:100% !important; margin-top:72px !important;">
                        <tr>
                            <td width="65%">
                            </td>
                            <td style="border-top:1px solid black; text-align:center;">
                                Jefe Dpto. Académico
                            </td>
                            <td width="5%">
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
        </tfoot>
    </table>
</body>
</html>