@model AKDEMIC.REPOSITORY.Repositories.Intranet.Templates.EvaluationReport.EvaluationReportInformationTemplate
@using Microsoft.AspNetCore.Hosting;
@using AKDEMIC.CORE.Helpers
@using AKDEMIC.CORE.Extensions;
@inject IWebHostEnvironment _webHostEnvironment
@{
    Layout = null;
    Model.Course.Section.Students = Model.Course.Section.Students.Where(x => x.Status != ConstantHelpers.STUDENT_SECTION_STATES.WITHDRAWN).ToList();
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <title>ACTA DE EVALUACIÓN FINAL</title>
    <link href="@(System.IO.Path.Combine(_webHostEnvironment.WebRootPath, @"css/views/evaluation_report/evaluation_report_fonts.css"))" rel="stylesheet" type="text/css" />
    
    <style>
        .bold {
            font-weight: bold;
        }

        .red {
            color: red;
        }

        .center {
            text-align: center;
        }

        .right {
            text-align: right;
        }

        .left {
            text-align: left;
        }

        body {
            font-family: "DejaVu Sans Condensed";
        }

        .main-table {
            width: 100% !important;
            border-collapse: collapse;
            border-spacing: 0;
        }

        table > tbody > tr {
            page-break-inside: avoid !important;
        }

        .header-univ-logo {
            float: left;
        }

            .header-univ-logo img {
                height: 120px !important;
            }


        .header {
            font-weight: 600;
            text-align: center;
            width: 100%;
        }

            .header .university-title {
                font-size: 22px !important;
                margin: 0px !important;
                padding-top: 5px !important;
                padding: 0px !important;
            }

            .header .office-title {
                font-size: 11px !important;
            }

            .header .date-title {
                font-size: 11px !important;
                font-weight: normal !important;
            }

            .header .header-title {
                font-size: 25px !important;
                margin: 0px !important;
                padding: 0px !important;
                padding-top: 0px !important;
                padding-bottom: 10px !important;
            }


        .table-term-detail {
            text-align: left;
            font-weight: normal;
            font-size: 13px !important;
        }

        .table-general-detail {
            width: 100%;
            text-align: left;
            font-weight: normal;
            font-size: 15px !important;
            border: 1px solid black;
            border-collapse: collapse;
        }

            .table-general-detail td {
                padding: 3px !important;
                margin: 0px !important;
                border: 1px solid black;
            }

        .report-name {
            font-size: 19px !important;
            /*color: red;*/
            font-weight: bold;
            height: 50px !important;
        }

        .act-number {
            font-weight: bold;
            font-size: 14px !important;
        }

        .bordered-header {
            padding: 2px !important;
            font-size: 14px !important;
            font-weight: normal;
            border: 1px solid;
            background-color: lightgray;
        }

        .bordered-detail {
            font-size: 12px !important;
            height: 20px !important;
            border: 1px solid black;
        }

        .bordered-detail-empty {
            height: 20px !important;
            border-top: 2px solid transparent;
            border-bottom: 2px solid transparent;
            background-color: white;
        }

        .borderder-detail-empty-header {
            border-top: 2px solid white;
        }

        .border-none {
            border: 0px !important;
            background-color: white;
        }

        .no-signature {
            width: 5%;
            /*border: 4px solid white;*/
        }

        .signature {
            /*color: red;*/
            font-size: 11px !important;
            height: 30px !important;
            border-top: 1px solid black;
        }

        .td-qr {
            text-align: center;
            height: 70px !important;
        }

            .td-qr img {
                max-height: 40px;
                width: 250px;
            }

        .table-statistics {
            margin-top: 10px !important;
            width: 100% !important;
            border-collapse: collapse;
            border-spacing: 0;
        }

            .table-statistics td {
                font-size: 14px !important;
                border: 1px solid black;
                padding: 6px !important;
            }

            .table-statistics .header-stat {
                background-color: lightgray;
            }

        .normal {
            font-weight: normal !important;
        }

            html, body {
            height: 100%;
        }

        .footer {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
        }

        .footer-signature-table {
            border: 1px solid black;
            border-collapse: collapse;
        }

        .footer-details-table {
            border: 1px solid black;
            border-collapse: collapse;
            font-size: 13px;
        }

            .footer-details-table td {
                border: 1px solid black;
                border-collapse: collapse;
                text-align: center;
            }

            .footer-details-table th {
                border: 1px solid black;
                border-collapse: collapse;
            }
    </style>
</head>
<body>
    <table class="main-table">
        <thead>
            <tr>
                <th width="20%">
                    <div class="header-univ-logo">
                        <img src="@Model.Img" />
                    </div>

                </th>
                <th>
                    <div class="header">
                        <p class="university-title">@GeneralHelpers.GetInstitutionName().ToUpper()</p>
                    </div>
                </th>
                <th width="20%">
                    <table class="table-term-detail">
                        <tr>
                            <td>FECHA: @DateTime.UtcNow.ToLocalDateFormat()</td>
                        </tr>
                        <tr>
                            <td>HORA: @DateTime.UtcNow.ToLocalTimeFormat()</td>
                        </tr>
                        <tr>
                            <td>SEMESTRE: @Model.Term.Name</td>
                        </tr>
                    </table>
                </th>
            </tr>
            <tr>
                <th colspan="3">
                    <div class="header">
                        <p class="header-title">
                            ACTA FINAL DE EVALUACIÓN
                        </p>
                    </div>
                </th>
            </tr>
            <tr>
                <th colspan="3">
                    <table class="table-general-detail">
                        <tbody>
                            <tr>
                                <td colspan="2" class="bold">ESCUELA PROFESIONAL: <span class="normal">@Model.Course.Career.Name</span></td>
                            </tr>
                            <tr>
                                <td colspan="2" class="bold">PLAN DE ESTUDIOS: <span class="normal">@Model.Course.Curriculum</span></td>
                            </tr>
                            <tr>
                                <td colspan="1" width="70%" class="bold">CURSO: <span class="normal">@Model.Course.Code - @Model.Course.Name</span></td>
                                <td colspan="1" class="bold">CICLO: <span class="normal">@(ConstantHelpers.ACADEMIC_YEAR.TEXT.ContainsKey(Model.Course.AcademicYear) ? ConstantHelpers.ACADEMIC_YEAR.TEXT[Model.Course.AcademicYear].ToUpper() : "-")</span></td>
                            </tr>
                            <tr>
                                <td colspan="1" class="bold">SECCIÓN: <span class="normal">@Model.Course.Section.Code</span></td>
                                <td colspan="1" class="bold">CRÉDITOS: <span class="normal">@Model.Course.Credits</span></td>
                            </tr>
                            <tr>
                                <td colspan="2" class="bold">DOCENTE: <span class="normal">@Model.Course.Section.Teacher</span></td>
                            </tr>
                        </tbody>
                    </table>
                </th>
            </tr>
        </thead>
    </table>

    <table width="100%" class="footer">
        <tr>
            <td colspan="3">
                <table width="100%">
                    <tr>
                        <td width="30%"></td>
                        <td>
                            <table width="100%" class="footer-details-table">
                                <tr>
                                    <th>ESTUDIANTES</th>
                                    <th>CANTIDAD</th>
                                </tr>
                                <tr>
                                    <td>APROBADOS</td>
                                    <td>@Model.Course.Section.Students.Where(y=>y.Status == ConstantHelpers.STUDENT_SECTION_STATES.APPROVED).Count()</td>
                                </tr>
                                <tr>
                                    <td>DESAPROBADOS</td>
                                    <td>@Model.Course.Section.Students.Where(y=>y.Status != ConstantHelpers.STUDENT_SECTION_STATES.APPROVED).Count()</td>
                                </tr>
                                <tr>
                                    <th>TOTAL</th>
                                    <th>@Model.Course.Section.Students.Count()</th>
                                </tr>
                            </table>
                        </td>
                        <td width="30%"></td>
                    </tr>
                </table>
            </td>
        </tr>
        <tr>
            <td colspan="3" height="10px"></td>
        </tr>
        <tr>
            <td colspan="3">
                <table width="100%" class="footer-signature-table">
                    <tr>
                        <td width="5%" class="center" height="80px">&emsp;</td>
                        <td width="23%" class="center">&emsp;</td>
                        <td width="5%" class="center">&emsp;</td>
                        <td width="23%" class="center">&emsp;</td>
                        <td width="5%" class="center">&emsp;</td>
                        <td width="23%" class="center">&emsp;</td>
                        <td width="5%" class="center">&emsp;</td>
                    </tr>
                    <tr>
                        <td class="no-signature">&emsp;</td>
                        <td class="center signature">DOCENTE</td>
                        <td class="no-signature">&emsp;</td>
                        <td class="center signature">COORDINADOR DE FACULTAD</td>
                        <td class="no-signature">&emsp;</td>
                        <td class="center signature">VICEPRESIDENTE ACADÉMICO</td>
                        <td class="no-signature">&emsp;</td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
</body>
</html>