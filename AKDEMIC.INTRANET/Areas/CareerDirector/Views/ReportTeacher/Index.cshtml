@using AKDEMIC.INTRANET.Areas.CareerDirector.Models.Report_eventViewModels
@model ReportEventViewModel
@{
    ViewBag.Title = "Reporte de docentes";
    ViewBag.SubTitle = "Docentes";
    ViewBag.Breadcrumbs = new[] {
new BreadcrumbViewData { Name = ViewBag.Title, Controller = null, Action = null }
};
    var DefaultTermId = ViewBag.DefaultTermId;
}


<input id="DefaultTermId" hidden value="@DefaultTermId" />
<div class="m-content">
    <div class="m-portlet">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <h3 class="m-portlet__head-text">
                        @ViewBag.SubTitle
                    </h3>
                </div>
            </div>
        </div>
        <div class="m-portlet__body">
            <div class="m-form--label-align-right m--margin-top-20 m--margin-bottom-30">
                <div class="row align-items-center">
                    <div class="col-xl-12 order-2 order-xl-1">
                        <div class="row">
                            <div class="form-group m-form__group col-xl-3">
                                <label>Periodo</label>
                                <select class="form-control m-input m-select2 select2-terms"></select>
                            </div>
                            <div class="form-group m-form__group col-xl-3">
                                <label>&emsp;</label>
                                <div class="m-input m-input-icon m-input-icon--left">
                                    <input type="text" class="form-control m-input m-input--pill m-input--solid" placeholder="Buscar docente..." id="search">
                                    <span class="m-input-icon__icon m-input-icon__icon--left">
                                        <span><i class="la la-search"></i></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <table class="table table-striped table-bordered" id="datatable_report"></table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/areas/careerdirector/report_teacher/index.js"></script>>
}
