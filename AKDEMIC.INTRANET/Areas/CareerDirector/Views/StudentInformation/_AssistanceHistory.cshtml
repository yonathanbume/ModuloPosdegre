@model List<SelectListItem>

<div class="m-portlet__head">
    <div class="m-portlet__head-caption">
        <div class="m-portlet__head-title">
            <h3 class="m-portlet__head-text">
                Registro de asistencia
            </h3>
        </div>
    </div>
    <div class="m-portlet__head-tools">
        <ul class="m-portlet__nav">
            <li class="m-portlet__nav-item">
                <a href="javascript:void(0)" class="m-portlet__nav-link m-portlet__nav-link--icon index-return"><i class="la la-close"></i></a>
            </li>
        </ul>
    </div>
</div>
<div class="m-portlet__body">
    @if (Model == null || Model.Count == 0)
    {
        <div class="m-alert m-alert--icon alert alert-danger" role="alert">
            <div class="m-alert__icon">
                <i class="la la-warning"></i>
            </div>
            <div id="error-text" class="m-alert__text">
                &nbsp;No posee historial de cursos matriculados
            </div>
        </div>
    }
    else
    {
        <div class="m-form--label-align-right">
            <div class="row align-items-center">
                <div class="col-xl-8 order-2 order-xl-1">
                    <div class="row">
                        <div class="col-xl-4">
                            <label>Periodo: &emsp;</label>
                            <select id="select-term" asp-items="@Model" class="form-control"></select>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <table class="table table-striped table-bordered" id="course_assistance_table">
            <thead>
                <tr>
                    <th>Curso</th>
                    <th>Total</th>
                    <th>Dictadas</th>
                    <th>Asistidas</th>
                    <th>Faltas</th>
                    <th>Opciones</th>
                </tr>
            </thead>
        </table>
        <br />
        <div class="m--hide" id="assistance_table_block">
            <table class="table table-striped table-bordered" id="assistance_table">
                <thead>
                    <tr>
                        <th>Semana</th>
                        <th>Sesion</th>
                        <th>Fecha</th>
                        <th>D&iacute;a</th>
                        @*<th>Inicio</th>
                            <th>Fin</th>*@
                        <th>Estado</th>
                    </tr>
                </thead>
            </table>
        </div>
    }
</div>