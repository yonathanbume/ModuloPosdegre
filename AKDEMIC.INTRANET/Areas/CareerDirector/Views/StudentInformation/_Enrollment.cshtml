    <table class="table table-striped table-bordered" id="enrollment_table">
        <thead>
            <tr>
                <th>C&oacute;digo</th>
                <th>Curso</th>
                <th>Secci&oacute;n</th>
                <th>Estudiantes</th>
                <th>Cr&eacute;ditos</th>
                <th>Opciones</th>
            </tr>
        </thead>
    </table>
</div>


<div id="enrollment-section-modal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    Cambio de secci&oacute;n
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="enrollment-section-form" asp-action="ChangeSection" asp-area="Academic" asp-controller="StudentInformation" enctype="multipart/form-data">
                <div class="modal-body">
                    <div class="m-alert m-alert--icon alert alert-danger m--hide" role="alert" id="enrollment-section-modal-alert">
                        <div class="m-alert__icon">
                            <i class="la la-warning"></i>
                        </div>
                        <div class="m-alert__text" id="enrollment-section-modal-text">
                            Por favor, corrija los errores pertinentes
                        </div>
                        <div class="m-alert__close">
                            <button type="button" class="close" data-close="alert" aria-label="Close"></button>
                        </div>
                    </div>

                    <input id="currentId" asp-for="StudentSectionId" value="" hidden />

                    <div class="form-group m-form__group m-form__group--first">
                        <label class="required-form-label">Sección actual</label>
                        <input id="currentSection" class="form-control" value="" disabled />
                    </div>

                    <div class="form-group m-form__group">
                        <label>Nueva secci&oacute;n:</label>
                        <select id="newSectionId" asp-for="NewSectionId" name="NewSectionId" class="m-select2"></select>
                    </div>

                    <div class="form-group m-form__group">
                        <label class="required-form-label">Nombre Resoluci&oacute;n</label>
                        <input asp-for="Resolution" class="form-control m-input" />
                    </div>

                    <div class="form-group m-form__group m-form__group--last">
                        <label>Archivo</label>
                        <div class="custom-file">
                            <input type="file" asp-for="File" id="sectionFile" class="custom-file-input" required>
                            <label class="custom-file-label" for="sectionFile">
                                Buscar archivo...
                            </label>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">
                        Cerrar
                    </button>
                    <button type="submit" class="btn btn-primary">
                        Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>