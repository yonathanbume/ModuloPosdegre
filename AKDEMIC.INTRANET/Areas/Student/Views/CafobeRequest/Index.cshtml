@{
    ViewBag.Title = "Solicitudes";
    ViewBag.SubTitle = "Listado de Solicitudes";
    ViewBag.Breadcrumbs = new[] {
new BreadcrumbViewData { Name = ViewBag.Title, Controller = null, Action = null }
};
}

<div class="m-content">
    <div class="m-portlet">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <h3 class="m-portlet__head-text">
                        @ViewBag.SubTitle
                    </h3>
                </div>
            </div>
        </div>
        <div class="m-portlet__body">
            <div class="m-form--label-align-right m--margin-top-20 m--margin-bottom-30">
                <div class="row align-items-center">
                    <div class="col-xl-12 order-2 order-xl-1">
                        <div class="row">
                            <div class="form-group m-form__group col-xl-6">
                                <label>Tipo de Solicitud</label>
                                <select id="type" class="form-control m-input m-select2">
                                    <option value="-1">Seleccione una opción</option>
                                    @foreach (var cafobeType in ConstantHelpers.CAFOBE_REQUEST.TYPE.VALUES)
                                    {
                                        <option value="@cafobeType.Key">@cafobeType.Value</option>
                                    }
                                </select>
                            </div>

                            <div class="form-group m-form__group col-xl-6">
                                <label>Estado</label>
                                <select id="status" class="form-control m-input m-select2">
                                    <option value="-1">Seleccione una opción</option>
                                    @foreach (var cafobeStatus in ConstantHelpers.CAFOBE_REQUEST.STATUS.VALUES)
                                    {
                                        <option value="@cafobeStatus.Key">@cafobeStatus.Value</option>
                                    }
                                </select>
                            </div>
                            <div class="form-group m-form__group col-xl-4">
                                <label>&emsp;</label>
                                <div class="m-input m-input-icon m-input-icon--left">
                                    <input type="text" class="form-control m-input m-input--pill m-input--solid" placeholder="Buscar..." id="search">
                                    <span class="m-input-icon__icon m-input-icon__icon--left">
                                        <span><i class="la la-search"></i></span>
                                    </span>
                                </div>
                            </div>


                        </div>
                    </div>
                    <div class="col-xl-12  order-1 m--align-right">
                        <a class="btn btn-primary btn-action" href="/estudiante/apoyo-economico/solicitudes">
                            <span>
                                <i class="fa fa-plus"></i>
                                Nueva Solicitud
                            </span>
                        </a>
                    </div>
                </div>

            </div>

            <table class="table table-striped table-bordered" id="data-table"></table>
        </div>
    </div>
</div>



@section Scripts {
    <script src="~/js/areas/student/cafoberequest/cafoberequestinfo.js"></script>
}