
@{
    ViewBag.Title = "Rendición de Cuenta";
    ViewBag.SubTitle = "Listado de Rendición de cuenta";
    ViewBag.Breadcrumbs = new[] {
new BreadcrumbViewData { Name = ViewBag.Title, Controller = null, Action = null }
};
}

<div class="m-content">
    <div class="m-portlet">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <h3 class="m-portlet__head-text">
                        @ViewBag.SubTitle
                    </h3>
                </div>
            </div>
        </div>
        <div class="m-portlet__body">
            <div class="m-form--label-align-right m--margin-top-20 m--margin-bottom-30">
                <div class="row align-items-center">
                    <div class="col-xl-12 order-2 order-xl-1">
                        <div class="row">

                            <div class="form-group m-form__group col-xl-6">
                                <label>Tipo de Solicitud</label>
                                <select id="type" class="form-control m-input m-select2">
                                    <option value="-1">Seleccione una opción</option>
                                    @foreach (var cafobeType in ConstantHelpers.CAFOBE_REQUEST.TYPE.VALUES)
                                    {
                                        <option value="@cafobeType.Key">@cafobeType.Value</option>
                                    }
                                </select>
                            </div>

                            <div class="form-group m-form__group col-xl-4">
                                <label>&emsp;</label>
                                <div class="m-input m-input-icon m-input-icon--left">
                                    <input type="text" class="form-control m-input m-input--pill m-input--solid" placeholder="Buscar..." id="search">
                                    <span class="m-input-icon__icon m-input-icon__icon--left">
                                        <span><i class="la la-search"></i></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

            <table class="table table-striped table-bordered" id="data-table"></table>
        </div>
    </div>
</div>

<!--Add Modal-->
<div class="modal fade" id="addModal" tabindex="-1000" role="dialog" aria-labelledby="detailLabel" aria-hidden="true">
    <div class="modal-dialog " role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">
                    Rendir Cuenta
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="add-form" class="m-form m-form--state" asp-controller="CafobeRequestDetail" asp-action="Add" asp-area="Student" method="post" enctype="multipart/form-data">
                <div class="modal-body">
                    <div class="row">
                        <input name="CafobeRequestId" hidden />
                        <div class="form-group m-form__group col-md-12">
                            <label class="form-control-label">Estado:</label>
                            <input name="StatusText" type="text" class="form-control m-input" disabled>
                        </div>
                        <div class="form-group m-form__group col-md-12">
                            <label class="form-control-label">Comentario:</label>
                            <input name="Comentary" type="text" class="form-control m-input" disabled>
                        </div>
                        <div class="form-group m-form__group col-md-12">
                            <label class="required-form-label">Archivo</label>
                            <div class="custom-file m-input-icon m-input-icon--right">
                                <input name="FileDetailFile" type="file" class="custom-file-input" accept="application/pdf, application/vnd.openxmlformats-officedocument.wordprocessingml.document, application/vnd.ms-excel" required>
                                <label id="FileDetailLabel" for="FileDetailFile" class="custom-file-label">Seleccione archivo</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <div style="text-align:right;">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">
                            Cancelar
                        </button>
                        <button id="btnSave" type="submit" class="btn btn-primary ladda-button" data-style="slide-down">
                            <span class="ladda-label">Guardar</span>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    <script src="~/js/areas/student/cafoberequest/cafoberequestdetail.js" asp-append-version="true"></script>
}