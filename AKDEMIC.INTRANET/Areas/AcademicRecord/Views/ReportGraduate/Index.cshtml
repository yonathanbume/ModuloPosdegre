@{
    ViewData["Title"] = "Reporte de grados";
    ViewData["Breadcrumbs"] = new[] {
    new BreadcrumbViewData { Name = "Reporte de Estudiantes",  Action = "Student" , Controller = "IntranetReport", Area = "Report" },
    new BreadcrumbViewData { Name = ViewData["Title"].ToString() }
    };
}
<div class="m-content">
    <div class="m-portlet">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <a asp-controller="IntranetReport" asp-area="Report" asp-action="Student" class="btn btn-primary m-btn m-btn--icon m-btn--icon-only"><i class="la la-arrow-left"></i></a>
                    &nbsp;
                    <h3 class="m-portlet__head-text"><i class="flaticon-search"></i>&nbsp;@ViewData["Title"]</h3>
                </div>
            </div>
        </div>
        <div class="m-portlet__body">
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel">
                        <div class="panel-body">
                            <div class="row">
                                <div class="table-responsive">
                                    <table cellpadding="3" cellspacing="0" border="0" style="width: 67%; margin: 0 auto 2em auto;">
                                        <tbody>
                                            <tr id="filter_col0" data-column="0">
                                                <td>Grado Tipo</td>
                                                <td align="center">
                                                    <select class="form-control column_filter" id="type">
                                                        <option>Todos</option>
                                                        <option value="@ConstantHelpers.Student.States.GRADUATED">@ConstantHelpers.Student.States.VALUES[ConstantHelpers.Student.States.GRADUATED]</option>
                                                        <option value="@ConstantHelpers.Student.States.BACHELOR">@ConstantHelpers.Student.States.VALUES[ConstantHelpers.Student.States.BACHELOR]</option>
                                                        <option value="@ConstantHelpers.Student.States.QUALIFIED">@ConstantHelpers.Student.States.VALUES[ConstantHelpers.Student.States.QUALIFIED]</option>
                                                    </select>
                                                </td>
                                            </tr>
                                            <tr id="filter_col1" data-column="1">
                                                <td>Escuela</td>
                                                <td align="center">
                                                    <select class="form-control column_filter" id="career">
                                                        <option>Todos</option>
                                                    </select>
                                                </td>
                                            </tr>
                                            <tr id="filter_col2" data-column="2">
                                                <td>Año de egreso</td>
                                                <td align="center">
                                                    <select class="form-control column_filter" id="year">
                                                        <option>Todos</option>
                                                    </select>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                    <table class="table table-striped table-bordered" id="table"></table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/areas/academicrecord/reportgraduate/index.js"></script>
}