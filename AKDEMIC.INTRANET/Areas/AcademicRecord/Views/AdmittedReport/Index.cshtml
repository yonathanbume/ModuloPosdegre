
@{
    ViewBag.Title = "Ingresantes por escuela y modalidad";
    ViewBag.Breadcrumbs = new[] {
    new BreadcrumbViewData { Name = "Reporte de Estudiantes",  Action = "Student" , Controller = "IntranetReport", Area = "Report" },
    new BreadcrumbViewData { Name = ViewBag.Title, Controller = null, Action = null }
};
}

<div class="m-content">
    <div class="m-portlet">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <a asp-controller="IntranetReport" asp-area="Report" asp-action="Student" class="btn btn-primary m-btn m-btn--icon m-btn--icon-only"><i class="la la-arrow-left"></i></a>
                    &nbsp;
                    <h3 class="m-portlet__head-text">
                        @ViewBag.Title
                    </h3>
                </div>
            </div>
            <div class="m-portlet__head-tools">
                <a asp-controller="AdmittedReport" asp-action="SummaryReport" class="btn btn-info btn-sm m-btn m-btn--icon">
                    <span>
                        <i class="la la-link"></i>
                        <span>Reporte Consolidado</span>
                    </span>
                </a>
                &nbsp;
                <button class="btn btn-primary btn-sm m-btn m-btn--icon" id="download_excel">
                    <span>
                        <i class="la la-download"></i>
                        <span>Descargar Reporte EXCEL</span>
                    </span>
                </button>
            </div>
        </div>
        <div class="m-portlet__body">
            <div class="form-group m-form__group row">
                <div class="col-xl-8 order-2 order-xl-1">
                    <div class="row">
                        <div class="form-group m-form__group col-xl-4">
                            <label>Periodo</label>
                            <select class="form-control m-input m-select2" id="select2-term"></select>
                        </div>

                        <div class="form-group m-form__group col-xl-4">
                            <label>Escuela</label>
                            <select class="form-control m-input m-select2" id="select2-careers">
                                <option>Todas</option>
                            </select>
                        </div>
                        
                        <div class="form-group m-form__group col-xl-4">
                            <label>Modalidad</label>
                            <select class="form-control m-input m-select2" id="select2-addmision-type">
                                <option>Todas</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <table class="table table-hover table-striped table-bordered" id="report"></table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/lib/jquery.fileDownload/jquery.fileDownload.min.js"></script>
    <script src="~/js/areas/academicrecord/admittedreport/index.js" asp-append-version="true"></script>
}