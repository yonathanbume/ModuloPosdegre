@{
    ViewBag.Title = "Reporte Por Tipo y Estado";
    ViewData["Breadcrumbs"] = new[] {
    new BreadcrumbViewData { Name = "Reporte de Estudiantes",  Action = "Student" , Controller = "IntranetReport", Area = "Report" },
new BreadcrumbViewData { Name = (string)ViewBag.Title }
};
}
<div class="m-content">
    <div class="m-portlet">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <a asp-controller="IntranetReport" asp-area="Report" asp-action="Student" class="btn btn-primary m-btn m-btn--icon m-btn--icon-only"><i class="la la-arrow-left"></i></a>
                    &nbsp;
                    <h3 class="m-portlet__head-text">
                        Reporte por Tipo y Estado
                    </h3>
                </div>
            </div>
        </div>
        <div class="m-portlet__body">
            <div class="m-form m-form--label-align-right m--margin-top-20 m--margin-bottom-30">
                <div class="row align-items-center">
                    <div class="col-xl-12 order-2 order-xl-1">
                        <div class="row">
                            <div class="form-group m-form__group col-md-3">
                                <label>Mes</label>
                                <select class="form-control m-select2" id="month">
                                    @for (int i = 1; i <= 12; i++)
                                    {
                                        if (i == DateTime.Now.Month)
                                        {
                                            <option value="@i" selected>@ConstantHelpers.MONTHS.VALUES[i]</option>
                                        }
                                        else
                                        {
                                            <option value="@i">@ConstantHelpers.MONTHS.VALUES[i]</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="container_chart">
                    <div id="chart" class="chart"></div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link href="~/css/chart.css" rel="stylesheet" />
}

@section Scripts {
    <script src="~/js/lib/highcharts/highcharts.js"></script>
    <script src="~/js/lib/highcharts/highcharts-more.js"></script>
    <script src="~/js/lib/highcharts/exporting.js"></script>
    <script src="~/js/lib/highcharts/export-data.js"></script>
    <script src="~/js/areas/academicrecord/reportrequest/reportfinishedpending.js"></script>
}