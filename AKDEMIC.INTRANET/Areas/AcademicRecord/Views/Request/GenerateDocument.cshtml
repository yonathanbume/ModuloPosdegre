@{
    ViewData["Title"] = "Generar Documento";
    ViewData["Breadcrumbs"] = new[] {
    new BreadcrumbViewData { Name = ViewData["Title"].ToString()}
    };
}

<div class="m-content">
    <div class="m-portlet">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <h3 class="m-portlet__head-text">
                        @ViewData["Title"]
                    </h3>
                </div>
            </div>
        </div>
        <div class="m-portlet__body">
            <div class="m-form--label-align-right">
                <div class="form-group row">
                    <label class="col-lg-3 col-form-label text-right">Estudiante:</label>
                    <div class="col-lg-6">
                        <select id="student_select" class="m-select2"></select>
                        <span class="form-text text-muted">Busque al estudiante por código o nombre</span>
                    </div>
                </div>
                @if ((bool)ViewBag.IsIntegrated)
                {
                    <div class="form-group row">
                        <label class="col-lg-3 col-form-label text-right">Tr&aacute;mite asociado</label>
                        <div class="col-lg-6">
                            <select id="user_procedures" class="m-select2">
                                <option value="">Seleccionar tramite</option>
                            </select>
                            <span class="form-text text-muted">Busque los tr&aacute;mites pendientes del estudiante</span>
                        </div>
                    </div>
                }

                <div class="form-group row">
                    <label class="col-lg-3 col-form-label text-right">Tipo de constancia:</label>
                    <div class="col-lg-6">
                        <select id="type_select" class="m-select2"></select>
                        <span class="form-text text-muted">Seleccione el tipo de constancia a generar</span>
                    </div>
                </div>
                <div class="form-group row d-none" id="div_select_term">
                    <label class="col-lg-3 col-form-label text-right">Semestre:</label>
                    <div class="col-lg-6">
                        <select id="term_select" class="m-select2"></select>
                        <span class="form-text text-muted">Seleccione semestre</span>
                    </div>
                </div>

                <div id="row_certificatestudies_partial" class="d-none">
                    <div class="form-group row">
                        <label class="col-lg-3 col-form-label text-right">Ciclos de Estudio:</label>
                        <div class="col-lg-6">
                            <select id="academicyear_partial_select" class="form-control m-input m-bootstrap-select m_selectpicker" multiple></select>
                            <span class="form-text text-muted">Seleccione Ciclos de Estudio</span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="offset-lg-3 col-lg-6">
                        <button id="btn-history" class="btn btn-primary m-btn m-btn--wide" title="Historial">
                            Mostrar historial
                        </button>
                        <button id="btn-create" class="btn btn-primary m-btn m-btn--wide" title="Generar">
                            Generar Documento
                        </button>
                    </div>
                </div>
            </div>
            <table class="table table-striped table-bordered" id="data-table"></table>
        </div>
    </div>
</div>

@await Html.PartialAsync("Partials/_ChangeStatusPartialModal")
@await Html.PartialAsync("Partials/_ObservationPartialModal")
@await Html.PartialAsync("Partials/_EditDataInfoPartialModal")


@section Scripts{
    <script src="~/js/lib/jquery.fileDownload/jquery.fileDownload.min.js"></script>
    <script>
        var IsIntegrated = @(ViewBag.IsIntegrated ? "true" : "false");
    </script>
    <script src="~/js/areas/academicrecord/request/generatedocument.js" asp-append-version="true"></script>
}