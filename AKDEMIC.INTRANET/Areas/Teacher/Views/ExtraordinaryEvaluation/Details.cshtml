@model AKDEMIC.INTRANET.Areas.Teacher.Models.ExtraordinaryEvaluationViewModels.ExtraordinaryEvaluationViewModel
@{
    ViewData["Title"] = "Evaluaciones Extraordinarias";
    ViewData["Breadcrumbs"] = new[] {
    new BreadcrumbViewData { Name = (string)ViewData["Title"], Action = "Index", Controller = "ExtraordinaryEvaluation", Area = "Teacher" },
    new BreadcrumbViewData { Name = "Detalles" }
    };
}

<div class="m-content">
    <input type="hidden" asp-for="Id" />
    <div class="m-portlet">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <h3 class="m-portlet__head-text">
                        @Model.Course
                    </h3>
                </div>
            </div>
        </div>
        <div class="m-portlet__body">
            <div class="row">
                <div class="col-md-12">
                    <label><strong>PERIODO :</strong> &nbsp; @Model.Term</label>
                </div>
                <div class="col-md-12">
                    <label><strong>DOCENTE PRESIDENTE:</strong> &nbsp; @Model.Teacher</label>
                </div>
                <div class="col-md-12">
                    <label><strong>COMIT&Eacute;:</strong> &nbsp; @string.Join("; ", Model.Committee)</label>
                </div>
            </div>
            <br />
            <div class="m-form--label-align-right m--margin-top-10 m--margin-bottom-10">
                <div class="row">
                    <div class="col-xl-8 order-2 order-xl-1">

                    </div>
                    <div class="col-xl-4 order-1 order-xl-2 m--align-right">
                        <button id="btn-download-pdf" type="button" class="btn btn-primary m-btn m-btn--icon" style="display:none">
                            <span>
                                <i class="la la-file-pdf-o"></i>
                                <span>Descargar PDF</span>
                            </span>
                        </button>
                        <div class="m-separator m-separator--dashed d-xl-none"></div>
                    </div>
                </div>
            </div>
            <table class="table table-striped table-bordered" id="data-table"></table>
        </div>
    </div>
</div>


<div id="grade-modal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    Calificar evaluaci&oacute;n extraordinaria
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="grade-form">
                <div class="modal-body">
                    <div class="m-alert m-alert--icon alert alert-danger m--hide" role="alert" id="evaluation-form-alert">
                        <div class="m-alert__icon">
                            <i class="la la-warning"></i>
                        </div>
                        <div class="m-alert__text" id="evaluation-form-alert-txt">
                            Por favor, corrija los errores pertinentes
                        </div>
                        <div class="m-alert__close">
                            <button type="button" class="close" data-close="alert" aria-label="Close"></button>
                        </div>
                    </div>
                    <input name="Id" type="hidden"/>
                    <div class="row">
                        <div class="col-md-12 form-group m-form__group m-form__group--first">
                            <label class="required-form-label">Nota obtenida</label>
                            <input name="Grade" class="form-control" type="number" step="0.01" min="0" max="20" required />
                        </div>
                    </div>
                    <div class="form-group m-form__group m-form__group--last">
                        <label class="required-form-label">Observaciones</label>
                        <textarea name="Observations" class="form-control" style="resize: none;"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">
                        Cerrar
                    </button>
                    <button type="submit" class="btn btn-primary">
                        Calificar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    <script src="~/js/lib/jquery.fileDownload/jquery.fileDownload.min.js"></script>
    <script src="~/js/areas/teacher/extraordinaryevaluation/detail.js" asp-append-version="true"></script>
}