@using AKDEMIC.INTRANET.Areas.Teacher.Models;
@model GradeCorrectionViewModel
@{
    ViewData["Title"] = "Corrección de Notas";
    ViewData["Breadcrumbs"] = new[] {
new BreadcrumbViewData { Name = "Corrección de Notas", Controller = null, Action = null}
};
}

<div class="m-content">
    <div class="m-portlet">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <h3 class="m-portlet__head-text">
                        Listado de solicitudes realizadas
                    </h3>
                </div>
            </div>
        </div>
        <div class="m-portlet__body">
            <div class="m-form--label-align-right m--margin-top-20 m--margin-bottom-30">
                <div class="row align-items-center">
                    <div class="col-xl-8 order-2 order-xl-1">
                        <div class="row">
                            <div class="form-group m-form__group col-xl-4">
                                <label>Periodo Académico:</label>
                                <select id="select_term" class="m-select2"></select>
                            </div>
                            <div class="form-group m-form__group col-xl-4">
                                <label>&emsp;</label>
                                <div class="m-input m-input-icon m-input-icon--left">
                                    <input type="text" class="form-control m-input m-input--pill m-input--solid" placeholder="Buscar..." id="search">
                                    <span class="m-input-icon__icon m-input-icon__icon--left">
                                        <span><i class="la la-search"></i></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-4 order-1 order-xl-2 m--align-right">
                        <button data-toggle="modal" data-target="#request_modal" class="btn btn-primary m-btn m-btn--icon">
                            <span>
                                <i class="la la-plus"></i>
                                <span>Nuevo solicitud</span>
                            </span>
                        </button>
                        <div class="m-separator m-separator--dashed d-xl-none"></div>
                    </div>
                </div>
            </div>

            <div class="m-datatable" id="ajax_data"></div>
        </div>
    </div>
</div>

<div class="modal fade" id="request_modal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">
                    Nueva solicitud
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="create-form" asp-controller="GradeCorrection" asp-action="CreateRequest" enctype="multipart/form-data">
                <div class="modal-body">
                    <div class="m-alert m-alert--icon alert alert-danger m--hide" role="alert" id="create-form-alert">
                        <div class="m-alert__icon">
                            <i class="la la-warning"></i>
                        </div>
                        <div class="m-alert__text" id="create-form-alert-txt">
                            Oh rayos! Ocurri&oacute; un error en el servidor
                        </div>
                        <div class="m-alert__close">
                            <button type="button" class="close" data-close="alert" aria-label="Close"></button>
                        </div>
                    </div>

                    <div class="row m-form__group--first">
                        <div class="form-group m-form__group col-lg-8">
                            <label for="courses">Curso</label>
                            <select id="courses" name="courses" class="form-control m-select2" required>
                                <option></option>
                            </select>
                        </div>
                        <div class="form-group m-form__group col-lg-4">
                            <label for="section">Secci&oacute;n</label>
                            <select id="section" name="section" class="form-control m-select2" required>
                                <option></option>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group m-form__group col-12">
                            <label for="student">Estudiante</label>
                            <select id="student" name="student" class="form-control m-select2" placeholder="Seleccione un estudiante" required>
                                <option></option>
                            </select>
                        </div>
                    </div>
                    <div class=" row">
                        <div class="form-group m-form__group col-lg-6">
                            <label asp-for="GradeId">Evaluaci&oacute;n</label>
                            <select asp-for="GradeId" class="form-control m-select2" required>
                                <option></option>
                            </select>
                        </div>
                        <div class="form-group m-form__group col-lg-2">
                            <label asp-for="GradeId">&emsp;</label>
                            <label class="m-checkbox m-checkbox--bold m-checkbox--state-primary">
                                <input asp-for="NotTaken" type="checkbox"> No rindió
                                <span></span>
                            </label>
                        </div>
                        <div class="form-group m-form__group col-lg-4">
                            <label asp-for="NewGrade">Nueva nota</label>
                            <input asp-for="NewGrade" id="cStartDate" class="form-control" placeholder="Nueva nota" type="number" max="20" min="0" required />
                        </div>
                    </div>
                    <div class="form-group m-form__group">
                        <label>Motivo / Raz&oacute;n</label>
                        <textarea asp-for="Observations" class="form-control disable-resize" required></textarea>
                    </div>
                    <div class="form-group m-form__group">
                        <label for="File">Archivo adjunto</label>
                        <div></div>
                        <div class="custom-file">
                            <input asp-for="File" class="custom-file-input" lang="es" />
                            <label class="custom-file-label" for="ResolutionFile">
                                Seleccione un archivo
                            </label>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal"> Cerrar </button>
                    <button type="submit" class="btn btn-primary btn-submit"> Guardar </button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="request_student_modal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">
                    Nueva solicitud
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="request_student_form">
                <div class="modal-body">
                    <input type="hidden" name="Id" />
                    <div class="row m-form__group--first">
                        <div class="form-group m-form__group col-lg-8">
                            <label for="courses">Curso</label>
                            <input name="CourseFullName" class="form-control" disabled />
                        </div>
                        <div class="form-group m-form__group col-lg-4">
                            <label for="section">Secci&oacute;n</label>
                            <input name="Section" class="form-control" disabled />
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group m-form__group col-12">
                            <label for="student">Estudiante</label>
                            <input name="StudentFullName" class="form-control" disabled />
                        </div>
                    </div>
                    <div class=" row">
                        <div class="form-group m-form__group col-lg-8">
                            <label>Nota</label>
                            <input name="Evaluation" class="form-control" disabled />
                        </div>
                        <div class="form-group m-form__group col-lg-4">
                            <label>Nueva nota</label>
                            <input name="NewGrade" class="form-control" placeholder="Nueva nota" type="number" max="20" min="0" required />
                        </div>
                    </div>
                    <div class="form-group m-form__group">
                        <label>Motivo / Raz&oacute;n</label>
                        <textarea name="Observations" class="form-control disable-resize" disabled></textarea>
                    </div>
                    <div class="grade_correction_file_container d-none">
                        Archivo Adjunto : <a href="#" target="_blank" class="m--font-primary m-link m--font-boldest grade_correction_file_path">Descargar</a>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger btn-student-request-reject"> Rechazar </button>
                    <button type="button" class="btn btn-primary btn-student-request-accept"> Aceptar </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/areas/teacher/gradecorrection/index.js" asp-append-version="true"></script>
}