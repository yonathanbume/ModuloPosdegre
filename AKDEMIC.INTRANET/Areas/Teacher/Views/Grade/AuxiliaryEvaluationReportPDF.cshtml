@model AKDEMIC.INTRANET.Areas.Teacher.Models.GradeViewModels.ActaScoresViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <title>REGISTRO AUXILIAR DE EVALUACIONES</title>
    <style>
        .bold {
            font-weight: bold;
        }

        .red {
            color: red;
        }

        .center {
            text-align: center;
        }

        .right {
            text-align: right;
        }

        .left {
            text-align: left;
        }

        .main-table {
            width: 100% !important;
            border-collapse: collapse;
            border-spacing: 0;
        }

        table > tbody > tr {
            page-break-inside: avoid !important;
        }

        .header-univ-logo {
            float: left;
        }

            .header-univ-logo img {
                height: 100px !important;
            }


        .header {
            font-weight: 600;
            text-align: center;
            width: 100%;
        }

            .header .university-title {
                font-size: 18px !important;
                margin: 0px !important;
                padding-top: 5px !important;
                padding: 0px !important;
            }

            .header .resolution-title {
                font-size: 11px !important;
                font-weight: normal !important;
                margin: 0px !important;
                padding: 0px !important;
                padding-top: 5px !important;
            }

            .header .office-title {
                font-size: 11px !important;
            }

            .header .date-title {
                font-size: 11px !important;
                font-weight: normal !important;
            }

            .header .header-title {
                font-size: 18px !important;
                margin: 0px !important;
                padding: 0px !important;
                padding-top: 10px !important;
                padding-bottom: 10px !important;
            }


        .table-general-detail {
            width: 100%;
            text-align: left;
            font-weight: normal;
            font-size: 12px !important;
        }

            .table-general-detail td {
                padding: 0px !important;
                padding-top: 6px !important;
                padding-bottom: 0px !important;
                margin: 0px !important;
            }


        .report-name {
            font-size: 19px !important;
            /*color: red;*/
            font-weight: bold;
            height: 50px !important;
        }

        .act-number {
            font-weight: bold;
            font-size: 14px !important;
        }

        .bordered-header {
            padding: 2px !important;
            font-size: 14px !important;
            font-weight: bold;
            border: 1px solid;
            background-color: white;
        }

        .bordered-detail {
            font-size: 12px !important;
            height: 20px !important;
            border: 1px solid black;
        }

        .bordered-detail-empty {
            height: 20px !important;
            border-top: 2px solid transparent;
            border-bottom: 2px solid transparent;
            background-color: white;
        }

        .borderder-detail-empty-header {
            border-top: 2px solid white;
        }

        .border-none {
            border: 0px !important;
            background-color: white;
        }

        .no-signature {
            width: 5%;
            border: 4px solid white;
        }

        .signature {
            /*color: red;*/
            font-size: 11px !important;
            height: 30px !important;
            border-top: 1px solid black;
        }

        .td-qr {
            text-align: center;
            height: 70px !important;
        }

            .td-qr img {
                max-height: 40px;
                width: 250px;
            }

        .table-statistics {
            margin-top: 10px !important;
            width: 100% !important;
            border-collapse: collapse;
            border-spacing: 0;
        }

            .table-statistics td {
                font-size: 14px !important;
                border: 1px solid black;
                padding: 6px !important;
            }

            .table-statistics .header-stat {
                background-color: lightgray;
            }
    </style>
</head>
<body>
    <table class="main-table">
        <thead>
            <tr>
                <th colspan="12">
                    <table width="100%">
                        <tr width="15%">
                            <th>
                                <div class="header-univ-logo">
                                    <img src="@Model.Img" />
                                </div>
                            </th>
                            <th colspan="7">
                                <div class="header">
                                    <p class="university-title">@GeneralHelpers.GetInstitutionName().ToUpper()</p>
                                    <p class="university-title">VICERRECTORADO ACAD&Eacute;MICO</p>
                                    <p class="resolution-title">Oficina de Tecnolog&iacute;a de la Informaci&oacute;n</p>
                                </div>
                            </th>
                            <th width="15%">
                            </th>
                        </tr>
                    </table>
                </th>

            </tr>
            <tr>
                <th colspan="12">
                    <div class="header">
                        <p class="header-title">
                            REGISTRO DE EVALUACI&Oacute;N PERMANENTE
                        </p>
                    </div>
                </th>
            </tr>
            <tr>
                <th colspan="12">
                    <table class="table-general-detail">
                        <tbody>
                            <tr>
                                <td class="bold" width="18%">ESCUELA PROFESIONAL</td>
                                <td>:</td>
                                <td>@Model.BasicInformation.Career</td>

                                <td class="bold" width="14%">SEMESTRE</td>
                                <td>:</td>
                                <td>@Model.BasicInformation.Term</td>
                            </tr>
                            <tr>
                                <td class="bold">TIPO</td>
                                <td>:</td>
                                <td>@Model.BasicInformation.Type</td>

                                <td class="bold">PLAN DE ESTUDIOS</td>
                                <td>:</td>
                                <td>@Model.BasicInformation.Curriculum</td>
                            </tr>
                            <tr>
                                <td class="bold">CURSO</td>
                                <td>:</td>
                                <td>@Model.BasicInformation.Course</td>

                                <td class="bold">SIGLA</td>
                                <td>:</td>
                                <td>@Model.BasicInformation.CourseCode</td>
                            </tr>
                            <tr>
                                <td class="bold">DPTO. ACAD&Eacute;MICO</td>
                                <td>:</td>
                                <td>@Model.BasicInformation.TeacherAcademicDepartment</td>

                                <td class="bold">CR&Eacute;DITOS</td>
                                <td>:</td>
                                <td>@Model.BasicInformation.Credits</td>
                            </tr>
                        </tbody>
                    </table>
                </th>
            </tr>
            <tr>
                <th>&emsp;</th>
            </tr>
            <tr>
                <th class="bordered-header">Nº</th>
                <th class="bordered-header">C&Oacute;DIGO</th>
                <th class="bordered-header">APELLIDOS Y NOMBRES</th>
                <th class="bordered-header">EMAIL</th>

                @for (int i = 0; i < 7; i++)
                {
                    <th class="bordered-header">&emsp;</th>
                }

                <th class="bordered-header">NOTA</th>
            </tr>
        </thead>
        <tbody>

            @for (int i = 0; i < Model.Rows.Count(); i++)
            {
                <tr class="bordered-detail">
                    <td class="bordered-detail center">@(i+1)</td>
                    <td class="bordered-detail center">@Model.Rows[i].Code</td>
                    <td class="bordered-detail">@Model.Rows[i].Names</td>
                    <td class="bordered-detail">@Model.Rows[i].Email</td>

                    @for (int v = 0; v < 7; v++)
                    {
                        <th class="bordered-detail">&emsp;</th>
                    }

                    <td class="bordered-detail center bold">&emsp;</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>