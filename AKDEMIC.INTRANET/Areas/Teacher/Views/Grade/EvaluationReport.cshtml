@model AKDEMIC.INTRANET.Areas.Teacher.Models.GradeViewModels.ActaScoresViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <title>Acta de notas</title>
    <style>
        body {
            font-family: "Calibri";
            font-size: 13px;
        }

        h1 {
            margin-bottom: 5px !important;
            font-size: 28px;
        }

        h2 {
            margin: 0px;
            font-size: 18px;
        }

        img {
            top: 0;
            left: 0;
            max-height: 60px;
        }

        header {
            width: 100%;
            text-align: center;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            font-weight: normal;
        }

        tr {
            page-break-inside: avoid;
        }


        th {
            page-break-inside: avoid;
        }

        th, td {
            border: 1px solid black;
            padding: 3px 3px !important;
        }

        th {
            font-weight: normal;
            text-align: left;
        }

        .red {
            color: red;
        }

        .bold {
            font-weight: bold;
            background-color: lightgray;
        }

        .center {
            text-align: center;
        }

        .header2 {
            font-size: 10px;
            padding: 3px 0px !important;
        }

        .header > th, td {
            border: 1px solid black;
            padding: 5px 3px !important;
        }

        .footer {
            font-size: 15px;
            text-align: center;
            font-style: italic;
            bottom: 0;
            left: 0;
            right: 0;
            margin-bottom: -6px;
        }
    </style>


    <style>
        .watermark {
            /*height: 450px;
                    width: 600px;*/
            position: relative;
            overflow: hidden;
        }

            .watermark .watermark-text {
                z-index: -1;
                position: absolute;
                top: 400px;
                left: 220px;
                color: #d2d2d2;
                font-size: 65px;
                pointer-events: none;
                -webkit-transform: rotate(-25deg);
                -moz-transform: rotate(-25deg);
            }

        .watermark-off .watermark-text {
            display: none;
        }
    </style>
</head>
<body class="watermark">

    <p class="watermark-text">Borrador de Acta</p>
    <br />
    <div style="position:absolute;text-align: center;padding: 20px 20px;">
        <img src="@Model.Img" />
    </div>
    <header>
        <h1 class="negrita">@GeneralHelpers.GetInstitutionName().ToUpper()</h1>
        <h2 class="negrita">@Model.HeaderText</h2>
        <h2 class="negrita">@Model.SubHeaderText</h2>
    </header>
    <br />
    <h2 style="padding-left:20px;">ACTA DE NOTAS:</h2>
    <br />
    <table class="header">
        <tbody>
            <tr>
                <td class="bold" style="width:9%">DOCENTE:</td>
                <td colspan="3">@Model.BasicInformation.Teacher</td>
                <td class="bold">SEMESTRE ACAD&Eacute;MICO:</td>
                <td>@Model.BasicInformation.Term</td>
            </tr>
            <tr>
                <td class="bold">CURSO:</td>
                <td style="width:45%">@Model.BasicInformation.Course</td>
                <td class="bold" style="width:11%;">CR&Eacute;DITOS:</td>
                <td style="width:6%;">@Model.BasicInformation.Credits</td>
                <td class="bold" style="width:18%">CICLO DEL CURSO:</td>
                <td>@Model.BasicInformation.Cycle</td>
            </tr>
            <tr>
                <td class="bold">ESCUELA:</td>
                <td colspan="5">@Model.BasicInformation.Career</td>
            </tr>
            <tr>
                <td class="bold">SECCI&Oacute;N:</td>
                <td>@Model.BasicInformation.Section</td>
                <td class="bold">AVANCE:</td>
                <td colspan="3">@Model.BasicInformation.CompletionPercentage%</td>
            </tr>
        </tbody>
    </table>
    <br />
    <br />
    <table>
        <thead>
            <tr>
                <th colspan="4" style="border:0px;"></th>
                <th colspan="2" class="bold center header2">EVALUACI&Oacute;N REGULAR</th>
                @if (Model.Rows.Any(y => y.HasSusti))
                {
                    <th colspan="2" class="bold center header2">EVAL. SUSTITUTORIO</th>
                }
                <th colspan="3" class="bold center header2">EVALUACI&Oacute;N FINAL</th>
            </tr>
            <tr>
                <th class="bold center">N°</th>
                <th class="bold center">C&Oacute;DIGO</th>
                <th class="bold center">APELLIDOS</th>
                <th class="bold center">NOMBRES</th>
                <th class="bold center">N°</th>
                <th class="bold center">LETRAS</th>
                @*<th class="bold center">ASIST.%</th>*@
                @if (Model.Rows.Any(y => y.HasSusti))
                {
                    <th class="bold center">N°</th>
                    <th class="bold center">LETRAS</th>
                }
                <th class="bold center">N°</th>
                <th class="bold center">LETRAS</th>
                <th class="bold center">APROB./DESAPR.</th>
            </tr>
        </thead>
        <tbody>
            @for (var i = 0; i < Model.Rows.Count; i++)
            {
                <tr>
                    <th>@Model.Rows[i].Order</th>
                    <th>@Model.Rows[i].Code</th>
                    <th>@Model.Rows[i].Surnames</th>
                    <th>@Model.Rows[i].Names</th>

                    @if (Model.Rows[i].Withdrawn)
                    {
                        <th>@Model.Rows[i].RegularEvaluationNumber</th>
                        <th>@Model.Rows[i].RegularEvaluationText</th>
                    }
                    else
                    {
                        @if (Model.Rows[i].HasGrades)
                        {
                            @if (Model.Rows[i].RegularEvaluationNumber < Model.Approbed)
                            {
                                <th class="red">@Model.Rows[i].RegularEvaluationNumber</th>
                                <th class="red">@Model.Rows[i].RegularEvaluationText</th>
                            }
                            else
                            {
                                <th>@Model.Rows[i].RegularEvaluationNumber</th>
                                <th>@Model.Rows[i].RegularEvaluationText</th>
                            }
                        }
                        else
                        {
                            <th>-</th>
                            <th>-</th>
                        }
                    }

                    @if (Model.Rows.Any(y => y.HasSusti))
                    {
                        <th>@Model.Rows[i].SustEvaluation</th>
                        <th>@Model.Rows[i].SustEvaluationText</th>
                    }

                    @if (Model.Rows[i].Withdrawn)
                    {
                        <th>-</th>
                        <th>@Model.Rows[i].FinalEvaluationText</th>
                        <th>@Model.Rows[i].FinalEvaluationApprobed</th>
                    }
                    else
                    {
                        @if (Model.Rows[i].HasGrades)
                        {
                            @if (Model.Rows[i].FinalEvaluationNumber < Model.Approbed)
                            {
                                <th class="red">@Model.Rows[i].FinalEvaluation</th>
                                <th class="red">@Model.Rows[i].FinalEvaluationText</th>
                                <th class="red">@Model.Rows[i].FinalEvaluationApprobed</th>
                            }
                            else
                            {
                                <th>@Model.Rows[i].FinalEvaluation</th>
                                <th>@Model.Rows[i].FinalEvaluationText</th>
                                <th>@Model.Rows[i].FinalEvaluationApprobed</th>
                            }
                        }
                        else
                        {
                            <th>-</th>
                            <th>-</th>
                            <th>-</th>
                        }
                    }

                </tr>
            }
            @if (Model.Rows.Count == 0)
            {
                <tr>
                    <th class="center" colspan="12">No hay estudiantes en la sección</th>
                </tr>
            }
        </tbody>
    </table>
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <div style="width: 100%;">
        <div style="width: 30%; text-align: center;  display: inline-block">
            <label style="border-top: 1px solid black; width: 225px; display: inline-block;font-size: 12px;">
                @Model.BasicInformation.Teacher<br />(DOCENTE)
            </label>
        </div>
    </div>
</body>
</html>
