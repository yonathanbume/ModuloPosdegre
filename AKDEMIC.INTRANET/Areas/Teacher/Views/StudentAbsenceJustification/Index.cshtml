@using AKDEMIC.INTRANET.Areas.Student.Models.AbsenceJustificationViewModels
@model AbsenceJustificationViewModel
@{
    ViewBag.Title = "Justificación de Inasistencias Estudiante";
    ViewBag.SubTitle = "Listado de solicitudes realizadas por estudiantes";
    ViewBag.Breadcrumbs = new[] {
        new BreadcrumbViewData { Name = ViewBag.Title }
    };
}

<div class="m-content">
    <div class="m-portlet">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <h3 class="m-portlet__head-text">
                        @ViewBag.SubTitle
                    </h3>
                </div>
            </div>
        </div>
        <div class="m-portlet__body">

            @if (User.IsInRole(ConstantHelpers.ROLES.CAREER_DIRECTOR))
            {
                <div class="m-form--label-align-right m--margin-bottom-20">
                    <div class="row align-items-center">
                        <div class="col-xl-8 order-2 order-xl-1">
                            <div class="row">
                                <div class="form-group m-form__group col-xl-4">
                                    <label class="form-control-label">Ver opciones como:</label>
                                    <select class="form-control select-view">
                                        <option value="1">DOCENTE</option>
                                        <option value="2">DIRECTOR</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-4 order-1 order-xl-2 m--align-right">
                            <div class="m-separator m-separator--dashed d-xl-none"></div>
                        </div>
                    </div>
                </div>
            }

            <div class="m-form--label-align-right m--margin-bottom-20">
                <div class="row align-items-center">
                    <div class="col-xl-8 order-2 order-xl-1">
                        <div class="row">
                            <div class="form-group m-form__group col-xl-4">
                                <label>Filtrar Estado:</label>
                                <select id="state-select" class="m-select2">
                                    <option value="null">Todos</option>
                                    @foreach (var item in ConstantHelpers.Intranet.StudentAbsenceJustification.Status.VALUES)
                                    {
                                        <option value="@item.Key">@item.Value</option>
                                    }
                                </select>
                            </div>

                            <div class="form-group m-form__group col-xl-4">
                                <label>&nbsp;</label>
                                <div class="m-input m-input-icon m-input-icon--left">
                                    <input type="text" class="form-control m-input m-input--pill m-input--solid" placeholder="Buscar..." id="search">
                                    <span class="m-input-icon__icon m-input-icon__icon--left">
                                        <span><i class="la la-search"></i></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-4 order-1 order-xl-2 m--align-right">
                        <button id="btn-add" class="btn btn-primary btn-sm m-btn m-btn--icon" data-toggle="modal" data-target="#create-modal">
                            <span>
                                <i class="la la-plus"></i>
                                <span>Nueva solicitud</span>
                            </span>
                        </button>
                        <div class="m-separator m-separator--dashed d-xl-none"></div>
                    </div>
                </div>
            </div>
            <table class="table table-striped table-bordered" id="data-table"></table>
        </div>
    </div>
</div>

<div class="modal fade" id="detail_modal" tabindex="-1" role="dialog" aria-labelledby="detailModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-primary font-weight-bold" id="detail-modal-label">
                    Solicitud de justificaci&oacute;n de inasistencia
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="form-group col-lg-12">
                        <label class="form-control-label">Estudiante</label>
                        <input id="detail-student" class="form-control" disabled />
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-lg-12">
                        <label class="form-control-label">Curso</label>
                        <input id="detail-course" class="form-control" disabled />
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-lg-12">
                        <label class="form-control-label">Clase</label>
                        <input id="detail-class" class="form-control" disabled />
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-lg-6">
                        <label class="form-control-label">Fecha de Solicitud</label>
                        <input id="detail-date" class="form-control" disabled />
                    </div>
                    <div class="form-group col-lg-6">
                        <label class="form-control-label">Estado</label>
                        <input id="detail-status" class="form-control" disabled />
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-lg-12">
                        <label class="form-control-label">Justificaci&oacute;n</label>
                        <textarea id="detail-description" class="form-control" required disabled style="height: 110px; resize: none;"></textarea>
                    </div>
                </div>

                <div class="form-group" id="teacher-observation">
                    <label class="form-control-label">Observaci&oacute;n del docente</label>
                    <textarea id="detail-observation" class="form-control" required disabled style="height: 110px; resize: none;"></textarea>
                </div>

                <div id="fileDiv" class="row">
                    <div class="form-group col-lg-12">
                        <label class="form-control-label col-form-label">Archivo de apoyo</label>
                        (<a id="file-url" href="#" target="_blank"><span><i class="la la-download"></i><span>Descargar</span></span></a>)
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="validate-modal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-primary font-weight-bold" id="detail-modal-label">
                    Validar justificaci&oacute;n de inasistencia
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="validate-form" class="m-form m-form--state" asp-controller="StudentAbsenceJustification" asp-action="ValidateJustification" asp-area="Teacher">
                <div class="modal-body">
                    <div class="row">
                        <div class="form-group col-lg-12">
                            <label class="form-control-label">Estudiante</label>
                            <input id="validate-student" class="form-control" disabled />
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-md-6">
                            <label class="form-control-label">Curso</label>
                            <input id="validate-course" class="form-control" disabled />
                        </div>
                        <div class="form-group col-md-6">
                            <label class="form-control-label">Clase</label>
                            <input id="validate-class" class="form-control" disabled />
                        </div>
                    </div>

                    <input id="justificationId" name="Id" class="form-control" hidden />

                    <div class="form-group">
                        <label class="form-control-label">Observaci&oacute;n</label>
                        <textarea id="validate-observation" name="Observation" class="form-control" style="height: 110px; resize: none;"></textarea>
                    </div>

                    <div class="m-alert m-alert--icon alert alert-info" role="alert" id="approve-form-alert">
                        <div class="m-alert__icon">
                            <i class="la la-warning"></i>
                        </div>
                        <div class="m-alert__text" id="approve-form-alert-txt">
                            En caso de ingresar una observación, la justificación será derivada como observada
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">
                        Cerrar
                    </button>
                    <button type="submit" class="btn btn-primary">
                        Validar justificaci&oacute;n
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="create-modal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-primary font-weight-bold" id="add-modal-label">
                    Solicitud de Justificación de Inasistencia
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="create-form" class="m-form m-form--state" asp-controller="StudentAbsenceJustification" asp-action="Create" asp-area="Teacher" enctype="multipart/form-data">
                <div class="modal-body">
                    <div class="m-alert m-alert--icon alert alert-danger m--hide" role="alert" id="create-form-alert">
                        <div class="m-alert__icon">
                            <i class="la la-warning"></i>
                        </div>
                        <div class="m-alert__text" id="create-form-alert-txt">
                            Oh rayos! Ocurri&oacute; un error en el servidor
                        </div>
                        <div class="m-alert__close">
                            <button type="button" class="close" data-close="alert" aria-label="Close"></button>
                        </div>
                    </div>

                    <div class="m-alert m-alert--icon alert alert-info" role="alert" id="approve-form-alert">
                        <div class="m-alert__icon">
                            <i class="la la-warning"></i>
                        </div>
                        <div class="m-alert__text" id="create-form-alert-txt">
                            - Se listarán solo las secciones con horarios asignados<br />
                            - En caso de ingresar una observación, la justificación será derivada como observada
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="m-form__group-sub col-lg-6">
                            <label class="form-control-label">Curso</label>
                            <select class="form-control select2-courses"></select>
                        </div>
                        <div class="m-form__group-sub col-lg-6">
                            <label class="form-control-label">Estudiantes</label>
                            <select class="form-control select2-students"></select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="m-form__group-sub col-lg-12">
                            <label asp-for="ClassStudentId" class="form-control-label"></label>
                            <select asp-for="ClassStudentId" class="form-control select2-classes" required></select>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="m-form__group-sub col-lg-6">
                            <label asp-for="Justification" class="form-control-label"></label>
                            <textarea asp-for="Justification" class="form-control" required maxlength="500" style="height: 110px; resize: none;"></textarea>
                        </div>
                        <div class="m-form__group-sub col-lg-6">
                            <label asp-for="Observation" class="form-control-label"></label>
                            <textarea asp-for="Observation" class="form-control" maxlength="500" style="height: 110px; resize: none;"></textarea>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="m-form__group-sub col-lg-12">
                            <label asp-for="File" class="form-control-label"></label>
                            <div class="custom-file">
                                <input asp-for="File" class="form-control m-input custom-file-input" placeholder="Archivo de apoyo" accept="image/*,application/pdf" type="file" />
                                <label class="custom-file-label selected" for="File">Selecciona un Archivo</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">
                        Cerrar
                    </button>
                    <button id="btnCreate" type="submit" class="btn btn-primary ladda-button" data-style="slide-down">
                        <span class="ladda-label">Guardar</span>
                        <span class="ladda-spinner"></span>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @if (User.IsInRole(ConstantHelpers.ROLES.CAREER_DIRECTOR))
    {
        <script src="~/js/areas/teacher/studentabsencejustification/director.js" asp-append-version="true"></script>
    }
    else
    {
        <script src="~/js/areas/teacher/studentabsencejustification/index.js" asp-append-version="true"></script>
    }
}
