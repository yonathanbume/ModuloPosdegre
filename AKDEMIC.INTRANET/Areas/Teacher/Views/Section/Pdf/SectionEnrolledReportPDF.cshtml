@model AKDEMIC.INTRANET.Areas.Teacher.Models.SectionViewModels.SectionEnrolledReportPDFViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <title>Report</title>
    <style>
        body {
            font-family: "Verdana";
            font-weight: normal;
            font-size: 13px;
        }

        .unk-header {
            width: 100%;
            text-align: center;
            margin-bottom: 40px;
        }

        .teacherInfo {
            width: 100%;
            margin-bottom: 50px;
        }

        .firstTeacherInfo {
            width: 45%;
            display: inline-block;
        }

        .truelabel {
            width: 250px;
            display: inline-block;
        }

        .truelabel2 {
            width: 110px;
            display: inline-block;
        }

        .truelabel3 {
            width: 250px;
            display: inline-block;
        }

        .secondTeacherInfo {
            width: 54%;
            display: inline-block;
        }

        .table-container {
            width: 100%;
            margin-bottom: 60px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            font-weight: normal;
        }

        table, th, td {
            font-weight: normal;
        }

            table tr {
                page-break-inside: avoid;
            }

        .border {
            border: 1px solid black;
        }

        span {
            font-weight: normal;
        }

        .negrita {
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div style="position:absolute;text-align: center;padding: 0px 20px;">
        <img style="top: 0; left: 0; height: 60px;width:60px" src="@Model.Image" />
        <P style="margin:0px;font-style: italic;font-weight: 600;letter-spacing: -0.5px;">@Model.HeaderText</P>
    </div>
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <div class="unk-header" style="font-size:14px;">
        <p style="margin:0px;text-transform: uppercase" class="negrita">@GeneralHelpers.GetInstitutionName()</p>
        <p style="margin:0px;" class="negrita">
            RESUMEN DE CURSOS POR GRUPO
        </p>
        <br />
        <p style="margin:0px;text-align:right;width:100%;" class="negrita">ESTUDIANTES[@Model.SectionDetail.Term]</p>

        <p style="margin:0px;text-align:left" class="negrita">FACULTAD:&emsp;@Model.SectionDetail.Faculty</p>
        <p style="margin:0px;text-align:left" class="negrita">ESCUELA PROFESIONAL:&emsp;@Model.SectionDetail.Career</p>
        <p style="margin:0px;text-align:left" class="negrita">CURSO:&emsp;@Model.SectionDetail.Course</p>
        <p style="margin:0px;text-align:left" class="negrita">@(Model.SectionDetail.Teachers.Count() > 1 ? "DOCENTES" : "DOCENTE"):&emsp;@(Model.SectionDetail.Teachers.Any() ? string.Join(", ", Model.SectionDetail.Teachers) : "Sin Asignar")</p>
        <p style="margin:0px;text-align:left" class="negrita">
            SEMESTRE:&emsp;@Model.SectionDetail.Semester&emsp;-&emsp;
            CR&Eacute;DITOS:&emsp;@Model.SectionDetail.Credits&emsp;-&emsp;
            GRUPO:&emsp;@Model.SectionDetail.Section&emsp;

            @if (!string.IsNullOrEmpty(Model.SectionDetail.SectionGroupName))
            {
                @Html.Raw("SUBGRUPO:&emsp;");
            }

            @Model.SectionDetail.SectionGroupName&emsp;
            
            @*MODALIDAD:&emsp;@Model.SectionDetail.Modality*@
        </p>
    </div>
    <table>
        <tbody style="text-align:center;">
            <tr>
                <th style="background-color:lightgray" class="border">N°</th>
                <th style="background-color:lightgray" class="border">CÓDIGO</th>
                <th style="background-color:lightgray" class="border">APELLIDOS Y NOMBRES</th>
                <th style="background-color:lightgray" class="border">INTENTO</th>
            </tr>
            @{var i = 1;}
            @foreach (var student in Model.EnrolledStudents)
            {
                <tr>
                    <td class="border">@i</td>
                    <td class="border">@student.UserName</td>
                    <td class="border" style="text-align:left;padding-left:18px">@student.FullName</td>
                    <td class="border">@student.Try</td>
                </tr>
                i++;
            }
            @if (Model.EnrolledStudents.Count == 0)
            {
                <tr>
                    <td colspan="4" class="border">No hay resultados</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>