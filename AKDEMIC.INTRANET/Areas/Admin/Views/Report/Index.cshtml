@{
    ViewData["Title"] = "Asistencia de estudiantes";
    ViewData["Breadcrumbs"] = new[] {
    new BreadcrumbViewData { Name = "Reporte de Estudiantes",  Action = "Student" , Controller = "IntranetReport", Area = "Report" },
    new BreadcrumbViewData { Name = "Reporte de Asistencia de Estudiantes",  Action = "StudentAttendance" , Controller = "IntranetReport", Area = "Report" },
new BreadcrumbViewData { Name = ViewData["Title"].ToString() }
};
}
<div class="m-content">
    <div class="m-portlet">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <a asp-controller="IntranetReport" asp-area="Report" asp-action="Student" class="btn btn-primary m-btn m-btn--icon m-btn--icon-only"><i class="la la-arrow-left"></i></a>
                    &nbsp;
                    <h3 class="m-portlet__head-text">
                        @ViewData["Title"]
                    </h3>
                </div>
            </div>
        </div>
        <div class="m-portlet__body">
            <div class="m-form--label-align-right m--margin-top-20 m--margin-bottom-30">
                <div class="row align-items-center">
                    <div class="col-xl-12">
                        <div class="row">
                            <div class="form-group m-form__group col-xl-3">
                                <label>Facultad</label>
                                <select id="select_faculties" class="m-select2"></select>
                            </div>
                            <div class="form-group m-form__group col-xl-4">
                                <label>Escuela Profesional</label>
                                <select id="select_career" class="m-select2"></select>
                            </div>
                            <div class="form-group m-form__group col-xl-2">
                                <label>&emsp;</label>
                                <div class="m-input m-input-icon m-input-icon--left">
                                    <input type="text" class="form-control m-input m-input--pill m-input--solid" placeholder="Buscar..." id="search">
                                    <span class="m-input-icon__icon m-input-icon__icon--left">
                                        <span><i class="la la-search"></i></span>
                                    </span>
                                </div>
                            </div>

                            <div class="form-group m-form__group col-xl-3 col-md-12 d-flex align-items-end justify-content-end">
                                <button id="btn_export" class="btn btn-primary m-btn  m-btn m-btn--icon">
                                    <span>
                                        <i class="la la-file-excel-o"></i>
                                        <span>Reporte Cumplimiento</span>
                                    </span>
                                </button>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <table class="table table-striped table-bordered" id="datatable_report"></table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/modules/form.js"></script>
    <script src="~/js/areas/admin/report/index.js" asp-append-version="true"></script>
}