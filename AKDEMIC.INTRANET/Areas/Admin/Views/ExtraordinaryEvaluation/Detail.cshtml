@model AKDEMIC.INTRANET.Areas.Admin.Models.ExtraordinaryEvaluationViewModels.ExtraordinaryEvaluationViewModel
@{
    ViewData["Title"] = "Evaluaciones Extraordinarias";
    ViewData["Breadcrumbs"] = new[] {
    new BreadcrumbViewData { Name = (string)ViewData["Title"], Action = "Index", Controller = "ExtraordinaryEvaluation", Area = "Admin" },
    new BreadcrumbViewData { Name = "Detalles" }
    };
}

<div class="m-content">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="CourseId" />
    <div class="m-portlet">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <h3 class="m-portlet__head-text">
                        @Model.Course
                    </h3>
                </div>
            </div>
        </div>
        <div class="m-portlet__body">
            <div class="row">
                <div class="col-md-12">
                    <label><strong>PERIODO :</strong> &nbsp; @Model.TermName</label>
                </div>
                <div class="col-md-12">
                    <label><strong>DOCENTE PRESIDENTE:</strong> &nbsp; @Model.Teacher</label>
                </div>
                <div class="col-md-12">
                    <label><strong>COMIT&Eacute;:</strong> &nbsp; @string.Join("; ", Model.Committee)</label>
                </div>
            </div>
            <br />
            <form id="add_student_form">
                <div class="m-form--label-align-right">
                    <div class="row align-items-center">
                        <div class="col-xl-12 order-1 order-xl-1">
                            <div class="row">
                                <div class="form-group m-form__group col-md-4">
                                    <label>Seleccione un estudiante</label>
                                    <select type="text" class="form-control m-select2" name="StudentId" id="StudentId" required>
                                        <option></option>
                                    </select>
                                </div>
                                <input type="hidden" value="@Model.Id" name="ExtraordinaryEvaluationId"/>
                                <div class="form-group m-form__group col-md-4">
                                    <label class="d-block">&nbsp;</label>
                                    <button class="btn btn-primary m-btn m-btn--icon" type="submit">
                                        <span><i class="fa fa-arrow-alt-circle-right"></i><span>Agregar</span></span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>

            <table class="table table-striped table-bordered" id="data-table"></table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/areas/admin/extraordinaryevaluation/detail.js" asp-append-version="true"></script>
}