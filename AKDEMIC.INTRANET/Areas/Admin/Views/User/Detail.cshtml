@model AKDEMIC.INTRANET.Areas.Admin.Models.UserViewModels.UserViewModel
@{
    ViewBag.Title = "Detalle de Usuario";
    ViewBag.ErrorMessage = "¡Ups! Parece que hubo un error con los datos ingresados. Revíselo e intente otra vez.";
    ViewBag.Breadcrumbs = new[] {
new BreadcrumbViewData { Name = "Gestión de Usuarios", Area = "Admin", Controller = "User", Action = "Index"},
new BreadcrumbViewData { Name = ViewBag.Title, Controller = null, Action = null }
};
    ViewBag.BackUrl = Url.Action("Index", "User");
}

<div class="m-content">
    <div class="m-portlet">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <h3 class="m-portlet__head-text">
                        Datos de Usuario
                    </h3>
                </div>
            </div>
            <div class="m-portlet__head-tools">
                <ul class="m-portlet__nav">
                    <li class="m-portlet__nav-item">
                        <a asp-action="Edit" asp-controller="User" asp-route-id="@Model.Id" class="m-portlet__nav-link btn btn-primary m-btn m-btn--pill m-btn--air">
                            <span>
                                <i class="la la-edit"></i>
                                <span>
                                    Editar
                                </span>
                            </span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <form class="m-form m-form--state m-form--fit" id="add-form" asp-action="Add" asp-controller="User" enctype="multipart/form-data">
            <div class="m-portlet__body">
                <div class="m-form__content">
                    <div class="m-alert m-alert--icon alert alert-danger m--hide" role="alert" id="m-form_alert">
                        <div class="m-alert__icon">
                            <i class="la la-warning"></i>
                        </div>
                        <div id="alert-text" class="m-alert__text">
                            @ViewBag.ErrorMessage
                        </div>
                        <div class="m-alert__close">
                            <button type="button" class="close" data-close="alert" aria-label="Close"></button>
                        </div>
                    </div>
                </div>

                <input hidden asp-for="Id" />

                <div class="form-group m-form__group row">
                    <div class="m-form__group-sub col-lg-12">
                        <label asp-for="Name" class="form-control-label"></label>
                        <div class="m-input-icon m-input-icon--right">
                            <input asp-for="Name" class="form-control m-input" placeholder="Nombres" disabled />
                            <span class="m-input-icon__icon m-input-icon__icon--right">
                                <span>
                                    <i class="la la-info-circle"></i>
                                </span>
                            </span>
                        </div>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group m-form__group row">
                    <div class="m-form__group-sub col-lg-6">
                        <label asp-for="PaternalSurname" class="form-control-label"></label>
                        <div class="m-input-icon m-input-icon--right">
                            <input asp-for="PaternalSurname" class="form-control m-input" placeholder="Apellido Paterno" disabled />
                            <span class="m-input-icon__icon m-input-icon__icon--right">
                                <span>
                                    <i class="la la-info-circle"></i>
                                </span>
                            </span>
                        </div>
                        <span asp-validation-for="PaternalSurname" class="text-danger"></span>
                    </div>

                    <div class="m-form__group-sub col-lg-6">
                        <label asp-for="MaternalSurname" class="form-control-label"></label>
                        <div class="m-input-icon m-input-icon--right">
                            <input asp-for="MaternalSurname" class="form-control m-input" placeholder="Apellido Materno" disabled />
                            <span class="m-input-icon__icon m-input-icon__icon--right">
                                <span>
                                    <i class="la la-info-circle"></i>
                                </span>
                            </span>
                        </div>
                        <span asp-validation-for="MaternalSurname" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group m-form__group row">
                    <div class="m-form__group-sub col-lg-6">
                        <label asp-for="UserName" class="form-control-label"></label>
                        <div class="m-input-icon m-input-icon--right">
                            <input asp-for="UserName" class="form-control m-input" placeholder="Usuario" type="text" disabled />
                            <span class="m-input-icon__icon m-input-icon__icon--right">
                                <span>
                                    <i class="la la-user"></i>
                                </span>
                            </span>
                        </div>
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="m-form__group-sub col-lg-6">
                        <label asp-for="Dni" class="form-control-label">Dni</label>
                        <div class="m-input-icon m-input-icon--right">
                            <input asp-for="Dni" class="form-control m-input" placeholder="Usuario" type="text" disabled />
                            <span class="m-input-icon__icon m-input-icon__icon--right">
                                <span>
                                    <i class="la la-info-circle"></i>
                                </span>
                            </span>
                        </div>
                        <span asp-validation-for="Dni" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group m-form__group row">
                    <div class="m-form__group-sub col-lg-6">
                        <label asp-for="Email" class="form-control-label"></label>
                        <div class="m-input-icon m-input-icon--right">
                            <input asp-for="Email" class="form-control m-input" placeholder="Correo electrónico" type="email" disabled />
                            <span class="m-input-icon__icon m-input-icon__icon--right">
                                <span>
                                    <i class="so socicon-mail"></i>
                                </span>
                            </span>
                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="m-form__group-sub col-lg-6">
                        <label asp-for="Sex" class="form-control-label"></label>
                        <div class="m-radio-inline">
                            @foreach (var g in ConstantHelpers.SEX.VALUES)
                            {
                            <label class="m-radio m-radio--solid m-radio--brand">
                                @if (Model.Sex.Equals(g.Key))
                                {
                                    <input asp-for="Sex" type="radio" disabled value="@g.Key" checked />
                                }
                                else
                                {
                                    <input asp-for="Sex" type="radio" disabled value="@g.Key"/>
                                }
                                @g.Value
                                <span></span>
                            </label>
                            }
                        </div>
                    </div>
                </div>
                <div class="form-group m-form__group row">
                    <div class="m-form__group-sub col-lg-6">
                        <label asp-for="PhoneNumber" class="form-control-label"></label>
                        <div class="m-input-icon m-input-icon--right">
                            <input asp-for="PhoneNumber" class="form-control m-input" placeholder="Teléfono" disabled />
                            <span class="m-input-icon__icon m-input-icon__icon--right">
                                <span>
                                    <i class="la la-phone"></i>
                                </span>
                            </span>
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="m-form__group-sub col-lg-6">
                        <label asp-for="BirthDate" class="form-control-label"></label>
                        <div class="m-input-icon m-input-icon--right">
                            <input asp-for="BirthDate" class="form-control m-input" placeholder="Fecha de Nacimiento" disabled />
                            <span class="m-input-icon__icon m-input-icon__icon--right">
                                <span>
                                    <i class="la la-calendar"></i>
                                </span>
                            </span>
                            <span asp-validation-for="BirthDate" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group m-form__group row">
                    <div class="m-form__group-sub col-lg-12">
                        <label asp-for="Address" class="form-control-label"></label>
                        <div class="m-input-icon m-input-icon--right">
                            <input asp-for="Address" class="form-control m-input" placeholder="Dirección" disabled />
                            <span class="m-input-icon__icon m-input-icon__icon--right">
                                <span>
                                    <i class="la la-info-circle"></i>
                                </span>
                            </span>
                        </div>
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group m-form__group row">
                    <div class="m-form__group-sub col-lg-12">
                        <label asp-for="SelectedRoles" class="form-control-label"></label>

                        <select asp-for="SelectedRoles" class="form-control m-input m-select2 select2-roles" multiple disabled></select>
                        <span asp-validation-for="SelectedRoles" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group m-form__group row">
                    <div class="m-form__group-sub col-lg-12">
                        <label asp-for="SelectedDependencies" class="form-control-label"></label>

                        <select asp-for="SelectedDependencies" class="form-control m-input m-select2 select2-dependencies" multiple disabled></select>
                        <span asp-validation-for="SelectedDependencies" class="text-danger"></span>
                    </div>
                </div>
                <div class="m-card-profile">
                    <div class="m-card-profile__title">
                        Foto
                    </div>
                    <div class="m-card-profile__pic">
                        <div class="m-card-profile__pic-wrapper">
                            <img id="current-picture" src="@(string.IsNullOrEmpty(Model.PictureUrl) ? "/images/demo/user.png" : Model.PictureUrl)" />
                        </div>
                    </div>
                </div>

            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/js/areas/admin/user/detail.js"></script>
}