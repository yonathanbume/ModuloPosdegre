@model AKDEMIC.INTRANET.Areas.Admin.Models.SubstituteExamViewModels.SectionsPdfViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <style>
        body {
            font-family: "Calibri";
            font-size: 13px;
        }

        h1 {
            margin-bottom: 5px !important;
            font-size: 28px;
        }

        h2 {
            margin: 0px;
            font-size: 18px;
        }

        img {
            top: 0;
            left: 0;
            max-height: 60px;
        }

        header {
            width: 100%;
            text-align: center;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            font-weight: normal;
        }

        th, td {
            border: 1px solid black;
            padding: 3px 3px !important;
        }

        th {
            font-weight: normal;
            text-align: left;
        }

        .red {
            color: red;
        }

        .bold {
            font-weight: bold;
            background-color: lightgray;
        }

        .center {
            text-align: center;
        }

        .header2 {
            font-size: 10px;
            padding: 3px 0px !important;
        }

        .header > th, td {
            border: 1px solid black;
            padding: 5px 3px !important;
        }

        .footer {
            font-size: 15px;
            text-align: center;
            font-style: italic;
            bottom: 0;
            left: 0;
            right: 0;
            margin-bottom: -6px;
        }
    </style>
</head>
<body>
    <br />
    <div style="position:absolute;text-align: center;padding: 20px 20px;">
        <img src="@Model.Img" />
    </div>
    <header>
        <h1 class="negrita">@GeneralHelpers.GetInstitutionName().ToUpper()</h1>
        <h2 class="negrita">VICERECTORADO ACADÉMICO</h2>
        <h2 class="negrita">DIRECCIÓN DE ACTIVIDADES Y SERVICIOS ACADÉMICOS</h2>
    </header>
    <br />
    <h2 style="padding-left:20px;">LISTADO DE SECCIONES DE EXAMENES SUSTITUTORIOS:</h2>
    <br />
    <table class="header">
        <tbody>
            <tr>
                <td colspan="2" class="bold">ESCUELA:</td>
                <td colspan="2">@Model.Career</td>
            </tr>
            <tr>
                <td colspan="2" class="bold">CURSO:</td>
                <td colspan="2">@Model.Course</td>
            </tr>
            <tr>
                <td class="bold">PLAN:</td>
                <td>@Model.Curriculum</td>
                <td class="bold">SEMESTRE:</td>
                <td>@Model.Cycle</td>
            </tr>
        </tbody>
    </table>
    <br />
    <br />
    <table>
        <thead>
            <tr>
                <th class="bold center">Escuela</th>
                <th class="bold center">C&oacute;digo</th>
                <th class="bold center">Curso</th>
                <th class="bold center">Ciclo</th>
                <th class="bold center">Grupo</th>
                <th class="bold center">Cant. Aptos</th>
                <th class="bold center">Cant. Inscritos</th>
            </tr>
        </thead>
        <tbody>
            @for (var i = 0; i < Model.Rows.Count; i++)
            {
                <tr>
                    <th>@Model.Rows[i].career</th>
                    <th>@Model.Rows[i].code</th>
                    <th>@Model.Rows[i].name</th>
                    <th>@Model.Rows[i].groupcycle</th>
                    <th>@Model.Rows[i].StudentsThatFit</th>
                    <th>@Model.Rows[i].EnrolledStudents</th>
                </tr>
            }
            @if (Model.Rows.Count == 0)
            {
                <tr>
                    <th class="center" colspan="7">No hay secciones para sustitutorio</th>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
