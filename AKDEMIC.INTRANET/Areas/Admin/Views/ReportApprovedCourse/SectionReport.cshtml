@{
    ViewData["Title"] = "Estudiantes aprobados y desaprobados por sección";
    ViewBag.Breadcrumbs = new[] {
        new BreadcrumbViewData { Name = "Reporte de Estudiantes",  Action = "Student" , Controller = "IntranetReport", Area = "Report" },
    new BreadcrumbViewData { Name = "Estudiantes Aprobados Por Curso",  Action = "Index" , Controller = "ReportApprovedCourse", Area = "Admin" },
    new BreadcrumbViewData {Name="Reporte Por Sección", Controller=null, Action=null},
};
}

<div class="m-content">
    <div class="m-portlet">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption" style="width:100%">
                <div class="m-portlet__head-title" style="width:100%;display: block;">
                    <a asp-controller="ReportApprovedCourse" asp-area="Admin" asp-action="Index" class="btn btn-primary m-btn m-btn--icon m-btn--icon-only"><i class="la la-arrow-left"></i></a>
                    &nbsp;
                    <h3 class="m-portlet__head-text" style="display:initial;">
                        @ViewData["Title"]
                    </h3>
                </div>
            </div>
        </div>
        <div class="m-portlet__body">
            <div class="m-form--label-align-right">
                <div class="row align-items-center">
                    <div class="col-xl-12">
                        <div class="row">
                            <div class="form-group m-form__group col-xl-4">
                                <label>Periodo Acad&eacute;mico</label>
                                <select id="select_terms" class="m-select2"></select>
                            </div>
                            <div class="form-group m-form__group col-xl-4">
                                <label>Escuela profesional</label>
                                <select id="select_careers" class="m-select2">
                                    <option value="0" selected>Todos</option>
                                </select>
                            </div>
                            <div class="form-group m-form__group col-xl-4">
                                <label>Ciclo Académico</label>
                                <select id="academicYear" class="form-control m-input m-select2">
                                    <option value="-1" selected>Todos</option>
                                </select>
                            </div>
                            <div class="form-group m-form__group col-xl-4">
                                <label>&emsp;</label>
                                <button id="btn-search" class="btn btn-primary btn-will-search btn-block">
                                    Buscar
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <table class="table table-striped table-bordered" id="data-table"></table>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/lib/jquery.fileDownload/jquery.fileDownload.min.js"></script>
    <script src="~/js/areas/admin/report_approved_course/sectionreport.js" asp-append-version="true"></script>
}
