@{
    ViewData["Title"] = "Estudiantes Aprobados Por Curso";
    ViewData["Breadcrumbs"] = new[] {
    new BreadcrumbViewData { Name = "Reporte de Estudiantes",  Action = "Student" , Controller = "IntranetReport", Area = "Report" },
new BreadcrumbViewData { Name = ViewData["Title"].ToString() }
};
}
<style>
    svg > g > g:last-child {
        pointer-events: none
    }
</style>
<div class="m-content">
    <div class="m-portlet">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <a asp-controller="IntranetReport" asp-area="Report" asp-action="Student" class="btn btn-primary m-btn m-btn--icon m-btn--icon-only"><i class="la la-arrow-left"></i></a>
                    &nbsp;
                    <h3 class="m-portlet__head-text">
                        @ViewData["Title"]
                    </h3>
                </div>
            </div>

            <div class="m-portlet__head-tools">
                <ul class="m-portlet__nav">
                    <li class="m-portlet__nav-item">
                        <a asp-action="SectionReport" class="btn btn-primary m-btn m-btn--icon btn-sm">
                            <span>
                                <i class="la la-list"></i>
                                <span>Detallado</span>
                            </span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="m-portlet__body">
            <div class="m-form--label-align-right m--margin-top-20 m--margin-bottom-30">
                <div class="row align-items-center">
                    <div class="col-xl-12 order-2 order-xl-1">
                        <div class="row">
                            <div class="form-group m-form__group col-xl-3">
                                <label>Periodo Acad&eacute;mico</label>
                                <select id="select_terms" class="m-select2"></select>
                            </div>
                            <div class="form-group m-form__group col-xl-3">
                                <label>Escuela profesional</label>
                                <select id="select_careers" class="m-select2"></select>
                            </div>
                            <div class="form-group m-form__group col-xl-2">
                                <label>Plan de estudio</label>
                                <select id="select_curriculums" class="m-select2"></select>
                            </div>
                            <div class="form-group m-form__group col-xl-4">
                                <label>Cursos</label>
                                <select id="select_courses" class="m-select2"></select>
                            </div>
                            <div class="form-group m-form__group col-xl-4">
                                <label>&emsp;</label>
                                <div class="m-input m-input-icon m-input-icon--left">
                                    <input type="text" class="form-control m-input m-input--pill m-input--solid" placeholder="Buscar..." id="search">
                                    <span class="m-input-icon__icon m-input-icon__icon--left">
                                        <span><i class="la la-search"></i></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="m-portlet">
                        <div class="m-portlet__head">
                            <div class="m-portlet__head-caption">
                                <div class="m-portlet__head-title">
                                    <span class="m-portlet__head-icon">
                                        <i class="flaticon-graph"></i>
                                    </span>
                                    <h3 class="m-portlet__head-text">
                                        Reportes estadísticos
                                    </h3>
                                </div>
                            </div>

                        </div>
                        <div class="m-portlet__body" style="display: flex; flex-flow: row wrap;  justify-content: center;  align-items: center;  text-align: center;">
                            <div id="chart_div_report_approbed_disapprobed_courses"></div>
                        </div>
                    </div>

                </div>
            </div>
            <div class="row">
                <div class="col-12">

                    <div class="m-portlet">
                        <div class="m-portlet__head">
                            <div class="m-portlet__head-caption">
                                <div class="m-portlet__head-title">
                                    <span class="m-portlet__head-icon">
                                        <i class="flaticon-list-1"></i>
                                    </span>
                                    <h3 class="m-portlet__head-text">
                                        Lista de estudiantes
                                    </h3>
                                </div>
                            </div>

                        </div>
                        <div class="m-portlet__body">
                            <table class="table table-striped table-bordered" id="datatable_index"></table>
                        </div>
                    </div>

                </div>
            </div>
        </div>

    </div>
</div>
@section Scripts {
    <script src="~/js/modules/form.js"></script>
    <script src="~/js/areas/admin/report_approved_course/index.js" asp-append-version="true"></script>
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
}


