@model AKDEMIC.INTRANET.Areas.Admin.Models.ReportTeacherViewModels.AssistancePdfReportViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <title>Acta de notas</title>
    <style>
        body {
            font-family: "Calibri";
            font-size: 13px;
        }

        h1 {
            margin-bottom: 5px !important;
            font-size: 28px;
        }

        h2 {
            margin: 0px;
            font-size: 18px;
        }

        img {
            top: 0;
            left: 0;
            max-height: 60px;
        }

        header {
            width: 100%;
            text-align: center;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            font-weight: normal;
        }

        tr {
            page-break-inside: avoid;
        }


        th {
            page-break-inside: avoid;
        }

        th, td {
            border: 1px solid black;
            padding: 3px 3px !important;
        }

        th {
            font-weight: normal;
            text-align: left;
        }

        .red {
            color: red;
        }

        .bold {
            font-weight: bold;
            background-color: lightgray;
        }

        .center {
            text-align: center;
        }

        .header2 {
            font-size: 10px;
            padding: 3px 0px !important;
        }

        .header > th, td {
            border: 1px solid black;
            padding: 5px 3px !important;
        }

        .td-header {
            border: none;
            padding: 0px !important;
        }

        .detail-header {
            font-size: 11px;
            text-align: left;
            font-weight: 600;
        }

        .footer {
            font-size: 15px;
            text-align: center;
            font-style: italic;
            bottom: 0;
            left: 0;
            right: 0;
            margin-bottom: -6px;
        }

        .thd {
            padding: 5px;
            font-size: 13px;
        }
    </style>
</head>
<body>
    <br />
    <div style="position:absolute;text-align: center;padding: 20px 20px;">
        <img src="@Model.Img" />
    </div>
    <header>
        <h1 class="negrita">@GeneralHelpers.GetInstitutionName().ToUpper()</h1>
        <h2 class="negrita">Reporte de asistencia de estudiantes</h2>
    </header>
    <br />
    <br />
    <br />
    <table border="0" style="border: none; margin: 0">
        <tbody>
            <tr>
                <td class="td-header">
                    <h2 style="padding-left:20px; display: inline"> DOCENTE: @Model.Teacher </h2>
                </td>
            </tr>
            <tr>
                <td class="td-header">
                    <h2 style="padding-left:20px; display: inline"> CURSO: @Model.Course </h2>
                </td>
            </tr>
        </tbody>
    </table>
    <br />
    <br />
    <br />
    <table>
        <thead>
            <tr>
                <th class="bold center">#</th>
                <th class="bold center">Estudiante</th>
                <th class="bold center">Faltas</th>
                <th class="bold center">Asistidas</th>
                <th class="bold center">Dictadas</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.ListItems.Count(); i++)
            {
                <tr>
                    <th class="thd center">@(i + 1)</th>
                    <th class="thd center">@Model.ListItems[i].student</th>
                    <th class="thd center">@Model.ListItems[i].absences</th>
                    <th class="thd center">@Model.ListItems[i].assisted</th>
                    <th class="thd center">@Model.ListItems[i].dictated</th>
                </tr>
            }

            @if (Model.ListItems.Count == 0)
            {
                <tr>
                    <th class="center" colspan="5">No hay estudiantes en la sección</th>
                </tr>
            }
        </tbody>
    </table>
    <br />
    <br />
    <table>
        <tbody>
            <tr style="height:45px; vertical-align:top;">
                @* <th style="width:50%; "><span style="float:left; font-size:10px;">Evidencia de Producto</span></th>*@
                <th style="border:0px !important; font-size:18px;"><span style="margin-top:2px; margin-left:2px;">@ConstantHelpers.Institution.Locations[ConstantHelpers.GENERAL.Institution.Value], @DateTime.UtcNow.ToDefaultTimeZone().Day de  @AKDEMIC.CORE.Helpers.ConstantHelpers.MONTHS.VALUES[DateTime.UtcNow.ToDefaultTimeZone().Month] del @DateTime.UtcNow.ToDefaultTimeZone().Year</span></th>
            </tr>
        </tbody>
    </table>
</body>
</html>
