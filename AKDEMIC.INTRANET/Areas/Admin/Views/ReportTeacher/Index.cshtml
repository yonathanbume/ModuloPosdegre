@{
    ViewBag.Title = "Docentes por periodo académico";
    ViewBag.SubTitle = "Docentes";
    ViewBag.Breadcrumbs = new[] {
new BreadcrumbViewData { Name = "Reporte de Docentes",  Action = "Teacher" , Controller = "IntranetReport", Area = "Report" },
new BreadcrumbViewData { Name = ViewBag.Title, Controller = null, Action = null }
};
}

<div class="m-content">
    <div class="m-portlet">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <a asp-controller="IntranetReport" asp-area="Report" asp-action="Teacher" class="btn btn-primary m-btn m-btn--icon m-btn--icon-only"><i class="la la-arrow-left"></i></a>
                    &nbsp;
                    <h3 class="m-portlet__head-text">
                        @ViewBag.Title
                    </h3>
                </div>
            </div>
        </div>
        <div class="m-portlet__body">
            <div class="m-form--label-align-right m--margin-top-20 m--margin-bottom-30">
                <div class="row align-items-center">
                    <div class="col-xl-12 order-2 order-xl-1">
                        <div class="row">
                            <div class="form-group m-form__group col-xl-4">
                                <label>Periodo Acad&eacute;mico</label>
                                <select id="term-select" class="form-control m-input m-select2"></select>
                            </div>
                            <div class="form-group m-form__group col-xl-4">
                                <label>Departamento Académico</label>
                                <select id="academicDepartment-select" class="form-control m-input m-select2">
                                    <option value="0" selected>Todos</option>
                                </select>
                            </div>

                            <div class="form-group m-form__group col-xl-4">
                                <label>&emsp;</label>
                                <div class="m-input m-input-icon m-input-icon--left">
                                    <input type="text" class="form-control m-input m-input--pill m-input--solid" placeholder="Buscar..." id="search">
                                    <span class="m-input-icon__icon m-input-icon__icon--left">
                                        <span><i class="la la-search"></i></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <table class="table table-striped table-bordered" id="data-table"></table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/areas/admin/report_teacher/index.js" asp-append-version="true"></script>>
}
