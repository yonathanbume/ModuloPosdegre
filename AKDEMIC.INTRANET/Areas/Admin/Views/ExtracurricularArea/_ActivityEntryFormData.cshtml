@model AKDEMIC.INTRANET.Areas.Admin.Models.ExtracurricularAreaViewModels.ExtracurricularAreaViewModel;
<input asp-for="Id" hidden />

<div class="form-group m-form__group">
    <label asp-for="Name"></label>
    <input asp-for="Name" class="form-control m-input" placeholder="Nombre" required maxlength="100" />
</div>

<div class="form-group m-form__group">
    <label asp-for="Type"></label>
    <select asp-for="Type" class="form-control type-select" required>
        @foreach (var item in ConstantHelpers.ExtracurricularArea.Type.VALUES)
        {
            <option value="@item.Key">@item.Value</option>
        }
    </select>
</div>