@{
    ViewData["Title"] = "Gestión de Contenido Duplicado en Aula Virtual";
    ViewBag.Breadcrumbs = new[] {
new BreadcrumbViewData { Name = "Home", Controller = "Home", Action = "Index" },
new BreadcrumbViewData {Name="Gestión de Contenido Duplicado en Aula Virtual", Controller=null, Action=null},
};
}
<div class="m-content">
    <div class="m-portlet">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption" style="width:100%">
                <div class="m-portlet__head-title" style="width:100%;display: block;">
                    <h3 class="m-portlet__head-text" style="display:initial;">Gestión de Contenido Duplicado en Aula Virtual</h3>
                </div>
            </div>
        </div>
        <div class="m-portlet__body">
            <div class="m-form--label-align-right m--margin-top-20 m--margin-bottom-30">
                <div class="row align-items-center">
                    <div class="col-xl-8 order-2 order-xl-1">
                        <div class="row">
                            <div class="form-group m-form__group col-xl-3">
                                <label>Periodo Acad&eacute;mico</label>
                                <select id="term-select" class="form-control m-input m-select2"></select>
                            </div>

                            <div class="form-group m-form__group col-xl-3">
                                <label>Escuela Profesional</label>
                                <select id="career-select" class="form-control m-input m-select2"></select>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-4 order-1 order-xl-2 m--align-right">
                        <button id="Add" data-toggle="modal" data-target="#AddModal" class="btn btn-primary m-btn m-btn--icon">
                            <span>
                                <i class="la la-plus"></i>
                                <span>Nuevo</span>
                            </span>
                        </button>
                        <div class="m-separator m-separator--dashed d-xl-none"></div>
                    </div>
                </div>

            </div>
            <table class="table table-striped table-bordered" id="data-table"> </table>
        </div>
    </div>
</div>

<div id="AddModal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog " role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">
                    Agregar
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="add-form">
                <div class="modal-body">
                    <div class="row">
                        <div class="form-group m-form__group col-md-12">
                            <label for="careerId_a">Escuela Profesional:</label>
                            <select id="careerId_a" name="careerId" class="form-control m-input m-select2" required></select>
                        </div>
                    </div>


                    <div class="row">
                        <div class="form-group m-form__group col-md-12">
                            <label for="academicYearAId_a">Plan de Estudio A:</label>
                            <select id="academicYearAId_a" name="academicYearAId" class="form-control m-input m-select2" required></select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group m-form__group col-md-12">
                            <label for="courseAId_a">Curso A:</label>
                            <select id="courseAId_a" name="courseAId" class="form-control m-input m-select2" required></select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group m-form__group col-md-12">
                            <label for="sectionAId_a">Secci&oacute;n A: </label>
                            <select id="sectionAId_a" name="sectionAId" class="form-control m-input m-select2" required></select>
                        </div>
                    </div>


                    <div class="row">
                        <div class="form-group m-form__group col-md-12">
                            <label for="academicYearBId_a">Plan de Estudio B:</label>
                            <select id="academicYearBId_a" name="academicYearBId" class="form-control m-input m-select2" required></select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group m-form__group col-md-12">
                            <label for="courseBId_a">Curso B:</label>
                            <select id="courseBId_a" name="courseBId" class="form-control m-input m-select2" required></select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group m-form__group col-md-12">
                            <label for="sectionBId_a">Secci&oacute;n B:</label>
                            <select id="sectionBId_a" name="sectionBId" class="form-control m-input m-select2" required></select>
                        </div>
                    </div>
                </div>


                <div class="modal-footer">
                    <div style="text-align:right;">
                        <button type="submit" class="btn btn-primary ladda-button" data-style="slide-down">
                            <span class="ladda-label">Guardar</span>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/js/areas/admin/duplicatevirtualclassroom/index.js"></script>
}
