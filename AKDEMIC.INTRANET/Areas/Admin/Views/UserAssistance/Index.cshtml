
@{
	ViewBag.Title = "Asistencia del Personal";
    ViewBag.SubTitle = "Carga Masiva";
	ViewBag.Breadcrumbs = new[] {
	    new BreadcrumbViewData { Name = ViewBag.Title, Controller = null, Action = null }
    };
}
<div class="m-content">
    <div class="m-portlet">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <h3 class="m-portlet__head-text">
                        @ViewBag.SubTitle
                    </h3>
                </div>
            </div>
            <div class="m-portlet__head-tools">
                <button class="btn-template btn btn-success m-btn m-btn--custom m-btn--icon" type="button">
                    <span>
                        <i class="la la-download"></i>
                        &nbsp;&nbsp;
                        <span>
                            Descargar Plantilla
                        </span>
                    </span>
                </button>
            </div>
        </div>
        <form id="user-assistance" class="m-form m-form--state" asp-controller="UserAssistance" asp-action="SaveWorkingDays" method="POST">
            <div class="m-portlet__body">
                <div class="m-form__content">
                    <div class="m-alert m-alert--icon alert alert-danger m--hide" role="alert" id="m-form_alert">
                        <div class="m-alert__icon">
                            <i class="la la-warning"></i>
                        </div>
                        <div id="alert-text" class="m-alert__text">
                        </div>
                        <div class="m-alert__close">
                            <button type="button" class="close" data-close="alert" aria-label="Close"></button>
                        </div>
                    </div>
                    <div class="form-group m-form__group row">
                        <div class="col-lg-12 m-form__group-sub">
                            <label class="form-control-label">Archivo</label>
                            <div class="custom-file">
                                <input class="form-control custom-file-input" type="file" name="file" id="input-file" accept="application/vnd.openxmlformats-officedocument.spreadsheetml.sheet, application/vnd.ms-excel"/>
                                <label class="custom-file-label" for="input-file">Escoja un Archivo</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row m--margin-top-20">
                    <div class="col-md-12">
                        <table id="m-users-datatable" class="table table-striped table-bordered table-hover table-checkable table-responsive no-footer dtr-inline display" style="width: 100%;"></table>
                    </div>
                </div>
            </div>
            <div class="m-portlet__foot m-portlet__foot--fit m--align-right">
                <div class="m-form__actions">
                    <button id="btnCancel" class="btn btn-secondary m-btn m-btn--icon" type="button" style="display: none;" disabled>
                        <span>
                            <i class="la la-close"></i>
                            &nbsp;&nbsp;
                            <span>
                                Cancelar
                            </span>
                        </span>
                    </button>
                    <button id="btnSave" class="btn btn-primary m-btn m-btn--custom m-btn--icon" type="submit" disabled>
                        <span>
                            <i class="la la-save"></i>
                            &nbsp;&nbsp;
                            <span>
                                Guardar
                            </span>
                        </span>
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/js/lib/jquery.fileDownload/jquery.fileDownload.min.js"></script>
    <script src="~/js/lib/sheetjs-xlsx/xlsx.full.min.js"></script>
	<script src="~/js/areas/admin/userassistance/index.js"></script>
}