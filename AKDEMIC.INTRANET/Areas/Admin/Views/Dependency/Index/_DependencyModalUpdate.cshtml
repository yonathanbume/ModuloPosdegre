@using AKDEMIC.INTRANET.Areas.Admin.Models.DependencyViewModels
@model DependencyViewModel

<div id="dependency-modal-update" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">
                    Actualizar Dependencia
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="dependency-modal-update-form" class="m-form m-form--label-align-right m-form--state" asp-action="UpdateDependency" asp-area="Admin" asp-controller="Dependency" method="post">
                <div class="modal-body">
                    <div class="m-alert m-alert--icon alert alert-danger m--hide" role="alert" id="dependency-modal-update-form-alert">
                        <div class="m-alert__icon">
                            <i class="la la-warning"></i>
                        </div>
                        <div class="m-alert__text" id="update_msg_txt">
                            Por favor, corrija los errores pertinentes
                        </div>
                        <div class="m-alert__close">
                            <button type="button" class="close" data-close="alert" aria-label="Close"></button>
                        </div>
                    </div>
                    <input asp-for="Id" type="hidden">
                    <div class="form-group m-form__group row">
                        <div class="col-lg-6 m-form__group-sub">
                            <label asp-for="Name" class="required-form-label">Nombre</label>
                            <input name="Name" type="text" class="form-control m-input" placeholder="Nombre de la Dependencia" required>
                        </div>
                        <div class="col-lg-6 m-form__group-sub">
                            <label asp-for="Acronym" class="required-form-label">Siglas</label>
                            <input name="Acronym" type="text" class="form-control m-input" placeholder="Siglas de la Dependencia" required>
                        </div>
                    </div>
                    <div class="form-group m-form__group row">
                        <div class="col-lg-12 m-form__group-sub">
                            <label asp-for="UserId">Director</label>
                            <select name="UserId" class="form-control m-input m-select2 dependency-user-select2"></select>
                        </div>
                    </div>
                    <div class="form-group m-form__group row">
                        <div class="col-lg-12 m-form__group-sub">
                            <label asp-for="SignatureFile">Firma</label>
                            <div class="custom-file">
                                <input name="SignatureFile" type="file" class="custom-file-input" placeholder="Firma" accept="image/*" onchange="dependency.file.load.signatureFileUpdate(this, event)">
                                <label class="custom-file-label" for="SignatureFile">Seleccione un archivo</label>
                            </div>
                            <div id="dependency-modal-update-signature-content" class="text-center"></div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">
                        Cerrar
                    </button>
                    <button name="Send" type="submit" class="btn btn-primary ladda-button" data-style="slide-down">
                        <span class="ladda-label">Guardar</span>
                        <span class="ladda-spinner"></span>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
