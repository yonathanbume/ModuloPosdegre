@model AKDEMIC.INTRANET.Areas.Admin.Models.EventTypesViewModels.EventTypeViewModel


<div class=" row">
    <input name="Id" id="event_id" hidden />
    <div class="form-group m-form__group col-lg-12">
        <label asp-for="Name"></label>
        <input asp-for="Name" id="eName" class="form-control m-input" required>
        <span asp-validation-for="Name" class="form-control-feedback"></span>
    </div>
    <div class="form-group m-form__group col-lg-2">
        <label asp-for="Color"></label>
        <input asp-for="Color" type="color" class="m-input" value="#fdffff" required>
        <span asp-validation-for="Color" class="form-control-feedback"></span>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal"> Cerrar </button>
    <button type="submit" class="btn btn-primary btn-submit add"> Guardar </button>
</div>