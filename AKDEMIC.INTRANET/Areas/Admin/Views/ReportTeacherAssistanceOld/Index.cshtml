@{
    ViewData["Title"] = "Reporte de asistencia de docentes";
    ViewData["Breadcrumbs"] = new[] {
new BreadcrumbViewData { Name = "Reporte de asistencia de docentes" }
}; 
    var DefaultInitDate = ViewBag.DefaultInitDate;
    var DefaultFinishDate = ViewBag.DefaultFinishDate;
}
  
<div class="m-content">
    <div class="m-portlet">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <h3 class="m-portlet__head-text">
                        Listado de Docentes
                    </h3>
                </div>
            </div>
        </div>
        <div class="m-portlet__body">
            <div class="m-form--label-align-right m--margin-top-20 m--margin-bottom-30">
                <div class="row align-items-center">
                    <div class="col-xl-8 order-2 order-xl-1">
                        <div class="row">
                            <div class="form-group m-form__group col-xl-4">
                                <label>Fecha Inicial</label>
                                <input id="select_initdate" class="form-control m-input date" />
                            </div>
                            <div class="form-group m-form__group col-xl-4">
                                <label>Fecha Final</label>
                                <input id="select_finishdate" class="form-control m-input date" />
                            </div>

                            <div class="form-group m-form__group col-xl-3">
                                <label>&emsp;</label>
                                <div class="m-input m-input-icon m-input-icon--left" style="margin-left: -15px;">
                                    <button class=" btn btn-primary" id="btn-search"><span>Buscar</span> </button>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group m-form__group col-xl-3">
                <label>&emsp;</label>
                <div class="m-input m-input-icon m-input-icon--left">
                    <input type="text" class="form-control m-input m-input--pill m-input--solid" placeholder="Buscar..." id="search">
                    <span class="m-input-icon__icon m-input-icon__icon--left">
                        <span><i class="la la-search"></i></span>
                    </span>
                </div>
            </div>
            <div class="m-datatable" id="datatable"></div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/modules/form.js"></script>
    <script src="~/js/areas/admin/reportteacherassistance/index.js"></script>
}