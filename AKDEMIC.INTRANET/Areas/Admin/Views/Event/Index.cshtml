@using AKDEMIC.INTRANET.Areas.Admin.Models.EventViewModels
@model EventViewModel
@{
    ViewBag.Title = "Gestión de Eventos";
    ViewBag.SubTitle = "Listado de Eventos";
    ViewBag.Breadcrumbs = new[] {
new BreadcrumbViewData { Name = ViewBag.Title, Controller = null, Action = null }
};
}

<div class="m-content">
    <div class="m-portlet">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <h3 class="m-portlet__head-text">
                        @ViewBag.SubTitle
                    </h3>
                </div>
            </div>
        </div>
        <div class="m-portlet__body">
            <div class="m-form--label-align-right m--margin-top-20 m--margin-bottom-30">
                <div class="row align-items-center">
                    <div class="col-xl-8 order-2 order-xl-1">
                        <div class="row">
                            <div class="form-group m-form__group col-xl-4">
                                <label class="form-control-label">Tipo de evento </label>
                                <select id="eventType" name="eventType" class="form-control m-select2"> </select>
                            </div>
                            <div class="form-group m-form__group col-xl-4">
                                <label>&emsp;</label>
                                <div class="m-input m-input-icon m-input-icon--left">
                                    <input type="text" class="form-control m-input m-input--pill m-input--solid" placeholder="Buscar..." id="search">
                                    <span class="m-input-icon__icon m-input-icon__icon--left">
                                        <span><i class="la la-search"></i></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-4  order-1 m--align-right">
                        <a class="btn btn-primary btn-action" href="/admin/eventos/agregar">
                            <span>
                                <i class="fa fa-plus"></i>
                                Nuevo Evento
                            </span>
                        </a>
                    </div>
                </div>
            </div>
            <table class="table table-striped table-bordered" id="ajax_data"> </table>
        </div>
    </div>
</div>
 
 

@section Scripts {
    <script src="~/js/areas/admin/event/index.js"></script>
    @*<script src="~/js/jquery-ajax-unobtrusive.min.js"></script>*@
}