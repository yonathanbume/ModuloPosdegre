@{
    ViewBag.Title = "Actualizar notas de estudiantes";
    ViewBag.Breadcrumbs = new[] {
    new BreadcrumbViewData { Name = ViewBag.Title, Controller = null, Action = null }
    };
}

<div class="m-content">
    <div class="m-portlet">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <h3 class="m-portlet__head-text">
                        @ViewBag.Title
                    </h3>
                </div>
            </div>
        </div>
        <div class="m-portlet__body">
            <div class="m-form--label-align-right m--margin-bottom-30">
                <div class="row align-items-center">
                    <div class="col-xl-12 order-1 order-xl-1">
                        <div class="row">
                            <div class="form-group m-form__group col-xl-2">
                                <label>Periodo Acad&eacute;mico</label>
                                <select id="term_select" class="m-select2"></select>
                            </div>
                            <div class="form-group m-form__group col-xl-5">
                                <label>Estudiante</label>
                                <select id="student_select" class="m-select2"></select>
                            </div>
                            <div class="form-group m-form__group col-xl-3">
                                <label>Tipo de Nota</label>
                                <select id="academic_history_type" class="m-select2">
                                    <option value="@ConstantHelpers.AcademicHistory.Types.REGULAR">@ConstantHelpers.AcademicHistory.Types.VALUES[@ConstantHelpers.AcademicHistory.Types.REGULAR]</option>
                                    <option value="@ConstantHelpers.AcademicHistory.Types.DEFERRED">@ConstantHelpers.AcademicHistory.Types.VALUES[@ConstantHelpers.AcademicHistory.Types.DEFERRED]</option>
                                </select>
                            </div>

                            <div class="form-group m-form__group col-xl-2">
                                <label>&emsp;</label>
                                <div class="m-input m-input-icon m-input-icon--left">
                                    <button type="button" class="btn-block btn btn-primary m-btn m-btn--icon" id="btn_search">
                                        <span>
                                            <i class="la la-search"></i>
                                            <span>Buscar</span>
                                        </span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <table class="table table-striped table-bordered" id="datatable_courses"></table>
        </div>
    </div>
</div>

<div class="modal fade" id="modal_grades" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Actualizar Nota Parcial</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="form_grade">
                <div class="modal-body">
                    <input type="hidden" name="Id" />
                    <input type="hidden" name="AcademicHistoryId" id="Current_Grades_AcademicHistoryId" />
                    <div id="container_form_grades_academicHistory" class="d-none">
                        <div class="form-group m-form__group">
                            <div class="m-form__group-sub col-lg-12">
                                <label class="required-form-label form-control-label">Estudiante</label>
                                <input class="form-control m-input" name="StudentFUllName" disabled />
                            </div>
                        </div>
                        <div class="form-group m-form__group">
                            <div class="m-form__group-sub col-lg-12">
                                <label class="required-form-label form-control-label">Evaluación - Nota</label>
                                <input class="form-control m-input" name="Evaluation" disabled />
                            </div>
                        </div>

                        @*     <div class="form-group m-form__group">
                            <div class="m-form__group-sub col-lg-12">
                            <label class="required-form-label form-control-label">Contraseña</label>
                            <input type="password" class="form-control m-input" required name="PIN"/>
                            </div>
                            </div>*@

                        <div class="form-group m-form__group">
                            <div class="m-form__group-sub col-lg-12">
                                <label class="required-form-label form-control-label">Nueva Nota</label>
                                <input class="form-control m-input" required type="number" name="Grade" min="0" max="20" />
                            </div>
                        </div>

                        <div class="form-group m-form__group">
                            <div class="m-form__group-sub col-lg-12">
                                <label class="required-form-label form-control-label">Resolución</label>
                                <div class="custom-file">
                                    <input type="file" name="Resolution" class="custom-file-input" name="Resolution" accept="application/pdf" lang="es" />
                                    <label class="custom-file-label">
                                        Seleccione un archivo
                                    </label>
                                </div>
                            </div>

                        </div>
                    </div>
                    <div id="container_datatable_grades">
                        <table class="table table-striped table-bordered" id="datatable_grades"></table>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary btn-submit-grades">Guadar</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                </div>
            </form>

        </div>
    </div>
</div>

<div class="modal fade" id="modal_history" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Actualizar Nota Final</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="form_history">
                <div class="modal-body">
                    <input type="hidden" name="AcademicHistoryId" />
                    <div class="form-group m-form__group">
                        <div class="m-form__group-sub col-lg-12">
                            <label class="required-form-label form-control-label">Curso</label>
                            <input class="form-control m-input" name="Course" disabled />
                        </div>
                    </div>
                    <div class="form-group m-form__group">
                        <div class="m-form__group-sub col-lg-12">
                            <label class="required-form-label form-control-label">Nota</label>
                            <input class="form-control m-input" name="OldGrade" disabled />
                        </div>
                    </div>
                    <div class="form-group m-form__group">
                        <div class="m-form__group-sub col-lg-12">
                            <label class="required-form-label form-control-label">Nueva Nota</label>
                            <input class="form-control m-input" required type="number" name="Grade" min="0" max="20" step="1" />
                        </div>
                    </div>

                    <div class="form-group m-form__group">
                        <div class="m-form__group-sub col-lg-12">
                            <label class="required-form-label form-control-label">Resolución</label>
                            <div class="custom-file">
                                <input type="file" name="Resolution" class="custom-file-input" name="Resolution" accept="application/pdf" lang="es" />
                                <label class="custom-file-label">
                                    Seleccione un archivo
                                </label>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary btn-submit-history">Guadar</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                </div>
            </form>

        </div>
    </div>
</div>


@section Scripts {
<script src="~/js/areas/admin/updatestudentgrade/index.js" asp-append-version="true"></script>
}

