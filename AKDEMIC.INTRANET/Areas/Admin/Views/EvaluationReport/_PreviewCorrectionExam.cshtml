@model AKDEMIC.INTRANET.Areas.Admin.Models.EvaluationReportViewModels.ActaScoresViewModel

@{
    Layout = null;
}

<div class="text-left">
    <div class="row mb-2">
        <div class="col-12 text-center h4">
            <strong>VISTA PREVIA @(!string.IsNullOrEmpty(Model.Number) ? $"- COD : {Model.Number}" : "") </strong> <br />
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-6">
            <strong>ACTA DE EVALUACIONES : </strong> SUBSANACIÓN ESPECIAL <br />
        </div>
        <div class="col-6">
            <strong>FACULTAD : </strong>@Model.BasicInformation.Faculty<br />
        </div>
        <div class="col-6">
            <strong>COMPONENTE CURRICULAR : </strong>@Model.BasicInformation.Course<br />
        </div>
        <div class="col-6">
            <strong>ESCUELA PROFESIONAL : </strong> @Model.BasicInformation.Career<br />
        </div>
        <div class="col-6">
            <strong>CRÉDITOS: </strong> @Model.BasicInformation.Credits<br />
        </div>
        @if (Model.Date != DateTime.MinValue)
        {
            <div class="col-6">
                <strong>ÚLTIMA IMPRESIÓN : </strong> @Model.Date <br />
            </div>
        }
    </div>
</div>

<table class="table table-striped table-bordered" id="data-table-preview-2">
    <thead>
        <tr>
            <th colspan="3" style="border:0px;"></th>
            <th colspan="2" class="bold center header2">PROMEDIO FINAL</th>
        </tr>
        <tr>
            <th colspan="1" class="bold center">N°</th>
            <th colspan="2" class="bold center">APELLIDOS Y NOMBRES</th>

            <th class="bold center">Número</th>
            <th class="bold center">Letras</th>
        </tr>
    </thead>
    <tbody>
        @for (var i = 0; i < Model.Rows.Count; i++)
        {
            <tr style="text-align:center;">
                <th class="thd" style="text-align: center;">@Model.Rows[i].Order</th>
                <th class="thd" style="border-right:0px !important;">@Model.Rows[i].Code - @Model.Rows[i].Surnames , @Model.Rows[i].Names</th>
                <th class="thd" style="width:100px; border-left:0px !important;">&emsp;</th>

                @if (!Model.Rows[i].FinalEvaluation.HasValue)
                {
                    <th class="red thd" style="text-align: center !important;">-</th>
                    <th class="red thd" style="text-align: center !important;">-</th>
                }
                else
                {
                    @if (Model.Rows[i].FinalEvaluationNumber < Model.Approbed)
                    {
                        <th class="red thd" style="text-align: center !important;">@($"{Model.Rows[i].FinalEvaluation:00}")</th>
                        <th class="red thd" style="text-align: center !important;">@Model.Rows[i].FinalEvaluationText</th>
                    }
                    else
                    {
                        <th class="thd" style="font-weight:bold; text-align:center !important;">@($"{Model.Rows[i].FinalEvaluation:00}")</th>
                        <th class="thd" style="font-weight:bold; text-align:center !important;">@Model.Rows[i].FinalEvaluationText</th>
                    }
                }

            </tr>
        }

        @if (Model.Rows.Count == 0)
        {
            <tr>
                <th class="center" colspan="12">No hay estudiantes en la sección</th>
            </tr>
        }

    </tbody>
</table>