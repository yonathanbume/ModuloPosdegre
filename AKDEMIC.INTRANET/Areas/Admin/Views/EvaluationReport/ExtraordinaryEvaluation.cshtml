@inject AKDEMIC.SERVICE.Services.Generals.Interfaces.IConfigurationService _configurationService

@{
    ViewData["Title"] = "Generación de Actas de Evaluaciones Extraordinarias";
    ViewData["Breadcrumbs"] = new[] {
new BreadcrumbViewData { Name = "Generación de Actas", Area = "Admin", Controller = "EvaluationReport", Action = "EvaluationReport" },
    new BreadcrumbViewData { Name =  ViewData["Title"].ToString() }
    };

    var types = Newtonsoft.Json.JsonConvert.DeserializeObject<List<int>>(await _configurationService.GetValueByKey(AKDEMIC.CORE.Helpers.ConstantHelpers.Configuration.IntranetManagement.EXTRAORDINARY_EVALUATION_TYPES_ENABLED));
}

<div class="m-content">
    <div class="m-portlet">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <h3 class="m-portlet__head-text">
                        Listado de evaluaciones extraordinarias
                    </h3>
                </div>
            </div>
        </div>
        <div class="m-portlet__body">
            <div class="m-form--label-align-right m--margin-bottom-20">
                <div class="row align-items-center">
                    <div class="col-xl-12 order-2 order-xl-1">
                        <div class="row">
                            <div class="form-group m-form__group col-xl-3">
                                <label>Periodo:</label>
                                <select id="term_select" class="m-select2">
                                </select>
                            </div>

                            <div class="form-group m-form__group col-xl-3">
                                <label>Tipo:</label>
                                <select id="type_filter" class="form-control m-select2" required>
                                    <option selected>Todos</option>
                                    @foreach (var item in ConstantHelpers.Intranet.ExtraordinaryEvaluation.TYPES.Where(x => types.Contains(x.Key)))
                                    {
                                        <option value="@item.Key">@item.Value</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <table class="table table-striped table-bordered" id="data-table"></table>
        </div>
    </div>
</div>

<div id="previewView" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <div id="preview-datatable" style="text-align:center;">
                </div>
            </div>
            <div class="modal-footer">
                <div style="text-align:right;">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">
                        Cerrar
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/lib/jquery.fileDownload/jquery.fileDownload.min.js"></script>
    <script src="~/js/areas/admin/evaluationreport/extraordinaryevaluation.js" asp-append-version="true"></script>
}