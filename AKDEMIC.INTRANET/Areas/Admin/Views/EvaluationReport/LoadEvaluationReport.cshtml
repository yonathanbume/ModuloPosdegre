@{
    ViewData["Title"] = "Cargar actas históricas";
    ViewData["Breadcrumbs"] = new[] {
    new BreadcrumbViewData { Name = "Buscador de Actas", Action="Search", Controller = "EvaluatioNReport", Area="Admin"  },
    new BreadcrumbViewData { Name = "Buscador de Actas Emitidas",Url= "/admin/generacion-actas/buscador/actas-emitidas"  },
    new BreadcrumbViewData { Name = ViewData["Title"].ToString()},
    };
}


<div class="m-content">
    <div class="m-portlet">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <h3 class="m-portlet__head-text">
                        @ViewData["Title"]
                    </h3>
                </div>
            </div>
            <div class="m-portlet__head-tools">
                <a href="/admin/generacion-actas/cargar-actas-historicas/descargar-formato" target="_blank" class="btn btn-primary btn-sm m-btn  m-btn m-btn--icon">
                    <span>
                        <i class="la la-download"></i>
                        <span>Descargar formato de carga</span>
                    </span>
                </a>
            </div>
        </div>
        <div class="m-portlet__body">
            <div class="m-form--label-align-right m--margin-bottom-10">
                <div class="row align-items-center">
                    <div class="col-xl-12">
                        <div class="row">
                            <div class="form-group m-form__group col-xl-12">
                                <label>Archivo EXCEL</label>
                                <div id="file-selector-container" class="custom-file">
                                    <input type="file" id="input_file" class="custom-file-input" lang="es" accept="application/vnd.openxmlformats-officedocument.spreadsheetml.sheet, application/vnd.ms-excel" />
                                    <label class="custom-file-label">
                                        Seleccione un archivo
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group m-form__group col-xl-12 text-right">
                                <button id="btn_load_file" type="button" class="btn btn-primary btn-md m-btn  m-btn m-btn--icon">
                                    <span>
                                        <i class="la la-upload"></i>
                                        <span>Cargar EXCEL</span>
                                    </span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <table class="table table-striped table-bordered" id="data-table"></table>
            <div class="row mt-4">
                <div class="col-12">
                    <button type="button" id="btn_proccess" class="btn btn-primary btn-block">Procesar Actas</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script src="~/js/areas/admin/evaluationreport/load_evaluation_report.js"></script>
}

