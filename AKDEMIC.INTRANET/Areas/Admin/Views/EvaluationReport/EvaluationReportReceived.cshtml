@{
    ViewData["Title"] = "Actas Recepcionadas";
    ViewData["Breadcrumbs"] = new[] {
    new BreadcrumbViewData { Name = "Buscador de Actas", Action="Search", Controller = "EvaluatioNReport", Area="Admin"  },
    new BreadcrumbViewData { Name = "Actas Recepcionadas"},
    };
}


<div class="m-content">
    <div class="m-portlet">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <h3 class="m-portlet__head-text">
                        @ViewData["Title"]
                    </h3>
                </div>
            </div>
            <div class="m-portlet__head-tools">
                <input class="form-control mr-2" id="evaluation_report_code" placeholder="Buscar por código de acta." />
                <button type="button" style="width:50px;" id="search_by_code" class="btn btn-primary m-btn m-btn--icon btn-lg m-btn--icon-only">
                    <i class="la la-search"></i>
                </button>
            </div>
        </div>
        <div class="m-portlet__body">
            <div class="m-form--label-align-right m--margin-bottom-10">
                <div class="row align-items-center">
                    <div class="col-xl-12">
                        <div class="row">
                            <div class="form-group m-form__group col-xl-3">
                                <label>Periodo Acad&eacute;mico:</label>
                                <select id="term_select" class="m-select2">
                                    <option></option>
                                </select>
                            </div>
                            <div class="form-group m-form__group col-xl-4">
                                <label>Escuela Profesional:</label>
                                <select id="career_select" class="m-select2">
                                    <option value="0" selected disabled>Seleccione una Escuela Profesional</option>
                                </select>
                            </div>
                            <div class="form-group m-form__group col-xl-2">
                                <label>Plan de Estudio:</label>
                                <select id="curriculum_select" class="m-select2" disabled>
                                    <option value="0"> Seleccione un Plan</option>
                                </select>
                            </div>
                            <div class="form-group m-form__group col-xl-3">
                                <label>Curso:</label>
                                <div class="m-input m-input-icon m-input-icon--left">
                                    <input type="text" class="form-control m-input" placeholder="Buscar por código o nombre del curso..." id="course_input">
                                    <span class="m-input-icon__icon m-input-icon__icon--left">
                                        <span><i class="la la-search"></i></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <table class="table table-striped table-bordered" id="data-table"></table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/lib/jquery.fileDownload/jquery.fileDownload.min.js"></script>
    <script src="~/js/areas/admin/evaluationreport/evaluationreportreceived.js" asp-append-version="true"></script>
}

