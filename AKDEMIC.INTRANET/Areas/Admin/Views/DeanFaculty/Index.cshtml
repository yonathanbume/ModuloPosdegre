<!--begin::Modal-->
<div class="modal fade" id="edit_term_modal" role="dialog" aria-labelledby="editLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-primary font-weight-bold" id="edit-label">
                    Gestión de Decano
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="edit-form" asp-controller="DeanFaculty" asp-action="EditDeanFaculty">
                <div class="modal-body">
                    <div class="m-alert m-alert--icon alert alert-danger m--hide" role="alert" id="edit-form-alert">
                        <div class="m-alert__icon">
                            <i class="la la-warning"></i>
                        </div>
                        <div class="m-alert__text" id="edit-form-alert-txt">
                            Oh rayos! Ocurri&oacute; un error en el servidor
                        </div>
                        <div class="m-alert__close">
                            <button type="button" class="close" data-close="alert" aria-label="Close"></button>
                        </div>
                    </div>
                    <input id="Id" name="Id" hidden />

                    <div class="form-group m-form__group">
                        <label for="DeanId">Decano:</label>
                        <select name="DeanId" class="form-control m-select2" id="DeanId">
                        </select>
                    </div>
                    <div class="form-group m-form__group">
                        <label for="DeanGrade">Grado de Decano:</label>
                        <input class="form-control m-input" name="DeanGrade" id="DeanGrade" />
                    </div>
                    <div class="form-group m-form__group">
                        <label for="SecretaryId">Secretario:</label>
                        <select name="SecretaryId" class="form-control m-select2" id="SecretaryId">
                        </select>
                    </div>
                    <div class="form-group m-form__group">
                        <label for="SecretaryId">Resolución:</label>
                        <input name="Resolution" class="form-control" />
                    </div>
                    <div class="form-group m-form__group">
                        <label for="AdministrativeAssistantId">Asistente Administrativo:</label>
                        <select name="AdministrativeAssistantId" class="form-control m-select2" id="AdministrativeAssistantId">
                        </select>
                    </div>
                    <div class="form-group m-form__group">
                        <label class="form-control-label">Archivo de Resolución</label>
                        <div class="custom-file">
                            <input type="file" name="ResolutionFile" class="custom-file-input cp-document-file" lang="es" accept="application/pdf,application/msword,.docx" />
                            <label class="custom-file-label">
                                Seleccione un archivo
                            </label>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">
                        Cerrar
                    </button>
                    <button id="btnSave" type="submit" class="btn btn-primary ladda-button" data-style="slide-down">
                        <span class="ladda-label">Guardar</span>
                        <span class="ladda-spinner"></span>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
<!--end::Modal-->
