<input id="DoctorView" type="hidden" name="DoctorView" value="@Model.DoctorView" />
<input id="CurrentPsychologicalDiagnostic" type="hidden" name="CurrentPsychologicalDiagnostic" value="@Model.currenthistoricaldiagnostic" />
