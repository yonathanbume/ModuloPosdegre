                @*<button style="margin-top: -5px;margin-left: -10px;" class="btn btn-primary btn-3"><i class="la la-plus"></i></button>*@
                <div class="form-group m-form__group">
                    <div class="col-lg-12">
                        <div class="m-datatable_family_history"></div>
                    </div>
                </div>

                <h3 style="padding:15px;display:inline-block;" class="m-form__heading-title">5. Observación de la conducta</h3>
