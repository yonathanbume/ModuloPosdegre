                            </div>
                            <div class="col-lg-4">
                                <label for="Cycle:">Ciclo:</label>
                                <input id="Cycle" name="Cycle" type="text" class="form-control m-input" value="@Model.Cycle" autocomplete="off" disabled>
                            </div>
                            <div class="col-lg-4">
                                <label for="Phone"> Celular:</label>
                                <input id="Phone" name="Phone" type="text" class="form-control m-input" value="@Model.Phone" autocomplete="off" disabled>
                            </div>
                        </div>
                    </div>
                </div>

                <h3 style="padding:15px; display:inline-block;" class="m-form__heading-title">2. Motivo de Consulta</h3>
                @*<button type="button" style="margin-top: -5px;margin-left: -10px;" class="btn btn-primary btn-1"><i class="la la-plus"></i></button>*@
                <div class="form-group m-form__group">
                    <div class="col-lg-12">

