                <div class="form-group m-form__group">
                    <div class="col-lg-12">
                        <div class="m-datatable_observations"></div>
                    </div>
                </div>


                <h3 style="padding:15px;display:inline-block;" class="m-form__heading-title">6. Impresión Diagnóstica</h3>
                @*<button style="margin-top: -5px;margin-left: -10px;" class="btn btn-primary btn-5"><i class="la la-plus"></i></button>*@
                <div class="form-group m-form__group">
                    <div class="col-lg-12">
                        <div class="m-datatable_diagnostic_impressions"></div>
                    </div>
                </div>


                <h3 style="padding:15px;display:inline-block;" class="m-form__heading-title">7. Historial de diagnósticos psicológicos</h3>
                <div class="form-group m-form__group">
                    <div class="col-lg-12">
                        <div class="m-datatable_historical_diagnostics"></div>
                    </div>
                </div>


                @*<div class="form-group m-form__group">
            <div class="col-lg-12">
                <div class="row">
                    <div class="col-lg-12" style="text-align:right">
                        <button type="button" class="btn btn-primary" id="btn-save-all"> Guardar </button>
                    </div>

                </div>
            </div>
        </div>*@
                <div class="form-group m-form__group">
                    <div class="col-lg-12">
                        <div class="row">
                            <div class="col-lg-12" style="text-align:left">
                                <h3 style="display:inline-block;" class="m-form__heading-title">8. Seguimiento del estudiante</h3>
                                <label style="display: block;" for="select-historical-diagnostics">Seleccionar diagnóstico psicológico</label>
                                <select class="m-select2" id="select-historical-diagnostics" disabled></select>
                            </div>

                        </div>
                    </div>
                </div>

            </form>


        </div>
    </div>

</div>

<div class="modal fade" id="modal_consult_reason" tabindex="-1" role="dialog" aria-hidden="true">

    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Agregar Motivo de Consulta</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="form_consult_reason" method="post">

                    <div class="form-group m-form__group">
                        <div class="row">
                            <div class="col-md-12">
                                <label>Motivo de Consulta*</label>
                                <textarea style="margin-top: 0px;  margin-bottom: 0px; height: 187px;  resize: none;" type="text" name="Description" class="form-control m-input" required></textarea>
                            </div>

                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                        <button type="submit" class="btn btn-primary">Guardar</button>
                    </div>
                </form>
            </div>
            
        </div>
    </div>
</div>

