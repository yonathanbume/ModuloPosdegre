@model AKDEMIC.INTRANET.Areas.Admin.Models.DeferredExamViewModels.DeferredExamViewModel
@{
    ViewBag.Title = "Listado de Estudiantes";
    ViewBag.Breadcrumbs = new[] {
new BreadcrumbViewData { Name = "Gestión de Examenes Aplazados", Controller = "DeferredExam", Action = "Index", Area="Admin"},
new BreadcrumbViewData { Name = ViewBag.Title, Controller = null, Action = null }
};
}
<input type="hidden" id="Id" value="@Model.Id" />
<div class="m-content">
    <div class="m-portlet">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <h3 class="m-portlet__head-text">
                        @ViewBag.Title
                    </h3>
                </div>
            </div>
        </div>
        <div class="m-portlet__body">
            <div class="m-form--label-align-right m--margin-bottom-30">
                <div class="row align-items-center">
                    <div class="col-xl-12 order-1 order-xl-1">
                        <div class="row">
                            <div class="form-group m-form__group col-xl-6">
                                <label>Nombre de Curso</label>
                                <input asp-for="Course" class="m-input form-control" disabled />
                            </div>
                            <div class="form-group m-form__group col-xl-6">
                                <label>Grupo</label>
                                <input asp-for="Section" class="m-input form-control" disabled />
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group m-form__group col-xl-2">
                                <label>&emsp;</label>
                                <div class="m-input m-input-icon m-input-icon--left">
                                    <input type="text" class="form-control m-input m-input--pill m-input--solid" placeholder="Buscar..." id="search">
                                    <span class="m-input-icon__icon m-input-icon__icon--left">
                                        <span><i class="la la-search"></i></span>
                                    </span>
                                </div>
                            </div>
                            <div class="form-group m-form__group col-xl-8"></div>
                            <div class="form-group m-form__group col-xl-2">
                                <div class="form-group m-form__group">
                                    <label>&emsp;</label>
                                    <div class="m-input m-input-icon m-input-icon--left">
                                        <button data-toggle="modal" data-target="#assigned_students_modal" class="btn btn-primary btn-sm m-btn--icon">
                                            <span>
                                                <i class="la la-plus"></i>
                                                <span>Asignar / Remover Estudiantes</span>
                                            </span>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <table class="students-datatable table table-hover table-striped table-bordered" id="ajax_data"></table>
        </div>
    </div>
</div>

<div class="modal fade" id="assigned_students_modal" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">
                    Estudiantes de la Secci&oacute;n @Model.Section
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <table class="table table-hover" id="students_table"></table>
            </div>
        </div>
    </div>
</div>



@section Scripts {
<script src="~/js/areas/admin/deferredexam/detail.js" asp-append-version="true"></script>
}

