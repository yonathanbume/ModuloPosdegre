@model AKDEMIC.INTRANET.Areas.Report.ViewModels.MeritChartViewModels.IndexViewModel
@{
    ViewData["Title"] = "Cuadro de Méritos";
    ViewData["Breadcrumbs"] = new[] {
new BreadcrumbViewData { Name = (string)ViewData["Title"] }
};
}

<div class="m-content">
    <div class="m-portlet">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <h3 class="m-portlet__head-text">
                        <a asp-controller="EnrollmentReport" asp-area="Report" asp-action="Detailed" class="btn btn-primary m-btn m-btn--icon m-btn--icon-only"><i class="la la-arrow-left"></i></a>
                        &nbsp;
                        Generar cuadro de mérito por periodo
                    </h3>
                </div>
            </div>
        </div>
        <div class="m-portlet__body">

            <div class="m-alert m-alert--icon alert alert-info" role="alert" id="approve-form-alert">
                <div class="m-alert__icon">
                    <i class="la la-warning"></i>
                </div>
                <div class="m-alert__text" id="create-form-alert-txt">
                    Se listarán los periodos y escuelas profesionales con cuadros de mérito ya generados
                </div>
            </div>

            <div class="m-form--label-align-right m--margin-bottom-20">
                <div class="row align-items-center">
                    <div class="col-xl-12 order-2 order-xl-1">
                        <div class="row">
                            <div class="form-group m-form__group col-xl-2">
                                <label>Periodo Académico:</label>
                                <select id="term_select" class="m-select2"></select>
                            </div>

                            <div class="form-group m-form__group col-xl-3">
                                <label>Escuela Profesional:</label>
                                <select id="career_select" class="m-select2"></select>
                            </div>
                                                        
                            @if (Model.OrderMeritByCampus)
                            {
                                <div class="form-group m-form__group col-xl-2">
                                    <label>Sede:</label>
                                    <select id="campus_select" class="m-select2">
                                    </select>
                                </div>
                            }

                            @if (Model.OrderMeritByAcademicYear)
                            {
                                <div class="form-group m-form__group col-xl-2">
                                    <label>Ciclo del Estudiante:</label>
                                    <select id="cycle_select" class="m-select2">
                                    </select>
                                </div>
                            }

                            @if (ConstantHelpers.GENERAL.Institution.Value == ConstantHelpers.Institution.UNSCH)
                            {
                                <div class="form-group m-form__group col-xl-2">
                                    <label>Año de Ingreso:</label>
                                    <select id="year_select" class="m-select2">
                                    </select>
                                </div>
                            }

                            <div class="form-group m-form__group col-xl-3">
                                <label>Tipo:</label>
                                <select id="type_select" class="m-select2">
                                    <option value="0">General</option>
                                    <option value="1">Medio Superior</option>
                                    <option value="2">Tercio Superior</option>
                                    <option value="3">Quinto Superior</option>
                                    <option value="4">Décimo Superior</option>
                                </select>
                            </div>

                            <div class="col-xl-2">
                                <label style="display:block">&emsp;</label>
                                <button id="btn-apply" class="btn btn-primary btn-report">
                                    Generar Cuadro
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/lib/jquery.fileDownload/jquery.fileDownload.min.js"></script>
    <script src="~/js/areas/report/meritchart/index.js" asp-append-version="true"></script>
}