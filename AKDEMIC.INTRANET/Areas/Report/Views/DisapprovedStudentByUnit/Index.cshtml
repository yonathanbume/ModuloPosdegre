@{
    ViewData["Title"] = "Desaprobados por Unidad";

    ViewData["Breadcrumbs"] = new[] {
new BreadcrumbViewData { Name = "Reporte de Estudiantes",  Action = "Student" , Controller = "IntranetReport", Area = "Report" },
    new BreadcrumbViewData { Name = ViewData["Title"].ToString() }
    };
}

<div class="m-content">
    <div class="m-portlet">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <h3 class="m-portlet__head-text">
                        <a asp-controller="IntranetReport" asp-area="Report" asp-action="Student" class="btn btn-primary m-btn m-btn--icon m-btn--icon-only"><i class="la la-arrow-left"></i></a>
                        &nbsp;
                        Listado de estudiantes desaprobados por unidad
                    </h3>
                </div>
            </div>
        </div>
        <div class="m-portlet__body">
            <div class="m-form--label-align-right m--margin-bottom-20">
                <div class="row align-items-center">
                    <div class="col-xl-12 order-2 order-xl-1">
                        <div class="row">
                            <div class="form-group m-form__group col-xl-2">
                                <label>Periodo Académico:</label>
                                <select id="term_select" class="m-select2"></select>
                            </div>
                            <div class="form-group m-form__group col-xl-3">
                                <label>Escuela Profesional:</label>
                                <select id="career_select" class="m-select2" disabled="disabled">
                                    <option></option>
                                </select>
                            </div>
                            <div class="form-group m-form__group col-xl-2">
                                <label>Plan:</label>
                                <select id="curriculum_select" class="m-select2" disabled="disabled">
                                    <option></option>
                                </select>
                            </div>
                            <div class="form-group m-form__group col-xl-1">
                                <label>Ciclo:</label>
                                <select id="academicyear_select" class="m-select2" disabled="disabled">
                                    <option></option>
                                </select>
                            </div>
                            <div class="form-group m-form__group col-xl-1">
                                <label>Unidad:</label>
                                <select id="unit_select" class="m-select2" disabled="disabled">
                                    <option></option>
                                </select>
                            </div>

                            <div class="col-xl-2">
                                <label>&emsp;</label>
                                <div class="m-input m-input-icon m-input-icon--left">
                                    <button class="btn btn-primary btn-search btn-block">Buscar</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <table class="table table-striped table-bordered" id="data-table"></table>

        </div>
    </div>
</div>

@section Scripts {
<script src="~/js/lib/jquery.fileDownload/jquery.fileDownload.min.js"></script>
<script src="~/js/areas/report/disapprovedstudentbyunit/index.js" asp-append-version="true"></script>
}