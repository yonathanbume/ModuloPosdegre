@{
    ViewData["Title"] = "Gestión de Reserva de Matrícula";
    ViewData["Breadcrumbs"] = new[] {
new BreadcrumbViewData { Name = "Reserva de Matrícula" }
};
}

<div class="m-content">
    <div class="m-portlet m-portlet--tabs">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <h3 class="m-portlet__head-text">
                        Listado de Reservas de Matrícula
                    </h3>
                </div>
            </div>
        </div>
        <div class="m-portlet__body">
            <div class="m-form--label-align-right m--margin-bottom-20">
                <div class="row align-items-center">
                    <div class="col-xl-12 order-2 order-xl-1">
                        <div class="row">
                            @*<div class="form-group m-form__group col-xl-2">
                            <label>Periodo Académico:</label>
                                <select id="term_select" class="m-select2"></select>
                            </div>*@
                            <div class="form-group m-form__group col-xl-3">
                                <label>Facultad:</label>
                                <select id="faculty_select" class="m-select2"></select>
                            </div>
                            <div class="form-group m-form__group col-xl-3">
                                <label>Escuela:</label>
                                <select id="career_select" class="m-select2" disabled="disabled">
                                    <option></option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <table class="table table-striped table-bordered" id="students_table"></table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/lib/jquery.fileDownload/jquery.fileDownload.min.js"></script>
    <script src="~/js/areas/report/resignationreport/index.js" asp-append-version="true"></script>
}
