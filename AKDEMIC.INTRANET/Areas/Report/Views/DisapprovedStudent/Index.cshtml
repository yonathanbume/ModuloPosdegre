@{
    ViewData["Title"] = "Matriculados en Cursos Desaprobados";

    ViewData["Breadcrumbs"] = new[] {
new BreadcrumbViewData { Name = "Reporte de Estudiantes",  Action = "Student" , Controller = "IntranetReport", Area = "Report" },
    new BreadcrumbViewData { Name = ViewData["Title"].ToString() }
    };
}

<div class="m-content">
    <div class="m-portlet">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <h3 class="m-portlet__head-text">
                        <a asp-controller="IntranetReport" asp-area="Report" asp-action="Student" class="btn btn-primary m-btn m-btn--icon m-btn--icon-only"><i class="la la-arrow-left"></i></a>
                        &nbsp;
                        Listado de estudiantes matriculados en cursos desaprobados
                    </h3>
                </div>
            </div>
        </div>
        <div class="m-portlet__body">
            <div class="m-form--label-align-right m--margin-bottom-20">
                <div class="row align-items-center">
                    <div class="col-xl-12 order-2 order-xl-1">
                        <div class="row">
                            <div class="form-group m-form__group col-xl-3">
                                <label>Periodo Académico:</label>
                                <select id="term_select" class="m-select2"></select>
                            </div>
                            <div class="form-group m-form__group col-xl-3">
                                <label>Facultad:</label>
                                <select id="faculty_select" class="m-select2"></select>
                            </div>
                            <div class="form-group m-form__group col-xl-3">
                                <label>Escuela Profesional:</label>
                                <select id="career_select" class="m-select2" disabled="disabled">
                                    <option></option>
                                </select>
                            </div>
                            <div class="form-group m-form__group col-xl-3">
                                <label>Número de intento:</label>
                                <select id="try_select" class="m-select2">
                                    <option value="a">Todos</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                    <option value="4">4</option>
                                    <option value="5">5</option>
                                    <option value="99">+5</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <table class="table table-striped table-bordered" id="data-table"></table>

        </div>
    </div>
</div>

@section Scripts {
<script src="~/js/lib/jquery.fileDownload/jquery.fileDownload.min.js"></script>
<script src="~/js/areas/report/disapprovedstudent/index.js" asp-append-version="true"></script>
}