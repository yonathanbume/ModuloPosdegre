@{
    ViewBag.Title = "Cursos por Periodo";
    ViewBag.SubTitle = "Docentes";
    ViewBag.Breadcrumbs = new[] {
new BreadcrumbViewData { Name = "Reporte de Docentes",  Action = "Teacher" , Controller = "IntranetReport", Area = "Report" },
new BreadcrumbViewData { Name = ViewBag.Title, Controller = null, Action = null }
};
}

<div class="m-content">
    <div class="m-portlet">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <a asp-controller="IntranetReport" asp-area="Report" asp-action="Teacher" class="btn btn-primary m-btn m-btn--icon m-btn--icon-only"><i class="la la-arrow-left"></i></a>
                    &nbsp;
                    <h3 class="m-portlet__head-text">
                        @ViewBag.Title
                    </h3>
                </div>
            </div>
        </div>
        <div class="m-portlet__body">
            <div class="m-form--label-align-right m--margin-top-20 m--margin-bottom-30">
                <div class="row align-items-center">
                    <div class="col-xl-12 order-2 order-xl-1">
                        <div class="row">
                            <div class="form-group m-form__group col-xl-2">
                                <label>Periodo Acad&eacute;mico</label>
                                <select id="term-select" class="form-control m-input m-select2"></select>
                            </div>
                            <div class="form-group m-form__group col-xl-3">
                                <label>Escuela Profesional</label>
                                <select id="career-select" class="form-control m-input m-select2"></select>
                            </div>
                            <div class="form-group m-form__group col-xl-3">
                                <label>Plan de Estudios</label>
                                <select id="curriculum-select" class="form-control m-input m-select2"></select>
                            </div>
                            <div class="form-group m-form__group col-xl-2">
                                <label>Ciclo Académico</label>
                                <select id="academicyear-select" class="form-control m-input m-select2">
                                    @for (int i = 1; i < 16; i++)
                                    {
                                        <option value="@i">@i</option>
                                    }
                                </select>
                            </div>
                            <div class="form-group m-form__group col-xl-2">
                                <label>&nbsp;</label>
                                <button id="btn-show" class="btn btn-primary btn-block">Mostrar</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <table class="table table-striped table-bordered" id="data-table"></table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/areas/report/courseterm/index.js" asp-append-version="true"></script>>
}
