@{
    ViewData["Title"] = "Tutorados";
    ViewData["Breadcrumbs"] = new[] {
    new BreadcrumbViewData { Name = "Reporte de Estudiantes",  Action = "Student" , Controller = "IntranetReport", Area = "Report" },
    new BreadcrumbViewData { Name = (string)ViewData["Title"] }
    };
}

<div class="m-content">
    <div class="m-portlet">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <a asp-controller="IntranetReport" asp-area="Report" asp-action="Student" class="btn btn-primary m-btn m-btn--icon m-btn--icon-only"><i class="la la-arrow-left"></i></a>
                    &nbsp;
                    <h3 class="m-portlet__head-text">
                        @ViewData["Title"]
                    </h3>
                </div>
            </div>
            <div class="m-portlet__head-tools">
            </div>
        </div>
        <div class="m-portlet__body">
            <div class="m-form--label-align-right m--margin-bottom-20">
                <div class="row align-items-center">
                    <div class="col-xl-12 order-2 order-xl-1">
                        <div class="row">
                            <div class="form-group m-form__group col-sm-12 col-xl-2">
                                <label>Periodo Académico:</label>
                                <select id="term-select" class="m-select2"></select>
                            </div>

                            <div class="form-group m-form__group col-sm-12 col-xl-2">
                                <label>Escuela Profesional:</label>
                                <select id="career-select" class="m-select2"></select>
                            </div>

                            <div class="form-group m-form__group col-xl-2">
                                <label>&nbsp;</label>
                                <div class="m-input-icon m-input-icon--left">
                                    <input type="text" class="form-control m-input m-input--solid" placeholder="Buscar..." id="search">
                                    <span class="m-input-icon__icon m-input-icon__icon--left">
                                        <span><i class="la la-search"></i></span>
                                    </span>
                                </div>
                            </div>

                            <div class="form-group m-form__group col-xl-2">
                                <label>Mostrar solo desaprobados</label>
                                <div>
                                    <span class="m-switch">
                                        <label>
                                            <input type="checkbox" value="true" id="onlydisapproved-switch">
                                            <span></span>
                                        </label>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <table class="table table-striped table-bordered" id="data-table">
                <thead>
                    <tr>
                        <td rowspan="2" width="250px">Tutor</td>
                        <td rowspan="2" width="100px">Código</td>
                        <td rowspan="2">Estudiante</td>
                        <td rowspan="2">Escuela Profesional</td>
                        <td class="text-center" colspan="3" id="prev-term-title">Periodo</td>
                        <td class="text-center" colspan="3" id="term-title">Periodo</td>
                    </tr>
                    <tr>
                        <td class="text-center" width="80px">Cred. Mat.</td>
                        <td class="text-center" width="80px">Cred. Des.</td>
                        <td class="text-center" width="70px">PPS</td>

                        <td class="text-center" width="80px">Cred. Mat.</td>
                        <td class="text-center" width="80px">Cred. Des.</td>
                        <td class="text-center" width="70px">PPS</td>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="grades-modal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    Listado de cursos desaprobados
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <table class="table table-striped table-bordered" id="grades-table"></table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal"> Cerrar </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/areas/report/tutoredstudentprogress/index.js" asp-append-version="true"></script>
}

