@{
    ViewData["Title"] = "Promedio ponderado y aritmético";
    ViewBag.Breadcrumbs = new[] {
    new BreadcrumbViewData { Name = "Reporte de Estudiantes",  Action = "Student" , Controller = "IntranetReport", Area = "Report" },
    new BreadcrumbViewData {Name="Promedio ponderado y aritmético", Controller=null, Action=null},
};
}

<div class="m-content">
    <div class="m-portlet">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption" style="width:100%">
                <div class="m-portlet__head-title" style="width:100%;display: block;">
                    <a asp-controller="IntranetReport" asp-area="Report" asp-action="Student" class="btn btn-primary m-btn m-btn--icon m-btn--icon-only"><i class="la la-arrow-left"></i></a>
                    &nbsp;
                    <h3 class="m-portlet__head-text" style="display:initial;">
                        @ViewData["Title"]
                    </h3>
                </div>
            </div>
        </div>
        <div class="m-portlet__body">
            <div class="m-form--label-align-right">
                <div class="row align-items-center">
                    <div class="col-xl-12 order-2 order-xl-1">
                        <div class="row">
                            <div class="form-group m-form__group col-sm-4">
                                <label>Periodo Académico</label>
                                <select id="termId" class="form-control m-input m-select2">
                                    <option value="0" selected disabled>Seleccione un Periodo Académico</option>
                                </select>
                            </div>
                            <div class="form-group m-form__group col-sm-4">
                                <label>Facultad</label>
                                <select id="facultyId" class="form-control m-input m-select2">
                                    <option value="0" selected disabled>Seleccione una Facultad</option>
                                </select>
                            </div>
                            <div class="form-group m-form__group col-sm-4">
                                <label>Escuela Profesional</label>
                                <select id="careerId" class="form-control m-input m-select2" disabled>
                                    <option value="0" selected disabled>Seleccione una Facultad</option>
                                </select>
                            </div>
                            <div class="form-group m-form__group col-sm-4">
                                <label>Ciclo Académico</label>
                                <select id="academicYear" class="form-control m-input m-select2">
                                    <option value="-99" selected>Todos</option>
                                </select>
                            </div>
                            <div class="form-group m-form__group col-xl-4">
                                <label>&emsp;</label>
                                <div class="m-input m-input-icon m-input-icon--left">
                                    <input type="text" class="form-control m-input m-input--pill m-input--solid" placeholder="Buscar..." id="search">
                                    <span class="m-input-icon__icon m-input-icon__icon--left">
                                        <span><i class="la la-search"></i></span>
                                    </span>
                                </div>
                            </div>
                            <div class="form-group m-form__group col-xl-4">
                                <label>&emsp;</label>
                                <div class="m-input m-input-icon m-input-icon--left">
                                    <button id="btn-search" class="btn btn-primary btn-will-search btn-block">Buscar</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <table class="table table-striped table-bordered" id="data-table"></table>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/areas/report/studentaveragefinalgrade/index.js"></script>
}
