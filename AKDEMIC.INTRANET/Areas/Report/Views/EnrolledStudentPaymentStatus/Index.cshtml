@{
    ViewData["Title"] = "Estado de Pago";
    ViewData["Breadcrumbs"] = new[] {
new BreadcrumbViewData { Name = "Reporte de Estudiantes",  Action = "Student" , Controller = "IntranetReport", Area = "Report" },
new BreadcrumbViewData { Name = (string)ViewData["Title"] }
};
}

<div class="m-content">
    <div class="m-portlet">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <h3 class="m-portlet__head-text">
                        <a asp-controller="IntranetReport" asp-area="Report" asp-action="Student" class="btn btn-primary m-btn m-btn--icon m-btn--icon-only"><i class="la la-arrow-left"></i></a>
                        &nbsp;
                        Listado de estudiantes matriculados y estado de pago
                    </h3>
                </div>
            </div>
        </div>
        <div class="m-portlet__body">
            <div class="m-form--label-align-right m--margin-bottom-20">
                <div class="row align-items-center">
                    <div class="col-xl-12 order-2 order-xl-1">
                        <div class="row">
                            <div class="form-group m-form__group col-xl-2">
                                <label>Periodo Académico:</label>
                                <select id="term_select" class="m-select2"></select>
                            </div>
                            <div class="form-group m-form__group col-xl-2">
                                <label>Facultad:</label>
                                <select id="faculty_select" class="m-select2"></select>
                            </div>
                            <div class="form-group m-form__group col-xl-2">
                                <label>Escuela Profesional:</label>
                                <select id="career_select" class="m-select2" disabled="disabled">
                                    <option></option>
                                </select>
                            </div>
                            <div class="form-group m-form__group col-xl-2">
                                <label>Tipo:</label>
                                <select id="type_select" class="m-select2">
                                    <option>Todos</option>
                                    <option value="1">Matrícula</option>
                                    <option value="2">Otros</option>
                                </select>
                            </div>
                            <div class="form-group m-form__group col-xl-2">
                                <label>Estado:</label>
                                <select id="status_select" class="m-select2">
                                    <option value="1">Todos</option>
                                    <option value="2">Pagados</option>
                                    <option value="3">Por pagar</option>
                                </select>
                            </div>

                            <div class="form-group m-form__group col-xl-2">
                                <label>&nbsp;</label>
                                <div class="m-input-icon m-input-icon--left">
                                    <input type="text" class="form-control m-input m-input--solid" placeholder="Buscar..." id="search">
                                    <span class="m-input-icon__icon m-input-icon__icon--left">
                                        <span><i class="la la-search"></i></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <table class="table table-striped table-bordered" id="students_table"></table>
        </div>
    </div>
</div>

<div class="modal fade" id="payments-modal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    Cursos Matriculados
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <input hidden id="studentId" />
                <div class="user-info">
                    <div class="form-group m-form__group row">
                        <div class="col-md-4 m-form__group-sub">
                            <label>C&oacute;digo:</label>
                            <label id="student-code" class="d-block"></label>
                        </div>
                        <div class="col-md-8 m-form__group-sub">
                            <label>Estudiante:</label>
                            <label id="student-name" class="d-block"></label>
                        </div>
                    </div>
                </div>
                <table class="table table-striped table-bordered" id="payments-table"></table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal"> Cerrar </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/lib/jquery.fileDownload/jquery.fileDownload.min.js"></script>
    <script src="~/js/areas/report/enrolledstudentpaymentstatus/index.js" asp-append-version="true"></script>
}