@{
    ViewData["Title"] = "Estadística de asistencia según remuestreo";
    ViewBag.Breadcrumbs = new[] {
    new BreadcrumbViewData { Name = "Reporte de Estudiantes",  Action = "Student" , Controller = "IntranetReport", Area = "Report" },
    new BreadcrumbViewData { Name = "Reporte de Asistencia de Estudiantes",  Action = "StudentAttendance" , Controller = "IntranetReport", Area = "Report" },
    new BreadcrumbViewData { Name = ViewData["Title"].ToString(), Controller = null, Action = null }
};
}

<div class="m-content">
    <div class="m-portlet">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <a asp-controller="IntranetReport" asp-area="Report" asp-action="Student" class="btn btn-primary m-btn m-btn--icon m-btn--icon-only"><i class="la la-arrow-left"></i></a>
                    &nbsp;
                    <h3 class="m-portlet__head-text">
                        @ViewData["Title"]
                    </h3>
                </div>
            </div>
        </div>
        <div class="m-portlet__body">
            <div class="m-form--label-align-right m--margin-bottom-20">
                <div class="row align-items-center">
                    <div class="col-xl-12 order-2 order-xl-1">
                        <div class="row">
                            <div class="form-group m-form__group col-xl-2">
                                <label>Periodo Académico:</label>
                                <select id="term_select" class="m-select2"></select>
                            </div>

                            <div class="form-group m-form__group col-xl-3">
                                <label>Escuela Profesional:</label>
                                <select id="career_select" class="m-select2" disabled="disabled"></select>
                            </div>

                            <div class="form-group m-form__group col-xl-3">
                                <label>Plan de estudios:</label>
                                <select id="curriculum_select" class="m-select2" disabled="disabled"></select>
                            </div>

                            <div class="form-group m-form__group col-xl-2">
                                <label>&nbsp;</label>
                                <div class="m-input-icon m-input-icon--left">
                                    <input type="text" class="form-control m-input m-input--solid" placeholder="Buscar..." id="search">
                                    <span class="m-input-icon__icon m-input-icon__icon--left">
                                        <span><i class="la la-search"></i></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <table class="table table-striped table-bordered" id="course_table"></table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/lib/jquery.fileDownload/jquery.fileDownload.min.js"></script>
    <script src="~/js/areas/report/courseattendancestatistic/index.js" asp-append-version="true"></script>
}