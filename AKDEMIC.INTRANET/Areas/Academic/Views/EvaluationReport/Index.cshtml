@{
    ViewData["Title"] = "Recepción de Actas Finales";
    ViewData["Breadcrumbs"] = new[] {
new BreadcrumbViewData { Name = "Recepción de Ficha" }
};
}

<div class="m-content">
    <div class="m-portlet">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <h3 class="m-portlet__head-text">
                        Listado de actas emitidas
                    </h3>
                </div>
            </div>
            <div class="m-portlet__head-tools">
                <button class="btn btn-primary btn-sm m-btn m-btn--icon" id="export_excel">
                    <span>
                        <i class="la la-download"></i>
                        <span>Resumenes de Actas Excel</span>
                    </span>
                </button>
                
                <button class="ml-1 btn btn-primary btn-sm m-btn m-btn--icon" id="export_pdf">
                    <span>
                        <i class="la la-download"></i>
                        <span>Resumenes de Actas PDF</span>
                    </span>
                </button>
            </div>
        </div>
        <div class="m-portlet__body">
            <div class="m-form--label-align-right m--margin-bottom-20">
                <div class="row align-items-center">
                    <div class="col-xl-12 order-2 order-xl-1">
                        <div class="row">
                            <div class="form-group m-form__group col-xl-2">
                                <label>&emsp;</label>
                                <div class="m-input m-input-icon m-input-icon--left">
                                    <input type="text" class="form-control m-input m-input--pill m-input--solid" placeholder="Buscar..." id="search">
                                    <span class="m-input-icon__icon m-input-icon__icon--left">
                                        <span><i class="la la-search"></i></span>
                                    </span>
                                </div>
                            </div>
                            <div class="form-group m-form__group col-xl-4">
                                <label>Periodo</label>
                                <select id="term_select" class="m-select2"></select>
                            </div>
                            <div class="form-group m-form__group col-xl-2">
                                <label>Estado</label>
                                <select id="status_select" class="m-select2">
                                    <option>Todos</option>
                                    @for (int i = 1; i <= ConstantHelpers.Intranet.EvaluationReport.NAMESV2.Count; i++)
                                    {
                                        <option value="@i">@ConstantHelpers.Intranet.EvaluationReport.NAMESV2[i]</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <table class="table table-striped table-bordered" id="data-table"></table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/lib/jquery.fileDownload/jquery.fileDownload.min.js"></script>
    <script src="~/js/areas/academic/evaluationreport/index.js" asp-append-version="true"></script>
}