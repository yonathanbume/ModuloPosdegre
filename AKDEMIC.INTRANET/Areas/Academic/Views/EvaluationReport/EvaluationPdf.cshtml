@model AKDEMIC.INTRANET.Areas.Academic.ViewModels.EvaluationReportViewModel.EvaluationPdfViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <title>Resumen de Actas Emitidas</title>
    <style>
        body {
            font-family: "Calibri";
            font-size: 13px;
        }

        h1 {
            margin-bottom: 5px !important;
            font-size: 28px;
        }

        h2 {
            margin: 0px;
            font-size: 18px;
        }

        img {
            top: 0;
            left: 0;
            max-height: 60px;
        }

        header {
            width: 100%;
            text-align: center;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            font-weight: normal;
        }

        th, td {
            border: 1px solid black;
            padding: 3px 3px !important;
        }

        th {
            font-weight: normal;
            text-align: left;
        }

        .red {
            color: red;
        }

        .bold {
            font-weight: bold;
            background-color: lightgray;
        }

        .center {
            text-align: center;
        }

        .header2 {
            font-size: 10px;
            padding: 3px 0px !important;
        }

        .header > th, td {
            border: 1px solid black;
            padding: 5px 3px !important;
        }

        .td-header {
            border: none;
            padding: 0px !important;
        }

        .detail-header {
            font-size: 11px;
            text-align: left;
            font-weight: 600;
        }

        .footer {
            font-size: 15px;
            text-align: center;
            font-style: italic;
            bottom: 0;
            left: 0;
            right: 0;
            margin-bottom: -6px;
        }
        table tr{
            page-break-inside : avoid;
        }
    </style>
</head>
<body>
    <br />
    <div style="position:absolute;text-align: center;padding: 20px 20px;">
        <img src="@Model.Img" />
    </div>
    <header>
        <h1 class="negrita">@GeneralHelpers.GetInstitutionName().ToUpper()</h1>
        <h2 class="negrita">OFICINA DE REGISTRO Y ARCHIVO ACADÉMICO</h2>
        <h2 class="negrita">Resumenes de Actas Emitidas @Model.Term</h2>

    </header>
    <br />
    <table>
        <thead>
            <tr>
                <th class="bold center">Escuela Profesional</th>
                <th class="bold center">Curso</th>
                <th class="bold center">Sección</th>
                <th class="bold center">Fec. Emisión</th>
                <th class="bold center">Profesor(es)</th>
                <th class="bold center">Estado</th>
                <th class="bold center">Fecha de Recepción</th>
            </tr>
        </thead>
        <tbody>
            @for (var i = 0; i < Model.Items.Count; i++)
            {
            <tr>
                <td>@Model.Items[i].Career</td>
                <td>@Model.Items[i].Course</td>
                <td>@Model.Items[i].Section</td>
                <td>@Model.Items[i].CreatedAt</td>
                <td>@Model.Items[i].Teachers</td>
                <td>@Model.Items[i].Status</td>
                <td>@Model.Items[i].ReceptionDate</td>
            </tr>
            }
            @if (Model.Items.Count == 0)
            {
                <tr>
                    <th class="center" colspan="7">No hay actas emitidas</th>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
