<div class="m-portlet__head">
    <div class="m-portlet__head-caption">
        <div class="m-portlet__head-title">
            <h3 class="m-portlet__head-text">
                Listado de Observaciones
            </h3>
        </div>
    </div>
    <div class="m-portlet__head-tools">
        <ul class="m-portlet__nav">
            <li class="m-portlet__nav-item">
                <a href="javascript:void(0)" class="m-portlet__nav-link m-portlet__nav-link--icon index-return"><i class="la la-close"></i></a>
            </li>
        </ul>
    </div>
</div>
<div class="m-portlet__body">
    <div class="m-form--label-align-right m--margin-bottom-20">
        <div class="row align-items-center">
            <div class="col-xl-8 order-2 order-xl-1">
            </div>
            <div class="col-xl-4 order-1 order-xl-2 m--align-right">
                <button class="btn btn-primary btn-sm m-btn m-btn--icon" data-toggle="modal" data-target="#create-observation-modal">
                    <span>
                        <i class="la la-plus"></i>
                        <span>Nueva observaci&oacute;n</span>
                    </span>
                </button>
                <div class="m-separator m-separator--dashed d-xl-none"></div>
            </div>
        </div>
    </div>
    <table class="table table-striped table-bordered" id="observations_table"></table>
</div>

<div id="create-observation-modal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    Nueva observaci&oacute;n
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="create-observation-form" asp-action="CreateObservation" asp-area="Academic" asp-controller="StudentInformation" enctype="multipart/form-data">
                <div class="modal-body">
                    <div class="m-alert m-alert--icon alert alert-danger m--hide" role="alert" id="observation-modal-form-alert">
                        <div class="m-alert__icon">
                            <i class="la la-warning"></i>
                        </div>
                        <div class="m-alert__text" id="observation_msg_txt">
                            Por favor, corrija los errores pertinentes
                        </div>
                        <div class="m-alert__close">
                            <button type="button" class="close" data-close="alert" aria-label="Close"></button>
                        </div>
                    </div>

                    <div class="form-group m-form__group">
                        <label class="required-form-label">Tipo</label>
                        <select name="observationType" class="form-control m-select2" required>
                            <option value="@ConstantHelpers.OBSERVATION_TYPES.OBSERVATION">@ConstantHelpers.OBSERVATION_TYPES.VALUES[ConstantHelpers.OBSERVATION_TYPES.OBSERVATION]</option>
                            <option value="@ConstantHelpers.OBSERVATION_TYPES.EXPULSION">@ConstantHelpers.OBSERVATION_TYPES.VALUES[ConstantHelpers.OBSERVATION_TYPES.EXPULSION]</option>
                            <option value="@ConstantHelpers.OBSERVATION_TYPES.AMNESTY">@ConstantHelpers.OBSERVATION_TYPES.VALUES[ConstantHelpers.OBSERVATION_TYPES.AMNESTY]</option>
                            <option value="@ConstantHelpers.OBSERVATION_TYPES.SANCTIONED">@ConstantHelpers.OBSERVATION_TYPES.VALUES[ConstantHelpers.OBSERVATION_TYPES.SANCTIONED]</option>
                            <option value="@ConstantHelpers.OBSERVATION_TYPES.WITHDRAWN">@ConstantHelpers.OBSERVATION_TYPES.VALUES[ConstantHelpers.OBSERVATION_TYPES.WITHDRAWN]</option>
                            <option value="@ConstantHelpers.OBSERVATION_TYPES.RESIGNATION">@ConstantHelpers.OBSERVATION_TYPES.VALUES[ConstantHelpers.OBSERVATION_TYPES.RESIGNATION]</option>
                            <option value="@ConstantHelpers.OBSERVATION_TYPES.RECOGNITION">@ConstantHelpers.OBSERVATION_TYPES.VALUES[ConstantHelpers.OBSERVATION_TYPES.RECOGNITION]</option>
                        </select>
                    </div>

                    <div class="form-group m-form__group student_observation_term d-none">
                        <label class="required-form-label">Periodo Académico</label>
                        <select name="termId" class="form-control m-select2" required disabled>
                        </select>
                    </div>

                    <div class="form-group m-form__group">
                        <label class="required-form-label">Observaci&oacute;n</label>
                        <textarea name="observation" class="form-control m-input disable-resize"></textarea>
                    </div>

                    <div class="form-group m-form__group">
                        <label>Archivo</label>
                        <div class="custom-file">
                            <input id="observationFile" type="file" name="observationFile" class="custom-file-input">
                            <label class="custom-file-label" for="observationFile">Buscar archivo...</label>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">
                        Cerrar
                    </button>
                    <button type="submit" class="btn btn-primary">
                        Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<div id="detail-observation-modal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    Información de la observaci&oacute;n
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group m-form__group">
                    <label class="required-form-label">Periodo Académico</label>
                    <input class="form-control" name="termName" readonly/>
                </div>
                  <div class="form-group m-form__group">
                    <label class="required-form-label">Tipo</label>
                    <input class="form-control" name="observationType" readonly/>
                </div>
                <div class="form-group m-form__group">
                    <label class="required-form-label">Observaci&oacute;n</label>
                    <textarea name="observation" rows="4" class="form-control m-input disable-resize" readonly></textarea>
                </div>
                <div id="fileContainer" style="display:none" class="form-group m-form__group">
                    <a class="btn btn-sm m-btn btn-primary btn-downloadObservationFile" title="Descargar" download>Descargar Archivo</a>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">
                    Cerrar
                </button>
            </div>
        </div>
    </div>
</div>

<script>
    $('#observationFile').on('change',function(){
        //get the file name
        var fileName = $(this).val();
        //replace the "Choose a file" label
        $(this).next('.custom-file-label').html(fileName);
    })
</script>