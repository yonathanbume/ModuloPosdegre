    <div class="report-header">
        <div class="logo-container" style="">
            <img src="@Model.Image" />
        </div>

        <div class="title-container" style="text-align:center;font-size:17px;">
            <label class="title2">@GeneralHelpers.GetInstitutionName().ToUpper()</label>
