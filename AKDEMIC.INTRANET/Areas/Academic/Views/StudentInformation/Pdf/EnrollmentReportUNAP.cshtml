        }
        <br />
        <strong>
            APELLIDOS Y NOMBRES:
        </strong>&nbsp;  @Model.StudentName
        <br />
        <strong>
            PERIODO ACADEMICO:
        </strong>&nbsp;  @Model.Semester.ToUpper() &emsp; <strong>
            SISTEMA CURRICULAR:
        </strong> &nbsp;
        FLEXIBLE&emsp; <strong>
            CONDICION:
        </strong> &nbsp;
        @Model.StudentCondition.ToUpper()
        <br />
        <strong>
            NIVEL / SEMESTRE DE ESTUDIOS:
        </strong>&nbsp;  @Model.CurrentSemester.ToUpper() &emsp; <strong>
            GRUPO:
        </strong>
        &nbsp;@Model.Group
        <br />
    </div>

    <table class="firstChildTable">
        <tr>
            <td> N° </td>
            <td style="width: 100px"> SEMESTRE </td>
            <td colspan="3"> CURSO </td>
            <td style="width: 80px"> GRUPO </td>
            <td> MODALIDAD </td>
            <td style="width: 80px"> CRED </td>
            <td> DOCENTE </td>
            <td style="width: 80px"> AULA </td>
        </tr>
        @{var count = 1; }
        @foreach (var item in Model.Courses)
        {
            <tr>
                <td style="border-left:1px solid black">&emsp;@count</td>
                <td>&emsp;@item.AcademicYearText</td>
                <td colspan="3">&emsp;@item.CourseName</td>
                <td>&emsp;@item.Section</td>
                <td>&emsp;@item.Modality</td>
                <td style="border-right:1px solid black; width: 20px">&emsp;@item.Credits</td>
                <td>&emsp;</td>
                <td style="border-right:1px solid black">&emsp;</td>
            </tr>
            count++;
        }

        @if (count <= 5)
        {
            while (count <= 5)
            {
                <tr>
                    <td style="border-left:1px solid black">&emsp;</td>
                    <td>&emsp;</td>
                    <td colspan="3">&emsp;</td>
                    <td>&emsp;</td>
                    <td>&emsp;</td>
                    <td style="border-right:1px solid black; width: 20px">&emsp;</td>
                    <td>&emsp;</td>
                    <td style="border-right:1px solid black">&emsp;</td>
                </tr>
                count++;
            }
        }

        <tr style="color:transparent;">
            <td style="border-left:1px solid black">|</td>
            <td>|</td>
            @*<td>|</td>*@
            <td colspan="3">_____________________________________ </td>
            <td>|</td>
            <td>|</td>
            <td style="border-right:1px solid black">|</td>
            <td>|</td>
            <td style="border-right:1px solid black">|</td>
        </tr>

        <tr style="border:1px solid black; height:110px">
            <td style="border:1px solid black;vertical-align:top;padding:5px;font-size:10px;" colspan="6">
                <strong>OBSERVACIONES:</strong>
                @if (Model.IsPronabec)
                {
                    <span> ======== V&Aacute;LIDO SOLO PARA POSTULACI&Oacute;N A BECAS PRONABEC ========</span>
                }
            </td>
            <td style="border:1px solid black; border-right: none; vertical-align:top;padding:5px;font-size:10px;" colspan="1">
                <strong>TOTAL DE CR&Eacute;DITOS: </strong>
            </td>
            <td style="vertical-align:top;padding:5px;font-size:11px;" colspan="1">
                <strong> @((Model.Courses.Sum(x => Convert.ToDecimal(x.Credits))).ToString("0.0")) </strong>
            </td>
            <td style="border:1px solid black;" colspan="2"></td>
        </tr>
        <tr style="border:1px solid black; height:140px">
            <td style="border:1px solid black;vertical-align:bottom;text-align:center" colspan="4">
                <hr style="width:90%">
                <strong>ESTUDIANTE</strong>
            </td>
            <td style="border:1px solid black;vertical-align:bottom;text-align:center" colspan="4">
                <hr style="width:90%">
                <strong>COORDINADOR ACAD&Eacute;MICO</strong>
            </td>
            <td style="border:1px solid black;vertical-align:bottom;text-align:left;padding:5px" colspan="2">
                FECHA DE MATRICULA: @Model.EnrollmentDate
                @*<br />
                    CONTRASEÑA DE CTI:*@
            </td>
        </tr>
        <tr style="border:1px solid black;">
            <td style="border:1px solid black;" colspan="10">
                Fecha: @Model.PrintingDate - Hora: @Model.PrintingHour
            </td>
        </tr>
