@model AKDEMIC.INTRANET.Areas.Academic.ViewModels.ConstancyViewModels.ReportGradesViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <title>Boleta de notas</title>
    <style>
        html, body {
            height: 100%;
        }

        body {
            font-family: "Calibri";
            font-size: 13px;
        }

        h1 {
            margin-bottom: 5px !important;
            font-size: 28px;
        }

        h2 {
            margin: 0px;
            font-size: 18px;
        }

        img {
            top: 0;
            left: 0;
            max-height: 60px;
        }

        header {
            width: 100%;
            text-align: center;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            font-weight: normal;
        }

        th, td {
            border: 1px solid black;
            padding: 3px 3px !important;
        }

        th {
            font-weight: normal;
            text-align: left;
        }

        .red {
            color: red;
        }

        .bold {
            font-weight: bold;
            background-color: lightgray;
        }

        .center {
            text-align: center;
        }

        .header2 {
            font-size: 10px;
            padding: 3px 0px !important;
        }

        .header > th, td {
            border: 1px solid black;
            padding: 5px 3px !important;
        }

        .footer {
            font-size: 16px;
            text-align: center;
            font-style: italic;
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
        }
    </style>
</head>
<body>
    <br />
    <div style="position:absolute;text-align: center;padding: 20px 20px;">
        <img src="@Model.ImagePathLogo" />
    </div>
    <header>
        <h1 class="negrita">@GeneralHelpers.GetInstitutionName().ToUpper()</h1>
        <h2 class="negrita">@Model.HeaderText</h2>
        @*<h2 class="negrita">DIRECCIÓN DE ACTIVIDADES Y SERVICIOS ACADÉMICOS</h2>*@
    </header>
    <br />
    <h2 style="padding-left:5px;">NOTAS POR PERIODO</h2>
    <br />
    <table class="header">
        <tbody>
            <tr>
                <td class="bold" style="width:10%">CODIGO:</td>
                <td style="width:60%">@Model.CodeStudent</td>
                <td class="bold" style="width:16%">SEMESTRE ACADEMICO:</td>
                <td style="width:14%">@Model.ActiveTerm</td>
            </tr>
            <tr>
                <td class="bold">NOMBRES:</td>
                <td style="width:45%" colspan="3">@Model.FullName</td>
            </tr>
            <tr>
                <td class="bold">ESCUELAS:</td>
                <td style="width:45%" colspan="3">@Model.Career</td>
            </tr>
            <tr>
                <td class="bold">SEDE/LUGAR:</td>
                <td>@Model.Campus</td>
                <td class="bold">PROMEDIO PONDERADO:</td>
                <td>@Model.Average</td>
            </tr>
        </tbody>
    </table>
    <br />
    <br />
    <table>
        <thead>
            <tr>
                <th class="bold center">CICLO</th>
                <th class="bold center">CODIGO</th>
                <th class="bold center">CURSO</th>
                <th class="bold center">CREDITOS</th>
                <th class="bold center">NOTA</th>
                <th class="bold center">OBSERVACIÓN</th>
                @*<th class="bold center">ASIST.%</th>*@
            </tr>
        </thead>
        <tbody>
            @for (var i = 0; i < Model.Grades.Count; i++)
            {
                <tr>
                    <th style="text-align:center;">@Model.Grades[i].Ciclo</th>
                    <th>@Model.Grades[i].Code</th>
                    <th>@Model.Grades[i].Course</th>
                    <th style="text-align:center;">@Model.Grades[i].Credits</th>
                    <th style="text-align:center;">@Model.Grades[i].Grades</th>
                    <th style="text-align:center;">@Model.Grades[i].Observation</th>
                    @*<th style="text-align:center;">@Model.Grades[i].Asistance</th>*@
                </tr>
            }
        </tbody>
    </table>
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <div style="width: 100%;">
        <div style="width: 30%; text-align: center;  display: inline-block">
            <label style="border-top: 1px solid black; width: 225px; display: inline-block;font-size: 12px;">
                @*FIRMA DE LA OFICINA DE REGISTRO Y ARCHIVO ACADÉMICO*@
            </label>
        </div>
    </div>
    <div class="footer">
        ESTA BOLETA NO TIENE VALOR OFICIAL SINO CUENTA CON EL SELLO Y FIRMA DE LA OFICINA DE REGISTRO Y ARCHIVO ACADÉMICO
    </div>
</body>
</html>
